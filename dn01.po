msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā sassatavādā sassataṃ attānañca lokañca paññapenti catūhi vatthūhi."
msgstr ""

msgctxt "dn1:79.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā sassatavādā sassataṃ attānañca lokañca paññapenti, sabbe te imeheva catūhi vatthūhi, etesaṃ vā aññatarena;"
msgstr ""

msgctxt "dn1:79.3"
msgid "natthi ito bahiddhā."
msgstr ""

#. </p><p><a class="sc" id="67"></a><a class="pts" id="pts1.17"></a>
msgctxt "dn1:80.1"
msgid "Tayidaṃ, bhikkhave, tathāgato pajānāti:"
msgstr ""

msgctxt "dn1:80.2"
msgid "‘ime diṭṭhiṭṭhānā evaṃgahitā evaṃparāmaṭṭhā evaṃgatikā bhavanti evaṃabhisamparāyā’ti, tañca tathāgato pajānāti, tato ca uttaritaraṃ pajānāti;"
msgstr ""

#. VAR: pajānanaṃ → pajānaṃ (?)
msgctxt "dn1:80.3"
msgid "tañca pajānanaṃ na parāmasati, aparāmasato cassa paccattaññeva nibbuti viditā."
msgstr ""

msgctxt "dn1:80.4"
msgid "Vedanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ viditvā anupādāvimutto, bhikkhave, tathāgato."
msgstr ""

#. </p><p><a class="sc" id="68"></a>
msgctxt "dn1:81.1"
msgid "Ime kho te, bhikkhave, dhammā gambhīrā duddasā duranubodhā santā paṇītā atakkāvacarā nipuṇā paṇḍitavedanīyā, ye tathāgato sayaṃ abhiññā sacchikatvā pavedeti, yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "dn1:82.1"
msgid "Paṭhamabhāṇavāro."
msgstr ""

#. </p><h4>
msgctxt "dn1:83.1"
msgid "3.1.2. Ekaccasassatavāda"
msgstr ""

#. </h4><p><a class="sc" id="69"></a>
msgctxt "dn1:84.1"
msgid "Santi, bhikkhave, eke samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti catūhi vatthūhi."
msgstr ""

msgctxt "dn1:84.2"
msgid "Te ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti catūhi vatthūhi?"
msgstr ""

#. </p><p><a class="sc" id="70"></a>
msgctxt "dn1:85.1"
msgid "Hoti kho so, bhikkhave, samayo, yaṃ kadāci karahaci dīghassa addhuno accayena ayaṃ loko saṃvaṭṭati."
msgstr ""

msgctxt "dn1:85.2"
msgid "Saṃvaṭṭamāne loke yebhuyyena sattā ābhassarasaṃvattanikā honti."
msgstr ""

msgctxt "dn1:85.3"
msgid "Te tattha honti manomayā pītibhakkhā sayaṃpabhā antalikkhacarā subhaṭṭhāyino, ciraṃ dīghamaddhānaṃ tiṭṭhanti."
msgstr ""

#. </p><p><a class="sc" id="71"></a>
msgctxt "dn1:86.1"
msgid "Hoti kho so, bhikkhave, samayo, yaṃ kadāci karahaci dīghassa addhuno accayena ayaṃ loko vivaṭṭati."
msgstr ""

msgctxt "dn1:86.2"
msgid "Vivaṭṭamāne loke suññaṃ brahmavimānaṃ pātubhavati."
msgstr ""

msgctxt "dn1:86.3"
msgid "Atha kho aññataro satto āyukkhayā vā puññakkhayā vā ābhassarakāyā cavitvā suññaṃ brahmavimānaṃ upapajjati."
msgstr ""

msgctxt "dn1:86.4"
msgid "So tattha hoti manomayo pītibhakkho sayampabho antalikkhacaro subhaṭṭhāyī, ciraṃ dīghamaddhānaṃ tiṭṭhati."
msgstr ""

#. </p><p><a class="sc" id="72"></a><a class="pts" id="pts1.18"></a>
#. VAR: uppajjati → upapajjati (s1-3, c1)
msgctxt "dn1:87.1"
msgid "Tassa tattha ekakassa dīgharattaṃ nivusitattā anabhirati paritassanā uppajjati:"
msgstr ""

msgctxt "dn1:87.2"
msgid "‘aho vata aññepi sattā itthattaṃ āgaccheyyun’ti."
msgstr ""

msgctxt "dn1:87.3"
msgid "Atha aññepi sattā āyukkhayā vā puññakkhayā vā ābhassarakāyā cavitvā brahmavimānaṃ upapajjanti tassa sattassa sahabyataṃ."
msgstr ""

msgctxt "dn1:87.4"
msgid "Tepi tattha honti manomayā pītibhakkhā sayaṃpabhā antalikkhacarā subhaṭṭhāyino, ciraṃ dīghamaddhānaṃ tiṭṭhanti."
msgstr ""

#. </p><p><a class="sc" id="73"></a>
msgctxt "dn1:88.1"
msgid "Tatra, bhikkhave, yo so satto paṭhamaṃ upapanno tassa evaṃ hoti:"
msgstr ""

#. VAR: sajitā → sajjitā (s1-3, km) | sañjitā (pts1)
msgctxt "dn1:88.2"
msgid "‘ahamasmi brahmā mahābrahmā abhibhū anabhibhūto aññadatthudaso vasavattī issaro kattā nimmātā seṭṭho sajitā vasī pitā bhūtabhabyānaṃ."
msgstr ""

msgctxt "dn1:88.3"
msgid "Mayā ime sattā nimmitā."
msgstr ""

msgctxt "dn1:88.4"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:88.5"
msgid "Mamañhi pubbe etadahosi:"
msgstr ""

msgctxt "dn1:88.6"
msgid "“aho vata aññepi sattā itthattaṃ āgaccheyyun”ti."
msgstr ""

#. VAR: mama ca → mamañca (bj, s1-3, pts1)
msgctxt "dn1:88.7"
msgid "Iti mama ca manopaṇidhi, ime ca sattā itthattaṃ āgatā’ti."
msgstr ""

#. </p><p><a class="sc" id="74"></a>
#. VAR: upapannā → uppannā (si)
msgctxt "dn1:89.1"
msgid "Yepi te sattā pacchā upapannā, tesampi evaṃ hoti:"
msgstr ""

msgctxt "dn1:89.2"
msgid "‘ayaṃ kho bhavaṃ brahmā mahābrahmā abhibhū anabhibhūto aññadatthudaso vasavattī issaro kattā nimmātā seṭṭho sajitā vasī pitā bhūtabhabyānaṃ."
msgstr ""

msgctxt "dn1:89.3"
msgid "Iminā mayaṃ bhotā brahmunā nimmitā."
msgstr ""

msgctxt "dn1:89.4"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:89.5"
msgid "Imañhi mayaṃ addasāma idha paṭhamaṃ upapannaṃ, mayaṃ panamha pacchā upapannā’ti."
msgstr ""

#. </p><p><a class="sc" id="75"></a>
msgctxt "dn1:90.1"
msgid "Tatra, bhikkhave, yo so satto paṭhamaṃ upapanno, so dīghāyukataro ca hoti vaṇṇavantataro ca mahesakkhataro ca."
msgstr ""

msgctxt "dn1:90.2"
msgid "Ye pana te sattā pacchā upapannā, te appāyukatarā ca honti dubbaṇṇatarā ca appesakkhatarā ca."
msgstr ""

#. </p><p><a class="sc" id="76"></a>
msgctxt "dn1:91.1"
msgid "Ṭhānaṃ kho panetaṃ, bhikkhave, vijjati, yaṃ aññataro satto tamhā kāyā cavitvā itthattaṃ āgacchati."
msgstr ""

msgctxt "dn1:91.2"
msgid "Itthattaṃ āgato samāno agārasmā anagāriyaṃ pabbajati."
msgstr ""

msgctxt "dn1:91.3"
msgid "Agārasmā anagāriyaṃ pabbajito samāno ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte taṃ pubbenivāsaṃ anussarati, tato paraṃ nānussarati."
msgstr ""

#. </p><p><a class="sc" id="77"></a><a class="pts" id="pts1.19"></a>
msgctxt "dn1:92.1"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:92.2"
msgid "‘yo kho so bhavaṃ brahmā mahābrahmā abhibhū anabhibhūto aññadatthudaso vasavattī issaro kattā nimmātā seṭṭho sajitā vasī pitā bhūtabhabyānaṃ, yena mayaṃ bhotā brahmunā nimmitā, so nicco dhuvo sassato avipariṇāmadhammo sassatisamaṃ tatheva ṭhassati."
msgstr ""

msgctxt "dn1:92.3"
msgid "Ye pana mayaṃ ahumhā tena bhotā brahmunā nimmitā, te mayaṃ aniccā addhuvā appāyukā cavanadhammā itthattaṃ āgatā’ti."
msgstr ""

#. VAR: Idaṃ → idaṃ kho (c1)
msgctxt "dn1:92.4"
msgid "Idaṃ, bhikkhave, paṭhamaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti."
msgstr ""

msgctxt "dn1:92.5"
msgid "(1: 5)"
msgstr ""

#. </p><p><a class="sc" id="78"></a>
msgctxt "dn1:93.1"
msgid "Dutiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti?"
msgstr ""

msgctxt "dn1:93.2"
msgid "Santi, bhikkhave, khiḍḍāpadosikā nāma devā, te ativelaṃ hassakhiḍḍāratidhammasamāpannā viharanti."
msgstr ""

#. VAR: sammussati → mussati (bj, pts1) | pamussati (s1-3)
msgctxt "dn1:93.3"
msgid "Tesaṃ ativelaṃ hassakhiḍḍāratidhammasamāpannānaṃ viharataṃ sati sammussati."
msgstr ""

msgctxt "dn1:93.4"
msgid "Satiyā sammosā te devā tamhā kāyā cavanti."
msgstr ""

#. </p><p><a class="sc" id="79"></a>
msgctxt "dn1:94.1"
msgid "Ṭhānaṃ kho panetaṃ, bhikkhave, vijjati yaṃ aññataro satto tamhā kāyā cavitvā itthattaṃ āgacchati."
msgstr ""

msgctxt "dn1:94.2"
msgid "Itthattaṃ āgato samāno agārasmā anagāriyaṃ pabbajati."
msgstr ""

msgctxt "dn1:94.3"
msgid "Agārasmā anagāriyaṃ pabbajito samāno ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte taṃ pubbenivāsaṃ anussarati, tato paraṃ nānussarati."
msgstr ""

#. </p><p><a class="sc" id="80"></a><a class="pts" id="pts1.20"></a>
msgctxt "dn1:95.1"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:95.2"
msgid "‘ye kho te bhonto devā na khiḍḍāpadosikā, te na ativelaṃ hassakhiḍḍāratidhammasamāpannā viharanti."
msgstr ""

msgctxt "dn1:95.3"
msgid "Tesaṃ na ativelaṃ hassakhiḍḍāratidhammasamāpannānaṃ viharataṃ sati na sammussati."
msgstr ""

msgctxt "dn1:95.4"
msgid "Satiyā asammosā te devā tamhā kāyā na cavanti;"
msgstr ""

msgctxt "dn1:95.5"
msgid "niccā dhuvā sassatā avipariṇāmadhammā sassatisamaṃ tatheva ṭhassanti."
msgstr ""

msgctxt "dn1:95.6"
msgid "Ye pana mayaṃ ahumhā khiḍḍāpadosikā, te mayaṃ ativelaṃ hassakhiḍḍāratidhammasamāpannā viharimhā."
msgstr ""

msgctxt "dn1:95.7"
msgid "Tesaṃ no ativelaṃ hassakhiḍḍāratidhammasamāpannānaṃ viharataṃ sati sammussati."
msgstr ""

msgctxt "dn1:95.8"
msgid "Satiyā sammosā evaṃ mayaṃ tamhā kāyā cutā aniccā addhuvā appāyukā cavanadhammā itthattaṃ āgatā’ti."
msgstr ""

msgctxt "dn1:95.9"
msgid "Idaṃ, bhikkhave, dutiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti."
msgstr ""

msgctxt "dn1:95.10"
msgid "(2: 6)"
msgstr ""

#. </p><p><a class="sc" id="81"></a>
msgctxt "dn1:96.1"
msgid "Tatiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti?"
msgstr ""

msgctxt "dn1:96.2"
msgid "Santi, bhikkhave, manopadosikā nāma devā, te ativelaṃ aññamaññaṃ upanijjhāyanti."
msgstr ""

msgctxt "dn1:96.3"
msgid "Te ativelaṃ aññamaññaṃ upanijjhāyantā aññamaññamhi cittāni padūsenti."
msgstr ""

msgctxt "dn1:96.4"
msgid "Te aññamaññaṃ paduṭṭhacittā kilantakāyā kilantacittā."
msgstr ""

msgctxt "dn1:96.5"
msgid "Te devā tamhā kāyā cavanti."
msgstr ""

#. </p><p><a class="sc" id="82"></a>
msgctxt "dn1:97.1"
msgid "Ṭhānaṃ kho panetaṃ, bhikkhave, vijjati yaṃ aññataro satto tamhā kāyā cavitvā itthattaṃ āgacchati."
msgstr ""

msgctxt "dn1:97.2"
msgid "Itthattaṃ āgato samāno agārasmā anagāriyaṃ pabbajati."
msgstr ""

msgctxt "dn1:97.3"
msgid "Agārasmā anagāriyaṃ pabbajito samāno ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte taṃ pubbenivāsaṃ anussarati, tato paraṃ nānussarati."
msgstr ""

#. </p><p><a class="sc" id="83"></a><a class="pts" id="pts1.21"></a>
msgctxt "dn1:98.1"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:98.2"
msgid "‘ye kho te bhonto devā na manopadosikā, te nātivelaṃ aññamaññaṃ upanijjhāyanti."
msgstr ""

msgctxt "dn1:98.3"
msgid "Te nātivelaṃ aññamaññaṃ upanijjhāyantā aññamaññamhi cittāni nappadūsenti."
msgstr ""

msgctxt "dn1:98.4"
msgid "Te aññamaññaṃ appaduṭṭhacittā akilantakāyā akilantacittā."
msgstr ""

msgctxt "dn1:98.5"
msgid "Te devā tamhā kāyā na cavanti, niccā dhuvā sassatā avipariṇāmadhammā sassatisamaṃ tatheva ṭhassanti."
msgstr ""

msgctxt "dn1:98.6"
msgid "Ye pana mayaṃ ahumhā manopadosikā, te mayaṃ ativelaṃ aññamaññaṃ upanijjhāyimhā."
msgstr ""

msgctxt "dn1:98.7"
msgid "Te mayaṃ ativelaṃ aññamaññaṃ upanijjhāyantā aññamaññamhi cittāni padūsimhā, te mayaṃ aññamaññaṃ paduṭṭhacittā kilantakāyā kilantacittā."
msgstr ""

msgctxt "dn1:98.8"
msgid "Evaṃ mayaṃ tamhā kāyā cutā aniccā addhuvā appāyukā cavanadhammā itthattaṃ āgatā’ti."
msgstr ""

msgctxt "dn1:98.9"
msgid "Idaṃ, bhikkhave, tatiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti."
msgstr ""

msgctxt "dn1:98.10"
msgid "(3: 7)"
msgstr ""

#. </p><p><a class="sc" id="84"></a>
msgctxt "dn1:99.1"
msgid "Catutthe ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti?"
msgstr ""

msgctxt "dn1:99.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā takkī hoti vīmaṃsī."
msgstr ""

msgctxt "dn1:99.3"
msgid "So takkapariyāhataṃ vīmaṃsānucaritaṃ sayampaṭibhānaṃ evamāha:"
msgstr ""

msgctxt "dn1:99.4"
msgid "‘yaṃ kho idaṃ vuccati cakkhuṃ itipi sotaṃ itipi ghānaṃ itipi jivhā itipi kāyo itipi, ayaṃ attā anicco addhuvo asassato vipariṇāmadhammo."
msgstr ""

msgctxt "dn1:99.5"
msgid "Yañca kho idaṃ vuccati cittanti vā manoti vā viññāṇanti vā ayaṃ attā nicco dhuvo sassato avipariṇāmadhammo sassatisamaṃ tatheva ṭhassatī’ti."
msgstr ""

msgctxt "dn1:99.6"
msgid "Idaṃ, bhikkhave, catutthaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti."
msgstr ""

msgctxt "dn1:99.7"
msgid "(4: 8)"
msgstr ""

#. </p><p><a class="sc" id="85"></a>
msgctxt "dn1:100.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti catūhi vatthūhi."
msgstr ""

msgctxt "dn1:100.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti, sabbe te imeheva catūhi vatthūhi, etesaṃ vā aññatarena;"
msgstr ""

msgctxt "dn1:100.3"
msgid "natthi ito bahiddhā."
msgstr ""

#. </p><p><a class="sc" id="86"></a><a class="pts" id="pts1.22"></a>
msgctxt "dn1:101.1"
msgid "Tayidaṃ, bhikkhave, tathāgato pajānāti:"
msgstr ""

msgctxt "dn1:101.2"
msgid "‘ime diṭṭhiṭṭhānā evaṅgahitā evaṃparāmaṭṭhā evaṅgatikā bhavanti evaṃabhisamparāyā’ti."
msgstr ""

msgctxt "dn1:101.3"
msgid "Tañca tathāgato pajānāti, tato ca uttaritaraṃ pajānāti, tañca pajānanaṃ na parāmasati, aparāmasato cassa paccattaññeva nibbuti viditā."
msgstr ""

msgctxt "dn1:101.4"
msgid "Vedanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ viditvā anupādāvimutto, bhikkhave, tathāgato."
msgstr ""

#. </p><p><a class="sc" id="87"></a>
msgctxt "dn1:102.1"
msgid "Ime kho te, bhikkhave, dhammā gambhīrā duddasā duranubodhā santā paṇītā atakkāvacarā nipuṇā paṇḍitavedanīyā, ye tathāgato sayaṃ abhiññā sacchikatvā pavedeti, yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><h4>
msgctxt "dn1:103.1"
msgid "3.1.3. Antānantavāda"
msgstr ""

#. </h4><p><a class="sc" id="88"></a>
msgctxt "dn1:104.1"
msgid "Santi, bhikkhave, eke samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti catūhi vatthūhi."
msgstr ""

msgctxt "dn1:104.2"
msgid "Te ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha antānantikā antānantaṃ lokassa paññapenti catūhi vatthūhi?"
msgstr ""

#. </p><p><a class="sc" id="89"></a>
msgctxt "dn1:105.1"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte antasaññī lokasmiṃ viharati."
msgstr ""

#. </p><p><a class="sc" id="90"></a>
msgctxt "dn1:106.1"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:106.2"
msgid "‘antavā ayaṃ loko parivaṭumo."
msgstr ""

msgctxt "dn1:106.3"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:106.4"
msgid "Ahañhi ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusāmi, yathāsamāhite citte antasaññī lokasmiṃ viharāmi."
msgstr ""

msgctxt "dn1:106.5"
msgid "Imināmahaṃ etaṃ jānāmi:"
msgstr ""

msgctxt "dn1:106.6"
msgid "“yathā antavā ayaṃ loko parivaṭumo”’ti."
msgstr ""

msgctxt "dn1:106.7"
msgid "Idaṃ, bhikkhave, paṭhamaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti."
msgstr ""

msgctxt "dn1:106.8"
msgid "(1: 9)"
msgstr ""

#. </p><p><a class="sc" id="91"></a><a class="pts" id="pts1.23"></a>
msgctxt "dn1:107.1"
msgid "Dutiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha antānantikā antānantaṃ lokassa paññapenti?"
msgstr ""

msgctxt "dn1:107.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte anantasaññī lokasmiṃ viharati."
msgstr ""

#. </p><p><a class="sc" id="92"></a>
msgctxt "dn1:108.1"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:108.2"
msgid "‘ananto ayaṃ loko apariyanto."
msgstr ""

msgctxt "dn1:108.3"
msgid "Ye te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn1:108.4"
msgid "“antavā ayaṃ loko parivaṭumo”ti, tesaṃ musā."
msgstr ""

msgctxt "dn1:108.5"
msgid "Ananto ayaṃ loko apariyanto."
msgstr ""

msgctxt "dn1:108.6"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:108.7"
msgid "Ahañhi ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusāmi, yathāsamāhite citte anantasaññī lokasmiṃ viharāmi."
msgstr ""

msgctxt "dn1:108.8"
msgid "Imināmahaṃ etaṃ jānāmi:"
msgstr ""

msgctxt "dn1:108.9"
msgid "“yathā ananto ayaṃ loko apariyanto”’ti."
msgstr ""

msgctxt "dn1:108.10"
msgid "Idaṃ, bhikkhave, dutiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti."
msgstr ""

msgctxt "dn1:108.11"
msgid "(2: 10)"
msgstr ""

#. </p><p><a class="sc" id="93"></a>
msgctxt "dn1:109.1"
msgid "Tatiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha antānantikā antānantaṃ lokassa paññapenti?"
msgstr ""

msgctxt "dn1:109.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte uddhamadho antasaññī lokasmiṃ viharati, tiriyaṃ anantasaññī."
msgstr ""

#. </p><p><a class="sc" id="94"></a>
msgctxt "dn1:110.1"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:110.2"
msgid "‘antavā ca ayaṃ loko ananto ca."
msgstr ""

msgctxt "dn1:110.3"
msgid "Ye te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn1:110.4"
msgid "“antavā ayaṃ loko parivaṭumo”ti, tesaṃ musā."
msgstr ""

msgctxt "dn1:110.5"
msgid "Yepi te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn1:110.6"
msgid "“ananto ayaṃ loko apariyanto”ti, tesampi musā."
msgstr ""

msgctxt "dn1:110.7"
msgid "Antavā ca ayaṃ loko ananto ca."
msgstr ""

msgctxt "dn1:110.8"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:110.9"
msgid "Ahañhi ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusāmi, yathāsamāhite citte uddhamadho antasaññī lokasmiṃ viharāmi, tiriyaṃ anantasaññī."
msgstr ""

msgctxt "dn1:110.10"
msgid "Imināmahaṃ etaṃ jānāmi:"
msgstr ""

msgctxt "dn1:110.11"
msgid "“yathā antavā ca ayaṃ loko ananto cā”’ti."
msgstr ""

msgctxt "dn1:110.12"
msgid "Idaṃ, bhikkhave, tatiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti."
msgstr ""

msgctxt "dn1:110.13"
msgid "(3: 11)"
msgstr ""

#. </p><p><a class="sc" id="95"></a><a class="pts" id="pts1.24"></a>
msgctxt "dn1:111.1"
msgid "Catutthe ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha antānantikā antānantaṃ lokassa paññapenti?"
msgstr ""

msgctxt "dn1:111.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā takkī hoti vīmaṃsī."
msgstr ""

msgctxt "dn1:111.3"
msgid "So takkapariyāhataṃ vīmaṃsānucaritaṃ sayampaṭibhānaṃ evamāha:"
msgstr ""

msgctxt "dn1:111.4"
msgid "‘nevāyaṃ loko antavā, na panānanto."
msgstr ""

msgctxt "dn1:111.5"
msgid "Ye te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn1:111.6"
msgid "“antavā ayaṃ loko parivaṭumo”ti, tesaṃ musā."
msgstr ""

msgctxt "dn1:111.7"
msgid "Yepi te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn1:111.8"
msgid "“ananto ayaṃ loko apariyanto”ti, tesampi musā."
msgstr ""

msgctxt "dn1:111.9"
msgid "Yepi te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn1:111.10"
msgid "“antavā ca ayaṃ loko ananto cā”ti, tesampi musā."
msgstr ""

msgctxt "dn1:111.11"
msgid "Nevāyaṃ loko antavā, na panānanto’ti."
msgstr ""

msgctxt "dn1:111.12"
msgid "Idaṃ, bhikkhave, catutthaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti."
msgstr ""

msgctxt "dn1:111.13"
msgid "(4: 12)"
msgstr ""

#. </p><p><a class="sc" id="96"></a>
msgctxt "dn1:112.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti catūhi vatthūhi."
msgstr ""

msgctxt "dn1:112.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā antānantikā antānantaṃ lokassa paññapenti, sabbe te imeheva catūhi vatthūhi, etesaṃ vā aññatarena;"
msgstr ""

msgctxt "dn1:112.3"
msgid "natthi ito bahiddhā."
msgstr ""

#. </p><p><a class="sc" id="97"></a>
msgctxt "dn1:113.1"
msgid "Tayidaṃ, bhikkhave, tathāgato pajānāti:"
msgstr ""

msgctxt "dn1:113.2"
msgid "‘ime diṭṭhiṭṭhānā evaṅgahitā evaṃparāmaṭṭhā evaṅgatikā bhavanti evaṃabhisamparāyā’ti."
msgstr ""

msgctxt "dn1:113.3"
msgid "Tañca tathāgato pajānāti, tato ca uttaritaraṃ pajānāti, tañca pajānanaṃ na parāmasati, aparāmasato cassa paccattaññeva nibbuti viditā."
msgstr ""

msgctxt "dn1:113.4"
msgid "Vedanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ viditvā anupādāvimutto, bhikkhave, tathāgato."
msgstr ""

#. </p><p><a class="sc" id="98"></a>
msgctxt "dn1:114.1"
msgid "Ime kho te, bhikkhave, dhammā gambhīrā duddasā duranubodhā santā paṇītā atakkāvacarā nipuṇā paṇḍitavedanīyā, ye tathāgato sayaṃ abhiññā sacchikatvā pavedeti, yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><h4>
msgctxt "dn1:115.1"
msgid "3.1.4. Amarāvikkhepavāda"
msgstr ""

#. </h4><p><a class="sc" id="99"></a>
msgctxt "dn1:116.1"
msgid "Santi, bhikkhave, eke samaṇabrāhmaṇā amarāvikkhepikā, tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ catūhi vatthūhi."
msgstr ""

msgctxt "dn1:116.2"
msgid "Te ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ catūhi vatthūhi?"
msgstr ""

#. </p><p><a class="sc" id="100"></a><a class="pts" id="pts1.25"></a>
msgctxt "dn1:117.1"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā ‘idaṃ kusalan’ti yathābhūtaṃ nappajānāti, ‘idaṃ akusalan’ti yathābhūtaṃ nappajānāti."
msgstr ""

msgctxt "dn1:117.2"
msgid "Tassa evaṃ hoti:"
msgstr ""

msgctxt "dn1:117.3"
msgid "‘ahaṃ kho “idaṃ kusalan”ti yathābhūtaṃ nappajānāmi, “idaṃ akusalan”ti yathābhūtaṃ nappajānāmi."
msgstr ""

msgctxt "dn1:117.4"
msgid "Ahañce kho pana “idaṃ kusalan”ti yathābhūtaṃ appajānanto, “idaṃ akusalan”ti yathābhūtaṃ appajānanto, “idaṃ kusalan”ti vā byākareyyaṃ, “idaṃ akusalan”ti vā byākareyyaṃ, taṃ mamassa musā."
msgstr ""

msgctxt "dn1:117.5"
msgid "Yaṃ mamassa musā, so mamassa vighāto."
msgstr ""

msgctxt "dn1:117.6"
msgid "Yo mamassa vighāto so mamassa antarāyo’ti."
msgstr ""

msgctxt "dn1:117.7"
msgid "Iti so musāvādabhayā musāvādaparijegucchā nevidaṃ kusalanti byākaroti, na panidaṃ akusalanti byākaroti, tattha tattha pañhaṃ puṭṭho samāno vācāvikkhepaṃ āpajjati amarāvikkhepaṃ:"
msgstr ""

msgctxt "dn1:117.8"
msgid "‘evantipi me no;"
msgstr ""

msgctxt "dn1:117.9"
msgid "tathātipi me no;"
msgstr ""

msgctxt "dn1:117.10"
msgid "aññathātipi me no;"
msgstr ""

msgctxt "dn1:117.11"
msgid "notipi me no;"
msgstr ""

msgctxt "dn1:117.12"
msgid "no notipi me no’ti."
msgstr ""

msgctxt "dn1:117.13"
msgid "Idaṃ, bhikkhave, paṭhamaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ."
msgstr ""

msgctxt "dn1:117.14"
msgid "(1: 13)"
msgstr ""

#. </p><p><a class="sc" id="101"></a><a class="pts" id="pts1.26"></a>
msgctxt "dn1:118.1"
msgid "Dutiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ?"
msgstr ""

msgctxt "dn1:118.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā ‘idaṃ kusalan’ti yathābhūtaṃ nappajānāti, ‘idaṃ akusalan’ti yathābhūtaṃ nappajānāti."
msgstr ""

msgctxt "dn1:118.3"
msgid "Tassa evaṃ hoti:"
msgstr ""

msgctxt "dn1:118.4"
msgid "‘ahaṃ kho “idaṃ kusalan”ti yathābhūtaṃ nappajānāmi, “idaṃ akusalan”ti yathābhūtaṃ nappajānāmi."
msgstr ""

msgctxt "dn1:118.5"
msgid "Ahañce kho pana “idaṃ kusalan”ti yathābhūtaṃ appajānanto, “idaṃ akusalan”ti yathābhūtaṃ appajānanto, “idaṃ kusalan”ti vā byākareyyaṃ, “idaṃ akusalan”ti vā byākareyyaṃ, tattha me assa chando vā rāgo vā doso vā paṭigho vā."
msgstr ""

#. VAR: Yattha → yo (?)
msgctxt "dn1:118.6"
msgid "Yattha me assa chando vā rāgo vā doso vā paṭigho vā, taṃ mamassa upādānaṃ."
msgstr ""

msgctxt "dn1:118.7"
msgid "Yaṃ mamassa upādānaṃ, so mamassa vighāto."
msgstr ""

msgctxt "dn1:118.8"
msgid "Yo mamassa vighāto, so mamassa antarāyo’ti."
msgstr ""

msgctxt "dn1:118.9"
msgid "Iti so upādānabhayā upādānaparijegucchā nevidaṃ kusalanti byākaroti, na panidaṃ akusalanti byākaroti, tattha tattha pañhaṃ puṭṭho samāno vācāvikkhepaṃ āpajjati amarāvikkhepaṃ:"
msgstr ""

msgctxt "dn1:118.10"
msgid "‘evantipi me no;"
msgstr ""

msgctxt "dn1:118.11"
msgid "tathātipi me no;"
msgstr ""

msgctxt "dn1:118.12"
msgid "aññathātipi me no;"
msgstr ""

msgctxt "dn1:118.13"
msgid "notipi me no;"
msgstr ""

msgctxt "dn1:118.14"
msgid "no notipi me no’ti."
msgstr ""

msgctxt "dn1:118.15"
msgid "Idaṃ, bhikkhave, dutiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ."
msgstr ""

msgctxt "dn1:118.16"
msgid "(2: 14)"
msgstr ""

#. </p><p><a class="sc" id="102"></a><a class="pts" id="pts1.27"></a>
msgctxt "dn1:119.1"
msgid "Tatiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ?"
msgstr ""

msgctxt "dn1:119.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā ‘idaṃ kusalan’ti yathābhūtaṃ nappajānāti, ‘idaṃ akusalan’ti yathābhūtaṃ nappajānāti."
msgstr ""

msgctxt "dn1:119.3"
msgid "Tassa evaṃ hoti:"
msgstr ""

msgctxt "dn1:119.4"
msgid "‘ahaṃ kho “idaṃ kusalan”ti yathābhūtaṃ nappajānāmi, “idaṃ akusalan”ti yathābhūtaṃ nappajānāmi."
msgstr ""

msgctxt "dn1:119.5"
msgid "Ahañce kho pana “idaṃ kusalan”ti yathābhūtaṃ appajānanto “idaṃ akusalan”ti yathābhūtaṃ appajānanto “idaṃ kusalan”ti vā byākareyyaṃ, “idaṃ akusalan”ti vā byākareyyaṃ;"
msgstr ""

#. VAR: bhindantā → vobhindantā (bj, pts1)
msgctxt "dn1:119.6"
msgid "santi hi kho samaṇabrāhmaṇā paṇḍitā nipuṇā kataparappavādā vālavedhirūpā, te bhindantā maññe caranti paññāgatena diṭṭhigatāni, te maṃ tattha samanuyuñjeyyuṃ samanugāheyyuṃ samanubhāseyyuṃ."
msgstr ""

msgctxt "dn1:119.7"
msgid "Ye maṃ tattha samanuyuñjeyyuṃ samanugāheyyuṃ samanubhāseyyuṃ, tesāhaṃ na sampāyeyyaṃ."
msgstr ""

msgctxt "dn1:119.8"
msgid "Yesāhaṃ na sampāyeyyaṃ, so mamassa vighāto."
msgstr ""

msgctxt "dn1:119.9"
msgid "Yo mamassa vighāto, so mamassa antarāyo’ti."
msgstr ""

msgctxt "dn1:119.10"
msgid "Iti so anuyogabhayā anuyogaparijegucchā nevidaṃ kusalanti byākaroti, na panidaṃ akusalanti byākaroti, tattha tattha pañhaṃ puṭṭho samāno vācāvikkhepaṃ āpajjati amarāvikkhepaṃ:"
msgstr ""

msgctxt "dn1:119.11"
msgid "‘evantipi me no;"
msgstr ""

msgctxt "dn1:119.12"
msgid "tathātipi me no;"
msgstr ""

msgctxt "dn1:119.13"
msgid "aññathātipi me no;"
msgstr ""

msgctxt "dn1:119.14"
msgid "notipi me no;"
msgstr ""

msgctxt "dn1:119.15"
msgid "no notipi me no’ti."
msgstr ""

msgctxt "dn1:119.16"
msgid "Idaṃ, bhikkhave, tatiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ."
msgstr ""

msgctxt "dn1:119.17"
msgid "(3: 15)"
msgstr ""

#. </p><p><a class="sc" id="103"></a>
msgctxt "dn1:120.1"
msgid "Catutthe ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ?"
msgstr ""

msgctxt "dn1:120.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā mando hoti momūho."
msgstr ""

msgctxt "dn1:120.3"
msgid "So mandattā momūhattā tattha tattha pañhaṃ puṭṭho samāno vācāvikkhepaṃ āpajjati amarāvikkhepaṃ:"
msgstr ""

msgctxt "dn1:120.4"
msgid "‘atthi paro loko’ti iti ce maṃ pucchasi, ‘atthi paro loko’ti iti ce me assa, ‘atthi paro loko’ti iti te naṃ byākareyyaṃ, ‘evantipi me no, tathātipi me no, aññathātipi me no, notipi me no, no notipi me no’ti."
msgstr ""

msgctxt "dn1:120.5"
msgid "‘Natthi paro loko …"
msgstr ""

msgctxt "dn1:120.6"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.7"
msgid "‘atthi ca natthi ca paro loko …"
msgstr ""

msgctxt "dn1:120.8"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.9"
msgid "‘nevatthi na natthi paro loko …"
msgstr ""

msgctxt "dn1:120.10"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.11"
msgid "‘atthi sattā opapātikā …"
msgstr ""

msgctxt "dn1:120.12"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.13"
msgid "‘natthi sattā opapātikā …"
msgstr ""

msgctxt "dn1:120.14"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.15"
msgid "‘atthi ca natthi ca sattā opapātikā …"
msgstr ""

msgctxt "dn1:120.16"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.17"
msgid "‘nevatthi na natthi sattā opapātikā …"
msgstr ""

msgctxt "dn1:120.18"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.19"
msgid "‘atthi sukatadukkaṭānaṃ kammānaṃ phalaṃ vipāko …"
msgstr ""

msgctxt "dn1:120.20"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.21"
msgid "‘natthi sukatadukkaṭānaṃ kammānaṃ phalaṃ vipāko …"
msgstr ""

msgctxt "dn1:120.22"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.23"
msgid "‘atthi ca natthi ca sukatadukkaṭānaṃ kammānaṃ phalaṃ vipāko …"
msgstr ""

msgctxt "dn1:120.24"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.25"
msgid "‘nevatthi na natthi sukatadukkaṭānaṃ kammānaṃ phalaṃ vipāko …"
msgstr ""

msgctxt "dn1:120.26"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.27"
msgid "‘hoti tathāgato paraṃ maraṇā …"
msgstr ""

msgctxt "dn1:120.28"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.29"
msgid "‘na hoti tathāgato paraṃ maraṇā …"
msgstr ""

msgctxt "dn1:120.30"
msgid "pe …"
msgstr ""

#. VAR: hoti ca na ca hoti → hoti ca na hoti ca (bj, pts1, mr)
msgctxt "dn1:120.31"
msgid "‘hoti ca na ca hoti tathāgato paraṃ maraṇā …"
msgstr ""

msgctxt "dn1:120.32"
msgid "pe …"
msgstr ""

msgctxt "dn1:120.33"
msgid "‘neva hoti na na hoti tathāgato paraṃ maraṇā’ti iti ce maṃ pucchasi, ‘neva hoti na na hoti tathāgato paraṃ maraṇā’ti iti ce me assa, ‘neva hoti na na hoti tathāgato paraṃ maraṇā’ti iti te naṃ byākareyyaṃ, ‘evantipi me no, tathātipi me no, aññathātipi me no, notipi me no, no notipi me no’ti."
msgstr ""

msgctxt "dn1:120.34"
msgid "Idaṃ, bhikkhave, catutthaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ."
msgstr ""

msgctxt "dn1:120.35"
msgid "(4: 16)"
msgstr ""

#. </p><p><a class="sc" id="104"></a><a class="pts" id="pts1.28"></a>
msgctxt "dn1:121.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ catūhi vatthūhi."
msgstr ""

msgctxt "dn1:121.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ, sabbe te imeheva catūhi vatthūhi, etesaṃ vā aññatarena, natthi ito bahiddhā …"
msgstr ""

msgctxt "dn1:121.3"
msgid "pe …"
msgstr ""

msgctxt "dn1:121.4"
msgid "yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><h4>
msgctxt "dn1:122.1"
msgid "3.1.5. Adhiccasamuppannavāda"
msgstr ""

#. </h4><p><a class="sc" id="105"></a>
msgctxt "dn1:123.1"
msgid "Santi, bhikkhave, eke samaṇabrāhmaṇā adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti dvīhi vatthūhi."
msgstr ""

msgctxt "dn1:123.2"
msgid "Te ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti dvīhi vatthūhi?"
msgstr ""

#. </p><p><a class="sc" id="106"></a><a class="pts" id="pts1.29"></a>
msgctxt "dn1:124.1"
msgid "Santi, bhikkhave, asaññasattā nāma devā."
msgstr ""

msgctxt "dn1:124.2"
msgid "Saññuppādā ca pana te devā tamhā kāyā cavanti."
msgstr ""

msgctxt "dn1:124.3"
msgid "Ṭhānaṃ kho panetaṃ, bhikkhave, vijjati, yaṃ aññataro satto tamhā kāyā cavitvā itthattaṃ āgacchati."
msgstr ""

msgctxt "dn1:124.4"
msgid "Itthattaṃ āgato samāno agārasmā anagāriyaṃ pabbajati."
msgstr ""

msgctxt "dn1:124.5"
msgid "Agārasmā anagāriyaṃ pabbajito samāno ātappamanvāya padhānamanvāya anuyogamanvāya appamādamanvāya sammāmanasikāramanvāya tathārūpaṃ cetosamādhiṃ phusati, yathāsamāhite citte saññuppādaṃ anussarati, tato paraṃ nānussarati."
msgstr ""

msgctxt "dn1:124.6"
msgid "So evamāha:"
msgstr ""

msgctxt "dn1:124.7"
msgid "‘adhiccasamuppanno attā ca loko ca."
msgstr ""

msgctxt "dn1:124.8"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:124.9"
msgid "Ahañhi pubbe nāhosiṃ, somhi etarahi ahutvā santatāya pariṇato’ti."
msgstr ""

msgctxt "dn1:124.10"
msgid "Idaṃ, bhikkhave, paṭhamaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti."
msgstr ""

msgctxt "dn1:124.11"
msgid "(1: 17)"
msgstr ""

#. </p><p><a class="sc" id="107"></a>
msgctxt "dn1:125.1"
msgid "Dutiye ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti?"
msgstr ""

msgctxt "dn1:125.2"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā takkī hoti vīmaṃsī."
msgstr ""

msgctxt "dn1:125.3"
msgid "So takkapariyāhataṃ vīmaṃsānucaritaṃ sayampaṭibhānaṃ evamāha:"
msgstr ""

msgctxt "dn1:125.4"
msgid "‘adhiccasamuppanno attā ca loko cā’ti."
msgstr ""

msgctxt "dn1:125.5"
msgid "Idaṃ, bhikkhave, dutiyaṃ ṭhānaṃ, yaṃ āgamma yaṃ ārabbha eke samaṇabrāhmaṇā adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti."
msgstr ""

msgctxt "dn1:125.6"
msgid "(2: 18)"
msgstr ""

#. </p><p><a class="sc" id="108"></a>
msgctxt "dn1:126.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti dvīhi vatthūhi."
msgstr ""

msgctxt "dn1:126.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti, sabbe te imeheva dvīhi vatthūhi, etesaṃ vā aññatarena, natthi ito bahiddhā …"
msgstr ""

msgctxt "dn1:126.3"
msgid "pe …"
msgstr ""

msgctxt "dn1:126.4"
msgid "yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><p><a class="sc" id="109"></a>
msgctxt "dn1:127.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā pubbantakappikā pubbantānudiṭṭhino pubbantaṃ ārabbha anekavihitāni adhimuttipadāni abhivadanti aṭṭhārasahi vatthūhi."
msgstr ""

msgctxt "dn1:127.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā pubbantakappikā pubbantānudiṭṭhino pubbantamārabbha anekavihitāni adhimuttipadāni abhivadanti, sabbe te imeheva aṭṭhārasahi vatthūhi, etesaṃ vā aññatarena, natthi ito bahiddhā."
msgstr ""

#. </p><p><a class="sc" id="110"></a>
msgctxt "dn1:128.1"
msgid "Tayidaṃ, bhikkhave, tathāgato pajānāti:"
msgstr ""

msgctxt "dn1:128.2"
msgid "‘ime diṭṭhiṭṭhānā evaṅgahitā evaṃparāmaṭṭhā evaṅgatikā bhavanti evaṃabhisamparāyā’ti."
msgstr ""

msgctxt "dn1:128.3"
msgid "Tañca tathāgato pajānāti, tato ca uttaritaraṃ pajānāti, tañca pajānanaṃ na parāmasati, aparāmasato cassa paccattaññeva nibbuti viditā."
msgstr ""

msgctxt "dn1:128.4"
msgid "Vedanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ viditvā anupādāvimutto, bhikkhave, tathāgato."
msgstr ""

#. </p><p><a class="sc" id="111"></a><a class="pts" id="pts1.30"></a>
msgctxt "dn1:129.1"
msgid "Ime kho te, bhikkhave, dhammā gambhīrā duddasā duranubodhā santā paṇītā atakkāvacarā nipuṇā paṇḍitavedanīyā, ye tathāgato sayaṃ abhiññā sacchikatvā pavedeti, yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "dn1:130.1"
msgid "Dutiyabhāṇavāro."
msgstr ""

#. </p><h3>
msgctxt "dn1:131.1"
msgid "3.2. Aparantakappika"
