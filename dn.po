msgid "So kho, bho, attā yato kāyassa bhedā ucchijjati vinassati, na hoti paraṃ maraṇā, ettāvatā kho, bho, ayaṃ attā sammā samucchinno hotī’ti."
msgstr ""

msgctxt "dn1:182.8"
msgid "Ittheke sato sattassa ucchedaṃ vināsaṃ vibhavaṃ paññapenti."
msgstr ""

msgctxt "dn1:182.9"
msgid "(7: 57)"
msgstr ""

#. </p><p><a class="sc" id="159"></a><a class="pts" id="pts1.36"></a>
msgctxt "dn1:183.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā ucchedavādā sato sattassa ucchedaṃ vināsaṃ vibhavaṃ paññapenti sattahi vatthūhi."
msgstr ""

msgctxt "dn1:183.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā ucchedavādā sato sattassa ucchedaṃ vināsaṃ vibhavaṃ paññapenti, sabbe te imeheva sattahi vatthūhi …"
msgstr ""

msgctxt "dn1:183.3"
msgid "pe …"
msgstr ""

msgctxt "dn1:183.4"
msgid "yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><h4>
msgctxt "dn1:184.1"
msgid "3.2.5. Diṭṭhadhammanibbānavāda"
msgstr ""

#. </h4><p><a class="sc" id="160"></a>
msgctxt "dn1:185.1"
msgid "Santi, bhikkhave, eke samaṇabrāhmaṇā diṭṭhadhammanibbānavādā sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti pañcahi vatthūhi."
msgstr ""

msgctxt "dn1:185.2"
msgid "Te ca bhonto samaṇabrāhmaṇā kimāgamma kimārabbha diṭṭhadhammanibbānavādā sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti pañcahi vatthūhi?"
msgstr ""

#. </p><p><a class="sc" id="161"></a>
msgctxt "dn1:186.1"
msgid "Idha, bhikkhave, ekacco samaṇo vā brāhmaṇo vā evaṃvādī hoti evaṃdiṭṭhi:"
msgstr ""

msgctxt "dn1:186.2"
msgid "‘yato kho, bho, ayaṃ attā pañcahi kāmaguṇehi samappito samaṅgībhūto paricāreti, ettāvatā kho, bho, ayaṃ attā paramadiṭṭhadhammanibbānaṃ patto hotī’ti."
msgstr ""

msgctxt "dn1:186.3"
msgid "Ittheke sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti."
msgstr ""

msgctxt "dn1:186.4"
msgid "(1: 58)"
msgstr ""

#. </p><p><a class="sc" id="162"></a><a class="pts" id="pts1.37"></a>
msgctxt "dn1:187.1"
msgid "Tamañño evamāha:"
msgstr ""

msgctxt "dn1:187.2"
msgid "‘atthi kho, bho, eso attā, yaṃ tvaṃ vadesi, neso natthīti vadāmi;"
msgstr ""

msgctxt "dn1:187.3"
msgid "no ca kho, bho, ayaṃ attā ettāvatā paramadiṭṭhadhammanibbānaṃ patto hoti."
msgstr ""

msgctxt "dn1:187.4"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:187.5"
msgid "Kāmā hi, bho, aniccā dukkhā vipariṇāmadhammā, tesaṃ vipariṇāmaññathābhāvā uppajjanti sokaparidevadukkhadomanassupāyāsā."
msgstr ""

msgctxt "dn1:187.6"
msgid "Yato kho, bho, ayaṃ attā vivicceva kāmehi vivicca akusalehi dhammehi savitakkaṃ savicāraṃ vivekajaṃ pītisukhaṃ paṭhamaṃ jhānaṃ upasampajja viharati, ettāvatā kho, bho, ayaṃ attā paramadiṭṭhadhammanibbānaṃ patto hotī’ti."
msgstr ""

msgctxt "dn1:187.7"
msgid "Ittheke sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti."
msgstr ""

msgctxt "dn1:187.8"
msgid "(2: 59)"
msgstr ""

#. </p><p><a class="sc" id="163"></a>
msgctxt "dn1:188.1"
msgid "Tamañño evamāha:"
msgstr ""

msgctxt "dn1:188.2"
msgid "‘atthi kho, bho, eso attā, yaṃ tvaṃ vadesi, neso natthīti vadāmi;"
msgstr ""

msgctxt "dn1:188.3"
msgid "no ca kho, bho, ayaṃ attā ettāvatā paramadiṭṭhadhammanibbānaṃ patto hoti."
msgstr ""

msgctxt "dn1:188.4"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:188.5"
msgid "Yadeva tattha vitakkitaṃ vicāritaṃ, etenetaṃ oḷārikaṃ akkhāyati."
msgstr ""

msgctxt "dn1:188.6"
msgid "Yato kho, bho, ayaṃ attā vitakkavicārānaṃ vūpasamā ajjhattaṃ sampasādanaṃ cetaso ekodibhāvaṃ avitakkaṃ avicāraṃ samādhijaṃ pītisukhaṃ dutiyaṃ jhānaṃ upasampajja viharati, ettāvatā kho, bho, ayaṃ attā paramadiṭṭhadhammanibbānaṃ patto hotī’ti."
msgstr ""

msgctxt "dn1:188.7"
msgid "Ittheke sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti."
msgstr ""

msgctxt "dn1:188.8"
msgid "(3: 60)"
msgstr ""

#. </p><p><a class="sc" id="164"></a>
msgctxt "dn1:189.1"
msgid "Tamañño evamāha:"
msgstr ""

msgctxt "dn1:189.2"
msgid "‘atthi kho, bho, eso attā, yaṃ tvaṃ vadesi, neso natthīti vadāmi;"
msgstr ""

msgctxt "dn1:189.3"
msgid "no ca kho, bho, ayaṃ attā ettāvatā paramadiṭṭhadhammanibbānaṃ patto hoti."
msgstr ""

msgctxt "dn1:189.4"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:189.5"
msgid "Yadeva tattha pītigataṃ cetaso uppilāvitattaṃ, etenetaṃ oḷārikaṃ akkhāyati."
msgstr ""

msgctxt "dn1:189.6"
msgid "Yato kho, bho, ayaṃ attā pītiyā ca virāgā upekkhako ca viharati, sato ca sampajāno, sukhañca kāyena paṭisaṃvedeti, yaṃ taṃ ariyā ācikkhanti “upekkhako satimā sukhavihārī”ti, tatiyaṃ jhānaṃ upasampajja viharati, ettāvatā kho, bho, ayaṃ attā paramadiṭṭhadhammanibbānaṃ patto hotī’ti."
msgstr ""

msgctxt "dn1:189.7"
msgid "Ittheke sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti."
msgstr ""

msgctxt "dn1:189.8"
msgid "(4: 61)"
msgstr ""

#. </p><p><a class="sc" id="165"></a><a class="pts" id="pts1.38"></a>
msgctxt "dn1:190.1"
msgid "Tamañño evamāha:"
msgstr ""

msgctxt "dn1:190.2"
msgid "‘atthi kho, bho, eso attā, yaṃ tvaṃ vadesi, neso natthīti vadāmi;"
msgstr ""

msgctxt "dn1:190.3"
msgid "no ca kho, bho, ayaṃ attā ettāvatā paramadiṭṭhadhammanibbānaṃ patto hoti."
msgstr ""

msgctxt "dn1:190.4"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn1:190.5"
msgid "Yadeva tattha sukhamiti cetaso ābhogo, etenetaṃ oḷārikaṃ akkhāyati."
msgstr ""

msgctxt "dn1:190.6"
msgid "Yato kho, bho, ayaṃ attā sukhassa ca pahānā dukkhassa ca pahānā pubbeva somanassadomanassānaṃ atthaṅgamā adukkhamasukhaṃ upekkhāsatipārisuddhiṃ catutthaṃ jhānaṃ upasampajja viharati, ettāvatā kho, bho, ayaṃ attā paramadiṭṭhadhammanibbānaṃ patto hotī’ti."
msgstr ""

msgctxt "dn1:190.7"
msgid "Ittheke sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti."
msgstr ""

msgctxt "dn1:190.8"
msgid "(5: 62)"
msgstr ""

#. </p><p><a class="sc" id="166"></a>
msgctxt "dn1:191.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā diṭṭhadhammanibbānavādā sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti pañcahi vatthūhi."
msgstr ""

msgctxt "dn1:191.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā diṭṭhadhammanibbānavādā sato sattassa paramadiṭṭhadhammanibbānaṃ paññapenti, sabbe te imeheva pañcahi vatthūhi …"
msgstr ""

msgctxt "dn1:191.3"
msgid "pe …"
msgstr ""

msgctxt "dn1:191.4"
msgid "yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><p><a class="sc" id="167"></a><a class="pts" id="pts1.39"></a>
msgctxt "dn1:192.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā aparantakappikā aparantānudiṭṭhino aparantaṃ ārabbha anekavihitāni adhimuttipadāni abhivadanti catucattārīsāya vatthūhi."
msgstr ""

msgctxt "dn1:192.2"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā aparantakappikā aparantānudiṭṭhino aparantaṃ ārabbha anekavihitāni adhimuttipadāni abhivadanti, sabbe te imeheva catucattārīsāya vatthūhi …"
msgstr ""

msgctxt "dn1:192.3"
msgid "pe …"
msgstr ""

msgctxt "dn1:192.4"
msgid "yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><p><a class="sc" id="168"></a>
msgctxt "dn1:193.1"
msgid "Imehi kho te, bhikkhave, samaṇabrāhmaṇā pubbantakappikā ca aparantakappikā ca pubbantāparantakappikā ca pubbantāparantānudiṭṭhino pubbantāparantaṃ ārabbha anekavihitāni adhimuttipadāni abhivadanti dvāsaṭṭhiyā vatthūhi."
msgstr ""

#. </p><p><a class="sc" id="169"></a>
msgctxt "dn1:194.1"
msgid "Ye hi keci, bhikkhave, samaṇā vā brāhmaṇā vā pubbantakappikā vā aparantakappikā vā pubbantāparantakappikā vā pubbantāparantānudiṭṭhino pubbantāparantaṃ ārabbha anekavihitāni adhimuttipadāni abhivadanti, sabbe te imeheva dvāsaṭṭhiyā vatthūhi, etesaṃ vā aññatarena;"
msgstr ""

msgctxt "dn1:194.2"
msgid "natthi ito bahiddhā."
msgstr ""

#. </p><p><a class="sc" id="170"></a>
msgctxt "dn1:195.1"
msgid "Tayidaṃ, bhikkhave, tathāgato pajānāti:"
msgstr ""

msgctxt "dn1:195.2"
msgid "‘ime diṭṭhiṭṭhānā evaṅgahitā evaṃparāmaṭṭhā evaṅgatikā bhavanti evaṃabhisamparāyā’ti."
msgstr ""

msgctxt "dn1:195.3"
msgid "Tañca tathāgato pajānāti, tato ca uttaritaraṃ pajānāti, tañca pajānanaṃ na parāmasati, aparāmasato cassa paccattaññeva nibbuti viditā."
msgstr ""

msgctxt "dn1:195.4"
msgid "Vedanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ viditvā anupādāvimutto, bhikkhave, tathāgato."
msgstr ""

#. </p><p><a class="sc" id="171"></a>
msgctxt "dn1:196.1"
msgid "Ime kho te, bhikkhave, dhammā gambhīrā duddasā duranubodhā santā paṇītā atakkāvacarā nipuṇā paṇḍitavedanīyā, ye tathāgato sayaṃ abhiññā sacchikatvā pavedeti, yehi tathāgatassa yathābhuccaṃ vaṇṇaṃ sammā vadamānā vadeyyuṃ."
msgstr ""

#. </p><h2>
msgctxt "dn1:197.1"
msgid "4. Attālokapaññattivatthu"
msgstr ""

#. </h2><h3>
msgctxt "dn1:198.1"
msgid "4.1. Paritassitavipphanditavāra"
msgstr ""

#. </h3><p><a class="sc" id="172"></a><a class="pts" id="pts1.40"></a>
msgctxt "dn1:199.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā sassatavādā sassataṃ attānañca lokañca paññapenti catūhi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="173"></a>
msgctxt "dn1:200.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā ekaccasassatikā ekaccaasassatikā ekaccaṃ sassataṃ ekaccaṃ asassataṃ attānañca lokañca paññapenti catūhi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="174"></a>
msgctxt "dn1:201.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā antānantikā antānantaṃ lokassa paññapenti catūhi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="175"></a>
msgctxt "dn1:202.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā amarāvikkhepikā tattha tattha pañhaṃ puṭṭhā samānā vācāvikkhepaṃ āpajjanti amarāvikkhepaṃ catūhi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="176"></a>
msgctxt "dn1:203.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā adhiccasamuppannikā adhiccasamuppannaṃ attānañca lokañca paññapenti dvīhi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="177"></a>
msgctxt "dn1:204.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā pubbantakappikā pubbantānudiṭṭhino pubbantaṃ ārabbha anekavihitāni adhimuttipadāni abhivadanti aṭṭhārasahi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="178"></a>
msgctxt "dn1:205.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā uddhamāghātanikā saññīvādā uddhamāghātanaṃ saññiṃ attānaṃ paññapenti soḷasahi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="179"></a><a class="pts" id="pts1.41"></a>
msgctxt "dn1:206.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā uddhamāghātanikā asaññīvādā uddhamāghātanaṃ asaññiṃ attānaṃ paññapenti aṭṭhahi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="180"></a>
msgctxt "dn1:207.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā uddhamāghātanikā nevasaññīnāsaññīvādā uddhamāghātanaṃ nevasaññīnāsaññiṃ attānaṃ paññapenti aṭṭhahi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
msgstr ""

#. </p><p><a class="sc" id="181"></a>
msgctxt "dn1:208.1"
msgid "Tatra, bhikkhave, ye te samaṇabrāhmaṇā ucchedavādā sato sattassa ucchedaṃ vināsaṃ vibhavaṃ paññapenti sattahi vatthūhi, tadapi tesaṃ bhavataṃ samaṇabrāhmaṇānaṃ ajānataṃ apassataṃ vedayitaṃ taṇhāgatānaṃ paritassitavipphanditameva."
