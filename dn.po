msgctxt "dn6:32.1"
msgid "…"
msgstr ""

msgctxt "dn6:32.2"
msgid "pe …"
msgstr ""

msgctxt "dn6:32.3"
msgid "Paṭhamaṃ jhānaṃ upasampajja viharati."
msgstr ""

