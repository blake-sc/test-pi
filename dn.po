msgstr ""

#. </p><p><a class="sc" id="29"></a>
msgctxt "dn4:34.1"
msgid "Samaṇo khalu, bho, gotamo uccā kulā pabbajito asambhinnakhattiyakulā …"
msgstr ""

msgctxt "dn4:34.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="30"></a>
msgctxt "dn4:35.1"
msgid "Samaṇo khalu, bho, gotamo aḍḍhā kulā pabbajito mahaddhanā mahābhogā …"
msgstr ""

msgctxt "dn4:35.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="31"></a><a class="pts" id="pts1.116"></a>
msgctxt "dn4:36.1"
msgid "Samaṇaṃ khalu, bho, gotamaṃ tiroraṭṭhā tirojanapadā pañhaṃ pucchituṃ āgacchanti …"
msgstr ""

msgctxt "dn4:36.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="32"></a>
msgctxt "dn4:37.1"
msgid "Samaṇaṃ khalu, bho, gotamaṃ anekāni devatāsahassāni pāṇehi saraṇaṃ gatāni …"
msgstr ""

msgctxt "dn4:37.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="33"></a>
msgctxt "dn4:38.1"
msgid "Samaṇaṃ khalu, bho, gotamaṃ evaṃ kalyāṇo kittisaddo abbhuggato:"
msgstr ""

msgctxt "dn4:38.2"
msgid "‘itipi so bhagavā arahaṃ sammāsambuddho vijjācaraṇasampanno sugato lokavidū anuttaro purisadammasārathi satthā devamanussānaṃ buddho bhagavā’ti …"
msgstr ""

msgctxt "dn4:38.3"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="34"></a>
msgctxt "dn4:39.1"
msgid "Samaṇo khalu, bho, gotamo dvattiṃsamahāpurisalakkhaṇehi samannāgato …"
msgstr ""

msgctxt "dn4:39.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="35"></a>
msgctxt "dn4:40.1"
msgid "Samaṇo khalu, bho, gotamo ehisvāgatavādī sakhilo sammodako abbhākuṭiko uttānamukho pubbabhāsī …"
msgstr ""

msgctxt "dn4:40.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="36"></a>
msgctxt "dn4:41.1"
msgid "Samaṇo khalu, bho, gotamo catunnaṃ parisānaṃ sakkato garukato mānito pūjito apacito …"
msgstr ""

msgctxt "dn4:41.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="37"></a>
msgctxt "dn4:42.1"
msgid "Samaṇe khalu, bho, gotame bahū devā ca manussā ca abhippasannā …"
msgstr ""

msgctxt "dn4:42.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="38"></a>
msgctxt "dn4:43.1"
msgid "Samaṇo khalu, bho, gotamo yasmiṃ gāme vā nigame vā paṭivasati, na tasmiṃ gāme vā nigame vā amanussā manusse viheṭhenti …"
msgstr ""

msgctxt "dn4:43.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="39"></a>
msgctxt "dn4:44.1"
msgid "Samaṇo khalu, bho, gotamo saṅghī gaṇī gaṇācariyo puthutitthakarānaṃ aggamakkhāyati."
msgstr ""

msgctxt "dn4:44.2"
msgid "Yathā kho pana, bho, etesaṃ samaṇabrāhmaṇānaṃ yathā vā tathā vā yaso samudāgacchati, na hevaṃ samaṇassa gotamassa yaso samudāgato."
msgstr ""

msgctxt "dn4:44.3"
msgid "Atha kho anuttarāya vijjācaraṇasampadāya samaṇassa gotamassa yaso samudāgato …"
msgstr ""

msgctxt "dn4:44.4"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="40"></a>
msgctxt "dn4:45.1"
msgid "Samaṇaṃ khalu, bho, gotamaṃ rājā māgadho seniyo bimbisāro saputto sabhariyo sapariso sāmacco pāṇehi saraṇaṃ gato …"
msgstr ""

msgctxt "dn4:45.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="41"></a>
msgctxt "dn4:46.1"
msgid "Samaṇaṃ khalu, bho, gotamaṃ rājā pasenadi kosalo saputto sabhariyo sapariso sāmacco pāṇehi saraṇaṃ gato …"
msgstr ""

msgctxt "dn4:46.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="42"></a>
msgctxt "dn4:47.1"
msgid "Samaṇaṃ khalu, bho, gotamaṃ brāhmaṇo pokkharasāti saputto sabhariyo sapariso sāmacco pāṇehi saraṇaṃ gato …"
msgstr ""

msgctxt "dn4:47.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="43"></a>
msgctxt "dn4:48.1"
msgid "Samaṇo khalu, bho, gotamo rañño māgadhassa seniyassa bimbisārassa sakkato garukato mānito pūjito apacito …"
msgstr ""

msgctxt "dn4:48.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="44"></a>
msgctxt "dn4:49.1"
msgid "Samaṇo khalu, bho, gotamo rañño pasenadissa kosalassa sakkato garukato mānito pūjito apacito …"
msgstr ""

msgctxt "dn4:49.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="45"></a>
msgctxt "dn4:50.1"
msgid "Samaṇo khalu, bho, gotamo brāhmaṇassa pokkharasātissa sakkato garukato mānito pūjito apacito …"
msgstr ""

msgctxt "dn4:50.2"
msgid "pe …"
msgstr ""

#. </p><p><a class="sc" id="46"></a><a class="pts" id="pts1.117"></a>
msgctxt "dn4:51.1"
msgid "Samaṇo khalu, bho, gotamo campaṃ anuppatto, campāyaṃ viharati gaggarāya pokkharaṇiyā tīre."
msgstr ""

msgctxt "dn4:51.2"
msgid "Ye kho pana, bho, keci samaṇā vā brāhmaṇā vā amhākaṃ gāmakhettaṃ āgacchanti atithī no te honti."
msgstr ""

msgctxt "dn4:51.3"
msgid "Atithī kho panamhehi sakkātabbā garukātabbā mānetabbā pūjetabbā apacetabbā."
msgstr ""

msgctxt "dn4:51.4"
msgid "Yampi, bho, samaṇo gotamo campaṃ anuppatto campāyaṃ viharati gaggarāya pokkharaṇiyā tīre, atithimhākaṃ samaṇo gotamo;"
msgstr ""

msgctxt "dn4:51.5"
msgid "atithi kho panamhehi sakkātabbo garukātabbo mānetabbo pūjetabbo apacetabbo."
msgstr ""

msgctxt "dn4:51.6"
msgid "Imināpaṅgena na arahati so bhavaṃ gotamo amhākaṃ dassanāya upasaṅkamituṃ."
msgstr ""

msgctxt "dn4:51.7"
msgid "Atha kho mayameva arahāma taṃ bhavantaṃ gotamaṃ dassanāya upasaṅkamituṃ."
msgstr ""

msgctxt "dn4:51.8"
msgid "Ettake kho ahaṃ, bho, tassa bhoto gotamassa vaṇṇe pariyāpuṇāmi, no ca kho so bhavaṃ gotamo ettakavaṇṇo."
msgstr ""

msgctxt "dn4:51.9"
msgid "Aparimāṇavaṇṇo hi so bhavaṃ gotamo”ti."
msgstr ""

#. </p><p><a class="sc" id="47"></a><a class="wp" id="wp7"></a>
msgctxt "dn4:52.1"
msgid "Evaṃ vutte, te brāhmaṇā soṇadaṇḍaṃ brāhmaṇaṃ etadavocuṃ:"
msgstr ""

msgctxt "dn4:52.2"
msgid "“yathā kho bhavaṃ soṇadaṇḍo samaṇassa gotamassa vaṇṇe bhāsati ito cepi so bhavaṃ gotamo yojanasate viharati, alameva saddhena kulaputtena dassanāya upasaṅkamituṃ api puṭosenā”ti."
msgstr ""

msgctxt "dn4:52.3"
msgid "“Tena hi, bho, sabbeva mayaṃ samaṇaṃ gotamaṃ dassanāya upasaṅkamissāmā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn4:53.1"
msgid "4. Soṇadaṇḍaparivitakka"
msgstr ""

#. </h2><p><a class="sc" id="48"></a><a class="pts" id="pts1.118"></a>
msgctxt "dn4:54.1"
msgid "Atha kho soṇadaṇḍo brāhmaṇo mahatā brāhmaṇagaṇena saddhiṃ yena gaggarā pokkharaṇī tenupasaṅkami."
msgstr ""

#. <a class="wp" id="wp8"></a>
msgctxt "dn4:54.2"
msgid "Atha kho soṇadaṇḍassa brāhmaṇassa tirovanasaṇḍagatassa evaṃ cetaso parivitakko udapādi:"
msgstr ""

msgctxt "dn4:54.3"
msgid "“ahañceva kho pana samaṇaṃ gotamaṃ pañhaṃ puccheyyaṃ;"
msgstr ""

msgctxt "dn4:54.4"
msgid "tatra ce maṃ samaṇo gotamo evaṃ vadeyya:"
msgstr ""

msgctxt "dn4:54.5"
msgid "‘na kho esa, brāhmaṇa, pañho evaṃ pucchitabbo, evaṃ nāmesa, brāhmaṇa, pañho pucchitabbo’ti, tena maṃ ayaṃ parisā paribhaveyya:"
msgstr ""

msgctxt "dn4:54.6"
msgid "‘bālo soṇadaṇḍo brāhmaṇo abyatto, nāsakkhi samaṇaṃ gotamaṃ yoniso pañhaṃ pucchitun’ti."
msgstr ""

msgctxt "dn4:54.7"
msgid "Yaṃ kho panāyaṃ parisā paribhaveyya, yasopi tassa hāyetha."
msgstr ""

msgctxt "dn4:54.8"
msgid "Yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ."
msgstr ""

msgctxt "dn4:54.9"
msgid "Yasoladdhā kho panamhākaṃ bhogā."
msgstr ""

msgctxt "dn4:54.10"
msgid "Mamañceva kho pana samaṇo gotamo pañhaṃ puccheyya, tassa cāhaṃ pañhassa veyyākaraṇena cittaṃ na ārādheyyaṃ;"
msgstr ""

msgctxt "dn4:54.11"
msgid "tatra ce maṃ samaṇo gotamo evaṃ vadeyya:"
msgstr ""

msgctxt "dn4:54.12"
msgid "‘na kho esa, brāhmaṇa, pañho evaṃ byākātabbo, evaṃ nāmesa, brāhmaṇa, pañho byākātabbo’ti, tena maṃ ayaṃ parisā paribhaveyya:"
msgstr ""

msgctxt "dn4:54.13"
msgid "‘bālo soṇadaṇḍo brāhmaṇo abyatto, nāsakkhi samaṇassa gotamassa pañhassa veyyākaraṇena cittaṃ ārādhetun’ti."
msgstr ""

msgctxt "dn4:54.14"
msgid "Yaṃ kho panāyaṃ parisā paribhaveyya, yasopi tassa hāyetha."
msgstr ""

msgctxt "dn4:54.15"
msgid "Yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ."
msgstr ""

msgctxt "dn4:54.16"
msgid "Yasoladdhā kho panamhākaṃ bhogā."
msgstr ""

msgctxt "dn4:54.17"
msgid "Ahañceva kho pana evaṃ samīpagato samāno adisvāva samaṇaṃ gotamaṃ nivatteyyaṃ, tena maṃ ayaṃ parisā paribhaveyya:"
msgstr ""

msgctxt "dn4:54.18"
msgid "‘bālo soṇadaṇḍo brāhmaṇo abyatto mānathaddho bhīto ca, no visahati samaṇaṃ gotamaṃ dassanāya upasaṅkamituṃ, kathañhi nāma evaṃ samīpagato samāno adisvā samaṇaṃ gotamaṃ nivattissatī’ti."
msgstr ""

msgctxt "dn4:54.19"
msgid "Yaṃ kho panāyaṃ parisā paribhaveyya, yasopi tassa hāyetha."
msgstr ""

msgctxt "dn4:54.20"
msgid "Yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ, yasoladdhā kho panamhākaṃ bhogā”ti."
msgstr ""

#. </p><p><a class="sc" id="49"></a><a class="wp" id="wp9"></a>
msgctxt "dn4:55.1"
msgid "Atha kho soṇadaṇḍo brāhmaṇo yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "dn4:55.2"
msgid "upasaṅkamitvā bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "dn4:55.3"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "dn4:55.4"
msgid "Campeyyakāpi kho brāhmaṇagahapatikā appekacce bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu;"
msgstr ""

msgctxt "dn4:55.5"
msgid "appekacce bhagavatā saddhiṃ sammodiṃsu;"
msgstr ""

msgctxt "dn4:55.6"
msgid "sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdiṃsu;"
msgstr ""

msgctxt "dn4:55.7"
msgid "appekacce yena bhagavā tenañjaliṃ paṇāmetvā ekamantaṃ nisīdiṃsu;"
msgstr ""

msgctxt "dn4:55.8"
msgid "appekacce nāmagottaṃ sāvetvā ekamantaṃ nisīdiṃsu;"
msgstr ""

msgctxt "dn4:55.9"
msgid "appekacce tuṇhībhūtā ekamantaṃ nisīdiṃsu."
msgstr ""

#. </p><p><a class="sc" id="50"></a><a class="wp" id="wp10"></a><a class="pts"
#. id="pts1.119"></a>
msgctxt "dn4:56.1"
msgid "Tatrapi sudaṃ soṇadaṇḍo brāhmaṇo etadeva bahulamanuvitakkento nisinno hoti:"
msgstr ""

msgctxt "dn4:56.2"
msgid "“ahañceva kho pana samaṇaṃ gotamaṃ pañhaṃ puccheyyaṃ;"
msgstr ""

msgctxt "dn4:56.3"
msgid "tatra ce maṃ samaṇo gotamo evaṃ vadeyya:"
msgstr ""

msgctxt "dn4:56.4"
msgid "‘na kho esa, brāhmaṇa, pañho evaṃ pucchitabbo, evaṃ nāmesa, brāhmaṇa, pañho pucchitabbo’ti, tena maṃ ayaṃ parisā paribhaveyya:"
msgstr ""

msgctxt "dn4:56.5"
msgid "‘bālo soṇadaṇḍo brāhmaṇo abyatto, nāsakkhi samaṇaṃ gotamaṃ yoniso pañhaṃ pucchitun’ti."
msgstr ""

msgctxt "dn4:56.6"
msgid "Yaṃ kho panāyaṃ parisā paribhaveyya, yasopi tassa hāyetha."
msgstr ""

msgctxt "dn4:56.7"
msgid "Yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ."
msgstr ""

msgctxt "dn4:56.8"
msgid "Yasoladdhā kho panamhākaṃ bhogā."
msgstr ""

msgctxt "dn4:56.9"
msgid "Mamañceva kho pana samaṇo gotamo pañhaṃ puccheyya, tassa cāhaṃ pañhassa veyyākaraṇena cittaṃ na ārādheyyaṃ;"
msgstr ""

msgctxt "dn4:56.10"
msgid "tatra ce maṃ samaṇo gotamo evaṃ vadeyya:"
msgstr ""

msgctxt "dn4:56.11"
msgid "‘na kho esa, brāhmaṇa, pañho evaṃ byākātabbo, evaṃ nāmesa, brāhmaṇa, pañho byākātabbo’ti, tena maṃ ayaṃ parisā paribhaveyya:"
msgstr ""

msgctxt "dn4:56.12"
msgid "‘bālo soṇadaṇḍo brāhmaṇo abyatto, nāsakkhi samaṇassa gotamassa pañhassa veyyākaraṇena cittaṃ ārādhetun’ti."
msgstr ""

msgctxt "dn4:56.13"
msgid "Yaṃ kho panāyaṃ parisā paribhaveyya, yasopi tassa hāyetha."
msgstr ""

msgctxt "dn4:56.14"
msgid "Yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ."
msgstr ""

msgctxt "dn4:56.15"
msgid "Yasoladdhā kho panamhākaṃ bhogā."
msgstr ""

msgctxt "dn4:56.16"
msgid "Aho vata maṃ samaṇo gotamo sake ācariyake tevijjake pañhaṃ puccheyya, addhā vatassāhaṃ cittaṃ ārādheyyaṃ pañhassa veyyākaraṇenā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn4:57.1"
msgid "5. Brāhmaṇapaññatti"
msgstr ""

#. </h2><p><a class="sc" id="51"></a><a class="wp" id="wp11"></a>
msgctxt "dn4:58.1"
msgid "Atha kho bhagavato soṇadaṇḍassa brāhmaṇassa cetasā cetoparivitakkamaññāya etadahosi:"
msgstr ""

msgctxt "dn4:58.2"
msgid "“vihaññati kho ayaṃ soṇadaṇḍo brāhmaṇo sakena cittena."
msgstr ""

msgctxt "dn4:58.3"
msgid "Yannūnāhaṃ soṇadaṇḍaṃ brāhmaṇaṃ sake ācariyake tevijjake pañhaṃ puccheyyan”ti."
msgstr ""

msgctxt "dn4:58.4"
msgid "Atha kho bhagavā soṇadaṇḍaṃ brāhmaṇaṃ etadavoca:"
msgstr ""

msgctxt "dn4:58.5"
msgid "“katihi pana, brāhmaṇa, aṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:58.6"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti?"
msgstr ""

#. </p><p><a class="sc" id="52"></a><a class="wp" id="wp12"></a><a class="pts"
#. id="pts1.120"></a>
msgctxt "dn4:59.1"
msgid "Atha kho soṇadaṇḍassa brāhmaṇassa etadahosi:"
msgstr ""

msgctxt "dn4:59.2"
msgid "“yaṃ vata no ahosi icchitaṃ, yaṃ ākaṅkhitaṃ, yaṃ adhippetaṃ, yaṃ abhipatthitaṃ:"
msgstr ""

msgctxt "dn4:59.3"
msgid "‘aho vata maṃ samaṇo gotamo sake ācariyake tevijjake pañhaṃ puccheyya, addhā vatassāhaṃ cittaṃ ārādheyyaṃ pañhassa veyyākaraṇenā’ti, tatra maṃ samaṇo gotamo sake ācariyake tevijjake pañhaṃ pucchati."
msgstr ""

msgctxt "dn4:59.4"
msgid "Addhā vatassāhaṃ cittaṃ ārādhessāmi pañhassa veyyākaraṇenā”ti."
msgstr ""

#. </p><p><a class="sc" id="53"></a><a class="wp" id="wp13"></a>
msgctxt "dn4:60.1"
msgid "Atha kho soṇadaṇḍo brāhmaṇo abbhunnāmetvā kāyaṃ anuviloketvā parisaṃ bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn4:60.2"
msgid "“pañcahi, bho gotama, aṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:60.3"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyya."
msgstr ""

msgctxt "dn4:60.4"
msgid "Katamehi pañcahi?"
msgstr ""

msgctxt "dn4:60.5"
msgid "Idha, bho gotama, brāhmaṇo ubhato sujāto hoti mātito ca pitito ca, saṃsuddhagahaṇiko yāva sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena;"
msgstr ""

msgctxt "dn4:60.6"
msgid "ajjhāyako hoti mantadharo tiṇṇaṃ vedānaṃ pāragū sanighaṇḍukeṭubhānaṃ sākkharappabhedānaṃ itihāsapañcamānaṃ padako veyyākaraṇo lokāyatamahāpurisalakkhaṇesu anavayo;"
msgstr ""

msgctxt "dn4:60.7"
msgid "abhirūpo hoti dassanīyo pāsādiko paramāya vaṇṇapokkharatāya samannāgato brahmavaṇṇī brahmavacchasī akhuddāvakāso dassanāya;"
msgstr ""

msgctxt "dn4:60.8"
msgid "sīlavā hoti vuddhasīlī vuddhasīlena samannāgato;"
msgstr ""

msgctxt "dn4:60.9"
msgid "paṇḍito ca hoti medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ."
msgstr ""

msgctxt "dn4:60.10"
msgid "Imehi kho, bho gotama, pañcahi aṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:60.11"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti."
msgstr ""

#. </p><p><a class="sc" id="54"></a><a class="wp" id="wp14"></a><a class="pts"
#. id="pts1.121"></a>
msgctxt "dn4:61.1"
msgid "“Imesaṃ pana, brāhmaṇa, pañcannaṃ aṅgānaṃ sakkā ekaṃ aṅgaṃ ṭhapayitvā catūhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapetuṃ;"
msgstr ""

msgctxt "dn4:61.2"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti?"
msgstr ""

msgctxt "dn4:61.3"
msgid "“Sakkā, bho gotama."
msgstr ""

msgctxt "dn4:61.4"
msgid "Imesañhi, bho gotama, pañcannaṃ aṅgānaṃ vaṇṇaṃ ṭhapayāma."
msgstr ""

msgctxt "dn4:61.5"
msgid "Kiñhi vaṇṇo karissati?"
msgstr ""

msgctxt "dn4:61.6"
msgid "Yato kho, bho gotama, brāhmaṇo ubhato sujāto hoti mātito ca pitito ca saṃsuddhagahaṇiko yāva sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena;"
msgstr ""

msgctxt "dn4:61.7"
msgid "ajjhāyako ca hoti mantadharo ca tiṇṇaṃ vedānaṃ pāragū sanighaṇḍukeṭubhānaṃ sākkharappabhedānaṃ itihāsapañcamānaṃ padako veyyākaraṇo lokāyatamahāpurisalakkhaṇesu anavayo;"
msgstr ""

msgctxt "dn4:61.8"
msgid "sīlavā ca hoti vuddhasīlī vuddhasīlena samannāgato;"
msgstr ""

msgctxt "dn4:61.9"
msgid "paṇḍito ca hoti medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ."
msgstr ""

msgctxt "dn4:61.10"
msgid "Imehi kho, bho gotama, catūhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:61.11"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti."
msgstr ""

#. </p><p><a class="sc" id="55"></a><a class="wp" id="wp15"></a>
msgctxt "dn4:62.1"
msgid "“Imesaṃ pana, brāhmaṇa, catunnaṃ aṅgānaṃ sakkā ekaṃ aṅgaṃ ṭhapayitvā tīhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapetuṃ;"
msgstr ""

msgctxt "dn4:62.2"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti?"
msgstr ""

msgctxt "dn4:62.3"
msgid "“Sakkā, bho gotama."
msgstr ""

msgctxt "dn4:62.4"
msgid "Imesañhi, bho gotama, catunnaṃ aṅgānaṃ mante ṭhapayāma."
msgstr ""

msgctxt "dn4:62.5"
msgid "Kiñhi mantā karissanti?"
msgstr ""

msgctxt "dn4:62.6"
msgid "Yato kho, bho gotama, brāhmaṇo ubhato sujāto hoti mātito ca pitito ca saṃsuddhagahaṇiko yāva sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena;"
msgstr ""

msgctxt "dn4:62.7"
msgid "sīlavā ca hoti vuddhasīlī vuddhasīlena samannāgato;"
msgstr ""

msgctxt "dn4:62.8"
msgid "paṇḍito ca hoti medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ."
msgstr ""

msgctxt "dn4:62.9"
msgid "Imehi kho, bho gotama, tīhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:62.10"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti."
msgstr ""

#. </p><p><a class="sc" id="56"></a><a class="wp" id="wp16"></a>
msgctxt "dn4:63.1"
msgid "“Imesaṃ pana, brāhmaṇa, tiṇṇaṃ aṅgānaṃ sakkā ekaṃ aṅgaṃ ṭhapayitvā dvīhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapetuṃ;"
msgstr ""

msgctxt "dn4:63.2"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti?"
msgstr ""

msgctxt "dn4:63.3"
msgid "“Sakkā, bho gotama."
msgstr ""

msgctxt "dn4:63.4"
msgid "Imesañhi, bho gotama, tiṇṇaṃ aṅgānaṃ jātiṃ ṭhapayāma."
msgstr ""

msgctxt "dn4:63.5"
msgid "Kiñhi jāti karissati?"
msgstr ""

msgctxt "dn4:63.6"
msgid "Yato kho, bho gotama, brāhmaṇo sīlavā hoti vuddhasīlī vuddhasīlena samannāgato;"
msgstr ""

msgctxt "dn4:63.7"
msgid "paṇḍito ca hoti medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ."
msgstr ""

msgctxt "dn4:63.8"
msgid "Imehi kho, bho gotama, dvīhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:63.9"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti."
msgstr ""

#. </p><p><a class="sc" id="57"></a><a class="wp" id="17"></a><a class="pts"
#. id="pts1.122"></a>
msgctxt "dn4:64.1"
msgid "Evaṃ vutte, te brāhmaṇā soṇadaṇḍaṃ brāhmaṇaṃ etadavocuṃ:"
msgstr ""

msgctxt "dn4:64.2"
msgid "“mā bhavaṃ soṇadaṇḍo evaṃ avaca, mā bhavaṃ soṇadaṇḍo evaṃ avaca."
msgstr ""

msgctxt "dn4:64.3"
msgid "Apavadateva bhavaṃ soṇadaṇḍo vaṇṇaṃ, apavadati mante, apavadati jātiṃ, ekaṃsena bhavaṃ soṇadaṇḍo samaṇasseva gotamassa vādaṃ anupakkhandatī”ti."
msgstr ""

#. </p><p><a class="sc" id="58"></a><a class="wp" id="wp18"></a>
msgctxt "dn4:65.1"
msgid "Atha kho bhagavā te brāhmaṇe etadavoca:"
msgstr ""

msgctxt "dn4:65.2"
msgid "“sace kho tumhākaṃ brāhmaṇānaṃ evaṃ hoti:"
msgstr ""

msgctxt "dn4:65.3"
msgid "‘appassuto ca soṇadaṇḍo brāhmaṇo, akalyāṇavākkaraṇo ca soṇadaṇḍo brāhmaṇo, duppañño ca soṇadaṇḍo brāhmaṇo, na ca pahoti soṇadaṇḍo brāhmaṇo samaṇena gotamena saddhiṃ asmiṃ vacane paṭimantetun’ti, tiṭṭhatu soṇadaṇḍo brāhmaṇo, tumhe mayā saddhiṃ mantavho asmiṃ vacane."
msgstr ""

msgctxt "dn4:65.4"
msgid "Sace pana tumhākaṃ brāhmaṇānaṃ evaṃ hoti:"
msgstr ""

msgctxt "dn4:65.5"
msgid "‘bahussuto ca soṇadaṇḍo brāhmaṇo, kalyāṇavākkaraṇo ca soṇadaṇḍo brāhmaṇo, paṇḍito ca soṇadaṇḍo brāhmaṇo, pahoti ca soṇadaṇḍo brāhmaṇo samaṇena gotamena saddhiṃ asmiṃ vacane paṭimantetun’ti, tiṭṭhatha tumhe, soṇadaṇḍo brāhmaṇo mayā saddhiṃ paṭimantetū”ti."
msgstr ""

#. </p><p><a class="sc" id="59"></a><a class="wp" id="wp19"></a><a class="pts"
#. id="pts1.123"></a>
msgctxt "dn4:66.1"
msgid "Evaṃ vutte, soṇadaṇḍo brāhmaṇo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn4:66.2"
msgid "“tiṭṭhatu bhavaṃ gotamo, tuṇhī bhavaṃ gotamo hotu, ahameva tesaṃ sahadhammena paṭivacanaṃ karissāmī”ti."
msgstr ""

msgctxt "dn4:66.3"
msgid "Atha kho soṇadaṇḍo brāhmaṇo te brāhmaṇe etadavoca:"
msgstr ""

msgctxt "dn4:66.4"
msgid "“mā bhavanto evaṃ avacuttha, mā bhavanto evaṃ avacuttha:"
msgstr ""

msgctxt "dn4:66.5"
msgid "‘apavadateva bhavaṃ soṇadaṇḍo vaṇṇaṃ, apavadati mante, apavadati jātiṃ, ekaṃsena bhavaṃ soṇadaṇḍo samaṇasseva gotamassa vādaṃ anupakkhandatī’ti."
msgstr ""

msgctxt "dn4:66.6"
msgid "Nāhaṃ, bho, apavadāmi vaṇṇaṃ vā mante vā jātiṃ vā”ti."
msgstr ""

#. </p><p><a class="sc" id="60"></a><a class="wp" id="wp20"></a>
msgctxt "dn4:67.1"
msgid "Tena kho pana samayena soṇadaṇḍassa brāhmaṇassa bhāgineyyo aṅgako nāma māṇavako tassaṃ parisāyaṃ nisinno hoti."
msgstr ""

msgctxt "dn4:67.2"
msgid "Atha kho soṇadaṇḍo brāhmaṇo te brāhmaṇe etadavoca:"
msgstr ""

msgctxt "dn4:67.3"
msgid "“passanti no bhonto imaṃ aṅgakaṃ māṇavakaṃ amhākaṃ bhāgineyyan”ti?"
msgstr ""

msgctxt "dn4:67.4"
msgid "“Evaṃ, bho”."
msgstr ""

msgctxt "dn4:67.5"
msgid "“Aṅgako kho, bho, māṇavako abhirūpo dassanīyo pāsādiko paramāya vaṇṇapokkharatāya samannāgato brahmavaṇṇī brahmavacchasī akhuddāvakāso dassanāya, nāssa imissaṃ parisāyaṃ samasamo atthi vaṇṇena ṭhapetvā samaṇaṃ gotamaṃ."
msgstr ""

msgctxt "dn4:67.6"
msgid "Aṅgako kho māṇavako ajjhāyako mantadharo, tiṇṇaṃ vedānaṃ pāragū sanighaṇḍukeṭubhānaṃ sākkharappabhedānaṃ itihāsapañcamānaṃ padako veyyākaraṇo lokāyatamahāpurisalakkhaṇesu anavayo."
msgstr ""

msgctxt "dn4:67.7"
msgid "Ahamassa mante vācetā."
msgstr ""

msgctxt "dn4:67.8"
msgid "Aṅgako kho māṇavako ubhato sujāto mātito ca pitito ca saṃsuddhagahaṇiko yāva sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena."
msgstr ""

msgctxt "dn4:67.9"
msgid "Ahamassa mātāpitaro jānāmi."
msgstr ""

msgctxt "dn4:67.10"
msgid "Aṅgako kho māṇavako pāṇampi haneyya, adinnampi ādiyeyya, paradārampi gaccheyya, musāvādampi bhaṇeyya, majjampi piveyya, ettha dāni, bho, kiṃ vaṇṇo karissati, kiṃ mantā, kiṃ jāti?"
msgstr ""

msgctxt "dn4:67.11"
msgid "Yato kho, bho, brāhmaṇo sīlavā ca hoti vuddhasīlī vuddhasīlena samannāgato, paṇḍito ca hoti medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ."
msgstr ""

msgctxt "dn4:67.12"
msgid "Imehi kho, bho, dvīhaṅgehi samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapenti;"
msgstr ""

msgctxt "dn4:67.13"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn4:68.1"
msgid "6. Sīlapaññākathā"
msgstr ""

#. </h2><p><a class="sc" id="61"></a><a class="wp" id="wp21"></a><a class="pts"
#. id="pts1.124"></a>
msgctxt "dn4:69.1"
msgid "“Imesaṃ pana, brāhmaṇa, dvinnaṃ aṅgānaṃ sakkā ekaṃ aṅgaṃ ṭhapayitvā ekena aṅgena samannāgataṃ brāhmaṇā brāhmaṇaṃ paññapetuṃ;"
msgstr ""

msgctxt "dn4:69.2"
msgid "‘brāhmaṇosmī’ti ca vadamāno sammā vadeyya, na ca pana musāvādaṃ āpajjeyyā”ti?"
msgstr ""

msgctxt "dn4:69.3"
msgid "“No hidaṃ, bho gotama."
msgstr ""

msgctxt "dn4:69.4"
msgid "Sīlaparidhotā hi, bho gotama, paññā;"
msgstr ""

msgctxt "dn4:69.5"
msgid "paññāparidhotaṃ sīlaṃ."
msgstr ""

msgctxt "dn4:69.6"
msgid "Yattha sīlaṃ tattha paññā, yattha paññā tattha sīlaṃ."
msgstr ""

msgctxt "dn4:69.7"
msgid "Sīlavato paññā, paññavato sīlaṃ."
msgstr ""

msgctxt "dn4:69.8"
msgid "Sīlapaññāṇañca pana lokasmiṃ aggamakkhāyati."
msgstr ""

msgctxt "dn4:69.9"
msgid "Seyyathāpi, bho gotama, hatthena vā hatthaṃ dhoveyya, pādena vā pādaṃ dhoveyya;"
msgstr ""

msgctxt "dn4:69.10"
msgid "evameva kho, bho gotama, sīlaparidhotā paññā, paññāparidhotaṃ sīlaṃ."
msgstr ""

msgctxt "dn4:69.11"
msgid "Yattha sīlaṃ tattha paññā, yattha paññā tattha sīlaṃ."
msgstr ""

msgctxt "dn4:69.12"
msgid "Sīlavato paññā, paññavato sīlaṃ."
msgstr ""

msgctxt "dn4:69.13"
msgid "Sīlapaññāṇañca pana lokasmiṃ aggamakkhāyatī”ti. <a class=\"wp\" id=\"wp22\"></a>“"
msgstr ""

msgctxt "dn4:69.14"
msgid "Evametaṃ, brāhmaṇa, evametaṃ, brāhmaṇa, sīlaparidhotā hi, brāhmaṇa, paññā, paññāparidhotaṃ sīlaṃ."
msgstr ""

msgctxt "dn4:69.15"
msgid "Yattha sīlaṃ tattha paññā, yattha paññā tattha sīlaṃ."
msgstr ""

msgctxt "dn4:69.16"
msgid "Sīlavato paññā, paññavato sīlaṃ."
msgstr ""

msgctxt "dn4:69.17"
msgid "Sīlapaññāṇañca pana lokasmiṃ aggamakkhāyati."
msgstr ""

msgctxt "dn4:69.18"
msgid "Seyyathāpi, brāhmaṇa, hatthena vā hatthaṃ dhoveyya, pādena vā pādaṃ dhoveyya;"
msgstr ""

msgctxt "dn4:69.19"
msgid "evameva kho, brāhmaṇa, sīlaparidhotā paññā, paññāparidhotaṃ sīlaṃ."
msgstr ""

msgctxt "dn4:69.20"
msgid "Yattha sīlaṃ tattha paññā, yattha paññā tattha sīlaṃ."
msgstr ""

msgctxt "dn4:69.21"
msgid "Sīlavato paññā, paññavato sīlaṃ."
msgstr ""

msgctxt "dn4:69.22"
msgid "Sīlapaññāṇañca pana lokasmiṃ aggamakkhāyati."
msgstr ""

#. </p><p><a class="sc" id="62"></a>
msgctxt "dn4:70.1"
msgid "Katamaṃ pana taṃ, brāhmaṇa, sīlaṃ?"
msgstr ""

msgctxt "dn4:70.2"
msgid "Katamā sā paññā”ti?"
msgstr ""

msgctxt "dn4:70.3"
msgid "“Ettakaparamāva mayaṃ, bho gotama, etasmiṃ atthe."
msgstr ""

msgctxt "dn4:70.4"
msgid "Sādhu vata bhavantaṃyeva gotamaṃ paṭibhātu etassa bhāsitassa attho”ti. <a class=\"wp\" id=\"wp23\"></a>“"
msgstr ""

msgctxt "dn4:70.5"
msgid "Tena hi, brāhmaṇa, suṇohi;"
msgstr ""

msgctxt "dn4:70.6"
msgid "sādhukaṃ manasikarohi;"
msgstr ""

msgctxt "dn4:70.7"
msgid "bhāsissāmī”ti."
msgstr ""

msgctxt "dn4:70.8"
msgid "“Evaṃ, bho”ti kho soṇadaṇḍo brāhmaṇo bhagavato paccassosi."
msgstr ""

msgctxt "dn4:70.9"
msgid "Bhagavā etadavoca:"
msgstr ""

msgctxt "dn4:70.10"
msgid "“idha, brāhmaṇa, tathāgato loke uppajjati arahaṃ sammāsambuddho …"
msgstr ""

msgctxt "dn4:70.11"
msgid "pe …"
msgstr ""

msgctxt "dn4:70.12"
msgid "Evaṃ kho, brāhmaṇa, bhikkhu sīlasampanno hoti."
msgstr ""

msgctxt "dn4:70.13"
msgid "Idaṃ kho taṃ, brāhmaṇa, sīlaṃ …"
msgstr ""

msgctxt "dn4:70.14"
msgid "pe …"
msgstr ""

msgctxt "dn4:70.15"
msgid "paṭhamaṃ jhānaṃ upasampajja viharati …"
msgstr ""

msgctxt "dn4:70.16"
msgid "dutiyaṃ jhānaṃ …"
msgstr ""

msgctxt "dn4:70.17"
msgid "tatiyaṃ jhānaṃ …"
msgstr ""

msgctxt "dn4:70.18"
msgid "catutthaṃ jhānaṃ upasampajja viharati …"
msgstr ""

msgctxt "dn4:70.19"
msgid "pe …"
msgstr ""

msgctxt "dn4:70.20"
msgid "ñāṇadassanāya cittaṃ abhinīharati, abhininnāmeti."
msgstr ""

msgctxt "dn4:70.21"
msgid "…"
msgstr ""

msgctxt "dn4:70.22"
msgid "pe …"
msgstr ""

msgctxt "dn4:70.23"
msgid "Idampissa hoti paññāya …"
msgstr ""

msgctxt "dn4:70.24"
msgid "pe …"
msgstr ""

msgctxt "dn4:70.25"
msgid "nāparaṃ itthattāyāti pajānāti."
msgstr ""

msgctxt "dn4:70.26"
msgid "Idampissa hoti paññāya ayaṃ kho sā, brāhmaṇa, paññā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn4:71.1"
msgid "7. Soṇadaṇḍaupāsakattapaṭivedanā"
msgstr ""

#. </h2><p><a class="sc" id="63"></a><a class="wp" id="wp24"></a><a class="pts"
#. id="pts1.125"></a>
msgctxt "dn4:72.1"
msgid "Evaṃ vutte, soṇadaṇḍo brāhmaṇo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn4:72.2"
msgid "“abhikkantaṃ, bho gotama, abhikkantaṃ, bho gotama."
msgstr ""

msgctxt "dn4:72.3"
msgid "Seyyathāpi, bho gotama, nikkujjitaṃ vā ukkujjeyya, paṭicchannaṃ vā vivareyya, mūḷhassa vā maggaṃ ācikkheyya, andhakāre vā telapajjotaṃ dhāreyya:"
msgstr ""

msgctxt "dn4:72.4"
msgid "‘cakkhumanto rūpāni dakkhantī’ti;"
msgstr ""

msgctxt "dn4:72.5"
msgid "evamevaṃ bhotā gotamena anekapariyāyena dhammo pakāsito."
msgstr ""

msgctxt "dn4:72.6"
msgid "Esāhaṃ bhavantaṃ gotamaṃ saraṇaṃ gacchāmi, dhammañca, bhikkhusaṅghañca."
msgstr ""

msgctxt "dn4:72.7"
msgid "Upāsakaṃ maṃ bhavaṃ gotamo dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gataṃ."
msgstr ""

msgctxt "dn4:72.8"
msgid "Adhivāsetu ca me bhavaṃ gotamo svātanāya bhattaṃ saddhiṃ bhikkhusaṅghenā”ti."
msgstr ""

msgctxt "dn4:72.9"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

#. </p><p><a class="sc" id="64"></a>
msgctxt "dn4:73.1"
msgid "Atha kho soṇadaṇḍo brāhmaṇo bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "dn4:73.2"
msgid "Atha kho soṇadaṇḍo brāhmaṇo tassā rattiyā accayena sake nivesane paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi:"
msgstr ""

msgctxt "dn4:73.3"
msgid "“kālo, bho gotama, niṭṭhitaṃ bhattan”ti."
msgstr ""

#. <a class="wp" id="wp25"></a>
msgctxt "dn4:73.4"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya saddhiṃ bhikkhusaṅghena yena soṇadaṇḍassa brāhmaṇassa nivesanaṃ tenupasaṅkami;"
msgstr ""

msgctxt "dn4:73.5"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "dn4:73.6"
msgid "Atha kho soṇadaṇḍo brāhmaṇo buddhappamukhaṃ bhikkhusaṅghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappesi sampavāresi."
msgstr ""

#. </p><p><a class="sc" id="65"></a><a class="wp" id="wp26"></a><a class="pts"
#. id="pts1.126"></a>
msgctxt "dn4:74.1"
msgid "Atha kho soṇadaṇḍo brāhmaṇo bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ aññataraṃ nīcaṃ āsanaṃ gahetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "dn4:74.2"
msgid "Ekamantaṃ nisinno kho soṇadaṇḍo brāhmaṇo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn4:74.3"
msgid "“ahañceva kho pana, bho gotama, parisagato samāno āsanā vuṭṭhahitvā bhavantaṃ gotamaṃ abhivādeyyaṃ, tena maṃ sā parisā paribhaveyya."
msgstr ""

msgctxt "dn4:74.4"
msgid "Yaṃ kho pana sā parisā paribhaveyya, yasopi tassa hāyetha."
msgstr ""

msgctxt "dn4:74.5"
msgid "Yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ."
msgstr ""

msgctxt "dn4:74.6"
msgid "Yasoladdhā kho panamhākaṃ bhogā."
msgstr ""

msgctxt "dn4:74.7"
msgid "Ahañceva kho pana, bho gotama, parisagato samāno añjaliṃ paggaṇheyyaṃ, āsanā me taṃ bhavaṃ gotamo paccuṭṭhānaṃ dhāretu."
msgstr ""

msgctxt "dn4:74.8"
msgid "Ahañceva kho pana, bho gotama, parisagato samāno veṭhanaṃ omuñceyyaṃ, sirasā me taṃ bhavaṃ gotamo abhivādanaṃ dhāretu."
msgstr ""

msgctxt "dn4:74.9"
msgid "Ahañceva kho pana, bho gotama, yānagato samāno yānā paccorohitvā bhavantaṃ gotamaṃ abhivādeyyaṃ, tena maṃ sā parisā paribhaveyya."
msgstr ""

msgctxt "dn4:74.10"
msgid "Yaṃ kho pana sā parisā paribhaveyya, yasopi tassa hāyetha, yassa kho pana yaso hāyetha, bhogāpi tassa hāyeyyuṃ."
msgstr ""

msgctxt "dn4:74.11"
msgid "Yasoladdhā kho panamhākaṃ bhogā."
msgstr ""

msgctxt "dn4:74.12"
msgid "Ahañceva kho pana, bho gotama, yānagato samāno patodalaṭṭhiṃ abbhunnāmeyyaṃ, yānā me taṃ bhavaṃ gotamo paccorohanaṃ dhāretu."
msgstr ""

msgctxt "dn4:74.13"
msgid "Ahañceva kho pana, bho gotama, yānagato samāno chattaṃ apanāmeyyaṃ, sirasā me taṃ bhavaṃ gotamo abhivādanaṃ dhāretū”ti."
msgstr ""

#. </p><p><a class="sc" id="66"></a><a class="wp" id="wp27"></a>
msgctxt "dn4:75.1"
msgid "Atha kho bhagavā soṇadaṇḍaṃ brāhmaṇaṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmīti."
msgstr ""

#. </p><p class="endsutta">
msgctxt "dn4:76.1"
msgid "Soṇadaṇḍasuttaṃ niṭṭhitaṃ catutthaṃ."
msgstr ""

