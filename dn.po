msgctxt "dn6:1.1"
msgid "Dīgha Nikāya 6"
msgstr ""

#. </p><h1>
msgctxt "dn6:2.1"
msgid "Mahālisutta"
msgstr ""

#. </h1></div><h2>
msgctxt "dn6:3.1"
msgid "1. Brāhmaṇadūtavatthu"
msgstr ""

#. </h2><p><a class="sc" id="1"></a><a class="wp" id="wp1"></a><a class="pts"
#. id="pts1.150"></a>
msgctxt "dn6:4.1"
msgid "<span class=\"evam\">Evaṃ me sutaṃ—​</span>"
msgstr ""

msgctxt "dn6:4.2"
msgid "ekaṃ samayaṃ bhagavā vesāliyaṃ viharati mahāvane kūṭāgārasālāyaṃ."
msgstr ""

msgctxt "dn6:4.3"
msgid "Tena kho pana samayena sambahulā kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā vesāliyaṃ paṭivasanti kenacideva karaṇīyena."
msgstr ""

msgctxt "dn6:4.4"
msgid "Assosuṃ kho te kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā:"
msgstr ""

msgctxt "dn6:4.5"
msgid "“samaṇo khalu, bho, gotamo sakyaputto sakyakulā pabbajito vesāliyaṃ viharati mahāvane kūṭāgārasālāyaṃ."
msgstr ""

msgctxt "dn6:4.6"
msgid "Taṃ kho pana bhavantaṃ gotamaṃ evaṃ kalyāṇo kittisaddo abbhuggato:"
msgstr ""

msgctxt "dn6:4.7"
msgid "‘itipi so bhagavā arahaṃ sammāsambuddho vijjācaraṇasampanno sugato lokavidū anuttaro purisadammasārathi satthā devamanussānaṃ buddho bhagavā’."
msgstr ""

msgctxt "dn6:4.8"
msgid "So imaṃ lokaṃ sadevakaṃ samārakaṃ sabrahmakaṃ sassamaṇabrāhmaṇiṃ pajaṃ sadevamanussaṃ sayaṃ abhiññā sacchikatvā pavedeti."
msgstr ""

msgctxt "dn6:4.9"
msgid "So dhammaṃ deseti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ sātthaṃ sabyañjanaṃ kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāseti."
msgstr ""

msgctxt "dn6:4.10"
msgid "Sādhu kho pana tathārūpānaṃ arahataṃ dassanaṃ hotī”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a><a class="wp" id="wp2"></a><a class="pts"
#. id="pts1.151"></a>
msgctxt "dn6:5.1"
msgid "Atha kho te kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā yena mahāvanaṃ kūṭāgārasālā tenupasaṅkamiṃsu."
msgstr ""

msgctxt "dn6:5.2"
msgid "Tena kho pana samayena āyasmā nāgito bhagavato upaṭṭhāko hoti."
msgstr ""

msgctxt "dn6:5.3"
msgid "Atha kho te kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā yenāyasmā nāgito tenupasaṅkamiṃsu."
msgstr ""

msgctxt "dn6:5.4"
msgid "Upasaṅkamitvā āyasmantaṃ nāgitaṃ etadavocuṃ:"
msgstr ""

msgctxt "dn6:5.5"
msgid "“kahaṃ nu kho, bho nāgita, etarahi so bhavaṃ gotamo viharati?"
msgstr ""

msgctxt "dn6:5.6"
msgid "Dassanakāmā hi mayaṃ taṃ bhavantaṃ gotaman”ti."
msgstr ""

msgctxt "dn6:5.7"
msgid "“Akālo kho, āvuso, bhagavantaṃ dassanāya, paṭisallīno bhagavā”ti."
msgstr ""

msgctxt "dn6:5.8"
msgid "Atha kho te kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā tattheva ekamantaṃ nisīdiṃsu:"
msgstr ""

msgctxt "dn6:5.9"
msgid "“disvāva mayaṃ taṃ bhavantaṃ gotamaṃ gamissāmā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn6:6.1"
msgid "2. Oṭṭhaddhalicchavīvatthu"
msgstr ""

#. </h2><p><a class="sc" id="3"></a><a class="wp" id="wp3"></a>
msgctxt "dn6:7.1"
msgid "Oṭṭhaddhopi licchavī mahatiyā licchavīparisāya saddhiṃ yena mahāvanaṃ kūṭāgārasālā yenāyasmā nāgito tenupasaṅkami;"
msgstr ""

msgctxt "dn6:7.2"
msgid "upasaṅkamitvā āyasmantaṃ nāgitaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "dn6:7.3"
msgid "Ekamantaṃ ṭhito kho oṭṭhaddhopi licchavī āyasmantaṃ nāgitaṃ etadavoca:"
msgstr ""

msgctxt "dn6:7.4"
msgid "“kahaṃ nu kho, bhante nāgita, etarahi so bhagavā viharati arahaṃ sammāsambuddho, dassanakāmā hi mayaṃ taṃ bhagavantaṃ arahantaṃ sammāsambuddhan”ti."
msgstr ""

msgctxt "dn6:7.5"
msgid "“Akālo kho, mahāli, bhagavantaṃ dassanāya, paṭisallīno bhagavā”ti."
msgstr ""

msgctxt "dn6:7.6"
msgid "Oṭṭhaddhopi licchavī tattheva ekamantaṃ nisīdi:"
msgstr ""

msgctxt "dn6:7.7"
msgid "“disvāva ahaṃ taṃ bhagavantaṃ gamissāmi arahantaṃ sammāsambuddhan”ti."
msgstr ""

#. </p><p><a class="sc" id="4"></a><a class="wp" id="wp4"></a>
msgctxt "dn6:8.1"
msgid "Atha kho sīho samaṇuddeso yenāyasmā nāgito tenupasaṅkami;"
msgstr ""

msgctxt "dn6:8.2"
msgid "upasaṅkamitvā āyasmantaṃ nāgitaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "dn6:8.3"
msgid "Ekamantaṃ ṭhito kho sīho samaṇuddeso āyasmantaṃ nāgitaṃ etadavoca:"
msgstr ""

msgctxt "dn6:8.4"
msgid "“ete, bhante kassapa, sambahulā kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā idhūpasaṅkantā bhagavantaṃ dassanāya;"
msgstr ""

msgctxt "dn6:8.5"
msgid "oṭṭhaddhopi licchavī mahatiyā licchavīparisāya saddhiṃ idhūpasaṅkanto bhagavantaṃ dassanāya, sādhu, bhante kassapa, labhataṃ esā janatā bhagavantaṃ dassanāyā”ti."
msgstr ""

#. </p><p><a class="sc" id="5"></a><a class="pts" id="pts1.152"></a>
msgctxt "dn6:9.1"
msgid "“Tena hi, sīha, tvaññeva bhagavato ārocehī”ti."
msgstr ""

msgctxt "dn6:9.2"
msgid "“Evaṃ, bhante”ti kho sīho samaṇuddeso āyasmato nāgitassa paṭissutvā yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "dn6:9.3"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "dn6:9.4"
msgid "Ekamantaṃ ṭhito kho sīho samaṇuddeso bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn6:9.5"
msgid "“ete, bhante, sambahulā kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā idhūpasaṅkantā bhagavantaṃ dassanāya, oṭṭhaddhopi licchavī mahatiyā licchavīparisāya saddhiṃ idhūpasaṅkanto bhagavantaṃ dassanāya."
msgstr ""

msgctxt "dn6:9.6"
msgid "Sādhu, bhante, labhataṃ esā janatā bhagavantaṃ dassanāyā”ti."
msgstr ""

msgctxt "dn6:9.7"
msgid "“Tena hi, sīha, vihārapacchāyāyaṃ āsanaṃ paññapehī”ti."
msgstr ""

msgctxt "dn6:9.8"
msgid "“Evaṃ, bhante”ti kho sīho samaṇuddeso bhagavato paṭissutvā vihārapacchāyāyaṃ āsanaṃ paññapesi."
msgstr ""

#. </p><p><a class="sc" id="6"></a>
msgctxt "dn6:10.1"
msgid "Atha kho bhagavā vihārā nikkhamma vihārapacchāyāyaṃ paññatte āsane nisīdi."
msgstr ""

#. <a class="wp" id="wp5"></a>
msgctxt "dn6:10.2"
msgid "Atha kho te kosalakā ca brāhmaṇadūtā māgadhakā ca brāhmaṇadūtā yena bhagavā tenupasaṅkamiṃsu;"
msgstr ""

msgctxt "dn6:10.3"
msgid "upasaṅkamitvā bhagavatā saddhiṃ sammodiṃsu."
msgstr ""

msgctxt "dn6:10.4"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "dn6:10.5"
msgid "Oṭṭhaddhopi licchavī mahatiyā licchavīparisāya saddhiṃ yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "dn6:10.6"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

#. </p><p><a class="sc" id="7"></a>
msgctxt "dn6:11.1"
msgid "Ekamantaṃ nisinno kho oṭṭhaddho licchavī bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn6:11.2"
msgid "“purimāni, bhante, divasāni purimatarāni sunakkhatto licchaviputto yenāhaṃ tenupasaṅkami;"
msgstr ""

msgctxt "dn6:11.3"
msgid "upasaṅkamitvā maṃ etadavoca:"
msgstr ""

msgctxt "dn6:11.4"
msgid "‘yadagge ahaṃ, mahāli, bhagavantaṃ upanissāya viharāmi, na ciraṃ tīṇi vassāni, dibbāni hi kho rūpāni passāmi piyarūpāni kāmūpasaṃhitāni rajanīyāni, no ca kho dibbāni saddāni suṇāmi piyarūpāni kāmūpasaṃhitāni rajanīyānī’ti."
msgstr ""

msgctxt "dn6:11.5"
msgid "Santāneva nu kho, bhante, sunakkhatto licchaviputto dibbāni saddāni nāssosi piyarūpāni kāmūpasaṃhitāni rajanīyāni, udāhu asantānī”ti?"
msgstr ""

#. </p><h3>
msgctxt "dn6:12.1"
msgid "2.1. Ekaṃsabhāvitasamādhi"
msgstr ""

#. </h3><p><a class="sc" id="8"></a>
msgctxt "dn6:13.1"
msgid "“Santāneva kho, mahāli, sunakkhatto licchaviputto dibbāni saddāni nāssosi piyarūpāni kāmūpasaṃhitāni rajanīyāni, no asantānī”ti. <a class=\"wp\" id=\"wp6\"></a>“"
msgstr ""

msgctxt "dn6:13.2"
msgid "Ko nu kho, bhante, hetu, ko paccayo, yena santāneva sunakkhatto licchaviputto dibbāni saddāni nāssosi piyarūpāni kāmūpasaṃhitāni rajanīyāni, no asantānī”ti?"
msgstr ""

#. </p><p><a class="sc" id="9"></a><a class="pts" id="pts1.153"></a>
msgctxt "dn6:14.1"
msgid "“Idha, mahāli, bhikkhuno puratthimāya disāya ekaṃsabhāvito samādhi hoti dibbānaṃ rūpānaṃ dassanāya piyarūpānaṃ kāmūpasaṃhitānaṃ rajanīyānaṃ, no ca kho dibbānaṃ saddānaṃ savanāya piyarūpānaṃ kāmūpasaṃhitānaṃ rajanīyānaṃ."
msgstr ""

msgctxt "dn6:14.2"
msgid "So puratthimāya disāya ekaṃsabhāvite samādhimhi dibbānaṃ rūpānaṃ dassanāya piyarūpānaṃ kāmūpasaṃhitānaṃ rajanīyānaṃ, no ca kho dibbānaṃ saddānaṃ savanāya piyarūpānaṃ kāmūpasaṃhitānaṃ rajanīyānaṃ."
msgstr ""

msgctxt "dn6:14.3"
msgid "Puratthimāya disāya dibbāni rūpāni passati piyarūpāni kāmūpasaṃhitāni rajanīyāni, no ca kho dibbāni saddāni suṇāti piyarūpāni kāmūpasaṃhitāni rajanīyāni."
msgstr ""

