#. class="division">
msgctxt "dn9:1.1"
msgid "Dīgha Nikāya 9"
msgstr ""

#. </p><h1>
msgctxt "dn9:2.1"
msgid "Poṭṭhapādasutta"
msgstr ""

#. </h1></div><h2>
msgctxt "dn9:3.1"
msgid "1. Poṭṭhapādaparibbājakavatthu"
msgstr ""

#. </h2><p><a class="sc" id="1"></a><a class="wp" id="wp1"></a><a class="pts"
#. id="pts1.178"></a>
msgctxt "dn9:4.1"
msgid "<span class=\"evam\">Evaṃ me sutaṃ—​</span>"
msgstr ""

msgctxt "dn9:4.2"
msgid "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "dn9:4.3"
msgid "Tena kho pana samayena poṭṭhapādo paribbājako samayappavādake tindukācīre ekasālake mallikāya ārāme paṭivasati mahatiyā paribbājakaparisāya saddhiṃ tiṃsamattehi paribbājakasatehi."
msgstr ""

msgctxt "dn9:4.4"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya sāvatthiṃ piṇḍāya pāvisi."
msgstr ""

#. </p><p><a class="sc" id="2"></a><a class="wp" id="wp2"></a>
msgctxt "dn9:5.1"
msgid "Atha kho bhagavato etadahosi:"
msgstr ""

msgctxt "dn9:5.2"
msgid "“atippago kho tāva sāvatthiyaṃ piṇḍāya carituṃ."
msgstr ""

msgctxt "dn9:5.3"
msgid "Yannūnāhaṃ yena samayappavādako tindukācīro ekasālako mallikāya ārāmo, yena poṭṭhapādo paribbājako tenupasaṅkameyyan”ti."
msgstr ""

msgctxt "dn9:5.4"
msgid "Atha kho bhagavā yena samayappavādako tindukācīro ekasālako mallikāya ārāmo tenupasaṅkami."
msgstr ""

#. </p><p><a class="sc" id="3"></a><a class="wp" id="wp3"></a><a class="pts"
#. id="pts1.179"></a>
msgctxt "dn9:6.1"
msgid "Tena kho pana samayena poṭṭhapādo paribbājako mahatiyā paribbājakaparisāya saddhiṃ nisinno hoti unnādiniyā uccāsaddamahāsaddāya anekavihitaṃ tiracchānakathaṃ kathentiyā."
msgstr ""

msgctxt "dn9:6.2"
msgid "Seyyathidaṃ—"
msgstr ""

msgctxt "dn9:6.3"
msgid "rājakathaṃ corakathaṃ mahāmattakathaṃ senākathaṃ bhayakathaṃ yuddhakathaṃ annakathaṃ pānakathaṃ vatthakathaṃ sayanakathaṃ mālākathaṃ gandhakathaṃ ñātikathaṃ yānakathaṃ gāmakathaṃ nigamakathaṃ nagarakathaṃ janapadakathaṃ itthikathaṃ sūrakathaṃ visikhākathaṃ kumbhaṭṭhānakathaṃ pubbapetakathaṃ nānattakathaṃ lokakkhāyikaṃ samuddakkhāyikaṃ itibhavābhavakathaṃ iti vā."
msgstr ""

#. </p><p><a class="sc" id="4"></a><a class="wp" id="wp4"></a>
msgctxt "dn9:7.1"
msgid "Addasā kho poṭṭhapādo paribbājako bhagavantaṃ dūratova āgacchantaṃ;"
msgstr ""

msgctxt "dn9:7.2"
msgid "disvāna sakaṃ parisaṃ saṇṭhapesi:"
msgstr ""

msgctxt "dn9:7.3"
msgid "“appasaddā bhonto hontu, mā bhonto saddamakattha."
msgstr ""

msgctxt "dn9:7.4"
msgid "Ayaṃ samaṇo gotamo āgacchati."
msgstr ""

msgctxt "dn9:7.5"
msgid "Appasaddakāmo kho so āyasmā appasaddassa vaṇṇavādī."
msgstr ""

msgctxt "dn9:7.6"
msgid "Appeva nāma appasaddaṃ parisaṃ viditvā upasaṅkamitabbaṃ maññeyyā”ti."
msgstr ""

msgctxt "dn9:7.7"
msgid "Evaṃ vutte, te paribbājakā tuṇhī ahesuṃ."
msgstr ""

#. </p><p><a class="sc" id="5"></a><a class="wp" id="wp5"></a>
msgctxt "dn9:8.1"
msgid "Atha kho bhagavā yena poṭṭhapādo paribbājako tenupasaṅkami."
msgstr ""

msgctxt "dn9:8.2"
msgid "Atha kho poṭṭhapādo paribbājako bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn9:8.3"
msgid "“etu kho, bhante, bhagavā."
msgstr ""

msgctxt "dn9:8.4"
msgid "Svāgataṃ, bhante, bhagavato."
msgstr ""

msgctxt "dn9:8.5"
msgid "Cirassaṃ kho, bhante, bhagavā imaṃ pariyāyamakāsi, yadidaṃ idhāgamanāya."
msgstr ""

msgctxt "dn9:8.6"
msgid "Nisīdatu, bhante, bhagavā, idaṃ āsanaṃ paññattan”ti."
msgstr ""

#. </p><p><a class="sc" id="6"></a>
msgctxt "dn9:9.1"
msgid "Nisīdi bhagavā paññatte āsane."
msgstr ""

msgctxt "dn9:9.2"
msgid "Poṭṭhapādopi kho paribbājako aññataraṃ nīcaṃ āsanaṃ gahetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "dn9:9.3"
msgid "Ekamantaṃ nisinnaṃ kho poṭṭhapādaṃ paribbājakaṃ bhagavā etadavoca:"
msgstr ""

#. VAR: kāya nuttha → kāya nottha (s1-3, mr)
msgctxt "dn9:9.4"
msgid "“kāya nuttha, poṭṭhapāda, etarahi kathāya sannisinnā, kā ca pana vo antarākathā vippakatā”ti?"
msgstr ""

#. </p><h3>
msgctxt "dn9:10.1"
msgid "1.1. Abhisaññānirodhakathā"
msgstr ""

#. </h3><p><a class="sc" id="7"></a><a class="wp" id="wp6"></a><a class="pts"
#. id="pts1.180"></a>
msgctxt "dn9:11.1"
msgid "Evaṃ vutte, poṭṭhapādo paribbājako bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn9:11.2"
msgid "“tiṭṭhatesā, bhante, kathā, yāya mayaṃ etarahi kathāya sannisinnā."
msgstr ""

msgctxt "dn9:11.3"
msgid "Nesā, bhante, kathā bhagavato dullabhā bhavissati pacchāpi savanāya."
msgstr ""

msgctxt "dn9:11.4"
msgid "Purimāni, bhante, divasāni purimatarāni, nānātitthiyānaṃ samaṇabrāhmaṇānaṃ kotūhalasālāya sannisinnānaṃ sannipatitānaṃ abhisaññānirodhe kathā udapādi:"
msgstr ""

msgctxt "dn9:11.5"
msgid "‘kathaṃ nu kho, bho, abhisaññānirodho hotī’ti?"
msgstr ""

msgctxt "dn9:11.6"
msgid "Tatrekacce evamāhaṃsu:"
msgstr ""

msgctxt "dn9:11.7"
msgid "‘ahetū appaccayā purisassa saññā uppajjantipi nirujjhantipi."
msgstr ""

msgctxt "dn9:11.8"
msgid "Yasmiṃ samaye uppajjanti, saññī tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:11.9"
msgid "Yasmiṃ samaye nirujjhanti, asaññī tasmiṃ samaye hotī’ti."
msgstr ""

msgctxt "dn9:11.10"
msgid "Ittheke abhisaññānirodhaṃ paññapenti. <span class=\"brnum\">(1)</span>"
msgstr ""

#. </p><p><a class="sc" id="8"></a>
msgctxt "dn9:12.1"
msgid "Tamañño evamāha:"
msgstr ""

#. VAR: pana metaṃ → na kho nāmetaṃ (pts1)
msgctxt "dn9:12.2"
msgid "‘na kho pana metaṃ, bho, evaṃ bhavissati."
msgstr ""

msgctxt "dn9:12.3"
msgid "Saññā hi, bho, purisassa attā."
msgstr ""

msgctxt "dn9:12.4"
msgid "Sā ca kho upetipi apetipi."
msgstr ""

msgctxt "dn9:12.5"
msgid "Yasmiṃ samaye upeti, saññī tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:12.6"
msgid "Yasmiṃ samaye apeti, asaññī tasmiṃ samaye hotī’ti."
msgstr ""

msgctxt "dn9:12.7"
msgid "Ittheke abhisaññānirodhaṃ paññapenti. <span class=\"brnum\">(2)</span>"
msgstr ""

#. </p><p><a class="sc" id="9"></a>
msgctxt "dn9:13.1"
msgid "Tamañño evamāha:"
msgstr ""

msgctxt "dn9:13.2"
msgid "‘na kho pana metaṃ, bho, evaṃ bhavissati."
msgstr ""

msgctxt "dn9:13.3"
msgid "Santi hi, bho, samaṇabrāhmaṇā mahiddhikā mahānubhāvā."
msgstr ""

msgctxt "dn9:13.4"
msgid "Te imassa purisassa saññaṃ upakaḍḍhantipi apakaḍḍhantipi."
msgstr ""

msgctxt "dn9:13.5"
msgid "Yasmiṃ samaye upakaḍḍhanti, saññī tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:13.6"
msgid "Yasmiṃ samaye apakaḍḍhanti, asaññī tasmiṃ samaye hotī’ti."
msgstr ""

msgctxt "dn9:13.7"
msgid "Ittheke abhisaññānirodhaṃ paññapenti. <span class=\"brnum\">(3)</span>"
msgstr ""

#. </p><p><a class="sc" id="10"></a>
msgctxt "dn9:14.1"
msgid "Tamañño evamāha:"
msgstr ""

msgctxt "dn9:14.2"
msgid "‘na kho pana metaṃ, bho, evaṃ bhavissati."
msgstr ""

msgctxt "dn9:14.3"
msgid "Santi hi, bho, devatā mahiddhikā mahānubhāvā."
msgstr ""

msgctxt "dn9:14.4"
msgid "Tā imassa purisassa saññaṃ upakaḍḍhantipi apakaḍḍhantipi."
msgstr ""

msgctxt "dn9:14.5"
msgid "Yasmiṃ samaye upakaḍḍhanti, saññī tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:14.6"
msgid "Yasmiṃ samaye apakaḍḍhanti, asaññī tasmiṃ samaye hotī’ti."
msgstr ""

msgctxt "dn9:14.7"
msgid "Ittheke abhisaññānirodhaṃ paññapenti. <span class=\"brnum\">(4)</span>"
msgstr ""

#. </p><p><a class="sc" id="11"></a>
msgctxt "dn9:15.1"
msgid "Tassa mayhaṃ, bhante, bhagavantaṃyeva ārabbha sati udapādi:"
msgstr ""

msgctxt "dn9:15.2"
msgid "‘aho nūna bhagavā, aho nūna sugato, yo imesaṃ dhammānaṃ sukusalo’ti."
msgstr ""

msgctxt "dn9:15.3"
msgid "Bhagavā, bhante, kusalo, bhagavā pakataññū abhisaññānirodhassa."
msgstr ""

msgctxt "dn9:15.4"
msgid "Kathaṃ nu kho, bhante, abhisaññānirodho hotī”ti?"
msgstr ""

#. </p><h3>
msgctxt "dn9:16.1"
msgid "1.2. Sahetukasaññuppādanirodhakathā"
msgstr ""

#. </h3><p><a class="sc" id="12"></a><a class="wp" id="wp7"></a><a class="pts"
#. id="pts1.181"></a>
msgctxt "dn9:17.1"
msgid "“Tatra, poṭṭhapāda, ye te samaṇabrāhmaṇā evamāhaṃsu:"
msgstr ""

msgctxt "dn9:17.2"
msgid "‘ahetū appaccayā purisassa saññā uppajjantipi nirujjhantipī’ti, āditova tesaṃ aparaddhaṃ."
msgstr ""

msgctxt "dn9:17.3"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn9:17.4"
msgid "Sahetū hi, poṭṭhapāda, sappaccayā purisassa saññā uppajjantipi nirujjhantipi."
msgstr ""

msgctxt "dn9:17.5"
msgid "Sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

#. </p><p><a class="sc" id="13"></a><a class="pts" id="pts1.182"></a>
msgctxt "dn9:18.1"
msgid "Kā ca sikkhā”ti?"
msgstr ""

msgctxt "dn9:18.2"
msgid "Bhagavā avoca."
msgstr ""

msgctxt "dn9:18.3"
msgid "“Idha, poṭṭhapāda, tathāgato loke uppajjati arahaṃ, sammāsambuddho …"
msgstr ""

msgctxt "dn9:18.4"
msgid "pe …"
msgstr ""

msgctxt "dn9:18.5"
msgid "Evaṃ kho, poṭṭhapāda, bhikkhu sīlasampanno hoti …"
msgstr ""

msgctxt "dn9:18.6"
msgid "pe …"
msgstr ""

msgctxt "dn9:18.7"
msgid "tassime pañcanīvaraṇe pahīne attani samanupassato pāmojjaṃ jāyati, pamuditassa pīti jāyati, pītimanassa kāyo passambhati, passaddhakāyo sukhaṃ vedeti, sukhino cittaṃ samādhiyati."
msgstr ""

msgctxt "dn9:18.8"
msgid "So vivicceva kāmehi, vivicca akusalehi dhammehi, savitakkaṃ savicāraṃ vivekajaṃ pītisukhaṃ<a class=\"wp\" id=\"wp9-10\"></a> paṭhamaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn9:18.9"
msgid "Tassa yā purimā kāmasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:18.10"
msgid "Vivekajapītisukhasukhumasaccasaññā tasmiṃ samaye hoti, vivekajapītisukhasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:18.11"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:18.12"
msgid "Ayaṃ sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="14"></a><a class="wp" id="wp11"></a><a class="pts"
#. id="pts1.183"></a>
msgctxt "dn9:19.1"
msgid "“Puna caparaṃ, poṭṭhapāda, bhikkhu vitakkavicārānaṃ vūpasamā ajjhattaṃ sampasādanaṃ cetaso ekodibhāvaṃ avitakkaṃ avicāraṃ samādhijaṃ pītisukhaṃ dutiyaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn9:19.2"
msgid "Tassa yā purimā vivekajapītisukhasukhumasaccasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:19.3"
msgid "Samādhijapītisukhasukhumasaccasaññā tasmiṃ samaye hoti, samādhijapītisukhasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:19.4"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:19.5"
msgid "Ayampi sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="15"></a><a class="wp" id="wp12"></a>
msgctxt "dn9:20.1"
msgid "“Puna caparaṃ, poṭṭhapāda, bhikkhu pītiyā ca virāgā upekkhako ca viharati sato ca sampajāno, sukhañca kāyena paṭisaṃvedeti, yaṃ taṃ ariyā ācikkhanti:"
msgstr ""

msgctxt "dn9:20.2"
msgid "‘upekkhako satimā sukhavihārī’ti, tatiyaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn9:20.3"
msgid "Tassa yā purimā samādhijapītisukhasukhumasaccasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:20.4"
msgid "Upekkhāsukhasukhumasaccasaññā tasmiṃ samaye hoti, upekkhāsukhasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:20.5"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:20.6"
msgid "Ayampi sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="16"></a><a class="wp" id="wp13"></a>
msgctxt "dn9:21.1"
msgid "“Puna caparaṃ, poṭṭhapāda, bhikkhu sukhassa ca pahānā dukkhassa ca pahānā pubbeva somanassadomanassānaṃ atthaṅgamā adukkhamasukhaṃ upekkhāsatipārisuddhiṃ catutthaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn9:21.2"
msgid "Tassa yā purimā upekkhāsukhasukhumasaccasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:21.3"
msgid "Adukkhamasukhasukhumasaccasaññā tasmiṃ samaye hoti, adukkhamasukhasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:21.4"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:21.5"
msgid "Ayampi sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="17"></a><a class="wp" id="wp14"></a>
msgctxt "dn9:22.1"
msgid "“Puna caparaṃ, poṭṭhapāda, bhikkhu sabbaso rūpasaññānaṃ samatikkamā paṭighasaññānaṃ atthaṅgamā nānattasaññānaṃ amanasikārā ‘ananto ākāso’ti ākāsānañcāyatanaṃ upasampajja viharati."
msgstr ""

#. VAR: purimā rūpasaññā → purimasaññā (mr)
msgctxt "dn9:22.2"
msgid "Tassa yā purimā rūpasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:22.3"
msgid "Ākāsānañcāyatanasukhumasaccasaññā tasmiṃ samaye hoti, ākāsānañcāyatanasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:22.4"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:22.5"
msgid "Ayampi sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="18"></a><a class="wp" id="wp15"></a><a class="pts"
#. id="pts1.184"></a>
msgctxt "dn9:23.1"
msgid "“Puna caparaṃ, poṭṭhapāda, bhikkhu sabbaso ākāsānañcāyatanaṃ samatikkamma ‘anantaṃ viññāṇan’ti viññāṇañcāyatanaṃ upasampajja viharati."
msgstr ""

msgctxt "dn9:23.2"
msgid "Tassa yā purimā ākāsānañcāyatanasukhumasaccasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:23.3"
msgid "Viññāṇañcāyatanasukhumasaccasaññā tasmiṃ samaye hoti, viññāṇañcāyatanasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:23.4"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:23.5"
msgid "Ayampi sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="19"></a><a class="wp" id="wp16"></a>
msgctxt "dn9:24.1"
msgid "“Puna caparaṃ, poṭṭhapāda, bhikkhu sabbaso viññāṇañcāyatanaṃ samatikkamma ‘natthi kiñcī’ti ākiñcaññāyatanaṃ upasampajja viharati."
msgstr ""

msgctxt "dn9:24.2"
msgid "Tassa yā purimā viññāṇañcāyatanasukhumasaccasaññā, sā nirujjhati."
msgstr ""

msgctxt "dn9:24.3"
msgid "Ākiñcaññāyatanasukhumasaccasaññā tasmiṃ samaye hoti, ākiñcaññāyatanasukhumasaccasaññīyeva tasmiṃ samaye hoti."
msgstr ""

msgctxt "dn9:24.4"
msgid "Evampi sikkhā ekā saññā uppajjati, sikkhā ekā saññā nirujjhati."
msgstr ""

msgctxt "dn9:24.5"
msgid "Ayampi sikkhā”ti bhagavā avoca."
msgstr ""

#. </p><p><a class="sc" id="20"></a><a class="wp" id="wp17"></a>
msgctxt "dn9:25.1"
msgid "“Yato kho, poṭṭhapāda, bhikkhu idha sakasaññī hoti, so tato amutra tato amutra anupubbena saññaggaṃ phusati."
msgstr ""

msgctxt "dn9:25.2"
msgid "Tassa saññagge ṭhitassa evaṃ hoti:"
msgstr ""

msgctxt "dn9:25.3"
msgid "‘cetayamānassa me pāpiyo, acetayamānassa me seyyo."
msgstr ""

msgctxt "dn9:25.4"
msgid "Ahañceva kho pana ceteyyaṃ, abhisaṅkhareyyaṃ, imā ca me saññā nirujjheyyuṃ, aññā ca oḷārikā saññā uppajjeyyuṃ;"
msgstr ""

msgctxt "dn9:25.5"
msgid "yannūnāhaṃ na ceva ceteyyaṃ na ca abhisaṅkhareyyan’ti."
msgstr ""

msgctxt "dn9:25.6"
msgid "So na ceva ceteti, na ca abhisaṅkharoti."
msgstr ""

msgctxt "dn9:25.7"
msgid "Tassa acetayato anabhisaṅkharoto tā ceva saññā nirujjhanti, aññā ca oḷārikā saññā na uppajjanti."
msgstr ""

msgctxt "dn9:25.8"
msgid "So nirodhaṃ phusati."
msgstr ""

msgctxt "dn9:25.9"
msgid "Evaṃ kho, poṭṭhapāda, anupubbābhisaññānirodhasampajānasamāpatti hoti."
msgstr ""

#. </p><p><a class="sc" id="21"></a><a class="wp" id="wp18"></a><a class="pts"
#. id="pts1.185"></a>
msgctxt "dn9:26.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, api nu te ito pubbe evarūpā anupubbābhisaññānirodhasampajānasamāpatti sutapubbā”ti?"
msgstr ""

msgctxt "dn9:26.2"
msgid "“No hetaṃ, bhante."
msgstr ""

msgctxt "dn9:26.3"
msgid "Evaṃ kho ahaṃ, bhante, bhagavato bhāsitaṃ ājānāmi:"
msgstr ""

msgctxt "dn9:26.4"
msgid "‘yato kho, poṭṭhapāda, bhikkhu idha sakasaññī hoti, so tato amutra tato amutra anupubbena saññaggaṃ phusati, tassa saññagge ṭhitassa evaṃ hoti:"
msgstr ""

msgctxt "dn9:26.5"
msgid "“cetayamānassa me pāpiyo, acetayamānassa me seyyo."
msgstr ""

msgctxt "dn9:26.6"
msgid "Ahañceva kho pana ceteyyaṃ abhisaṅkhareyyaṃ, imā ca me saññā nirujjheyyuṃ, aññā ca oḷārikā saññā uppajjeyyuṃ;"
msgstr ""

msgctxt "dn9:26.7"
msgid "yannūnāhaṃ na ceva ceteyyaṃ, na ca abhisaṅkhareyyan”ti."
msgstr ""

msgctxt "dn9:26.8"
msgid "So na ceva ceteti, na cābhisaṅkharoti, tassa acetayato anabhisaṅkharoto tā ceva saññā nirujjhanti, aññā ca oḷārikā saññā na uppajjanti."
msgstr ""

msgctxt "dn9:26.9"
msgid "So nirodhaṃ phusati."
msgstr ""

msgctxt "dn9:26.10"
msgid "Evaṃ kho, poṭṭhapāda, anupubbābhisaññānirodhasampajānasamāpatti hotī’”ti."
msgstr ""

msgctxt "dn9:26.11"
msgid "“Evaṃ, poṭṭhapādā”ti."
msgstr ""

#. </p><p><a class="sc" id="22"></a><a class="wp" id="wp19"></a>
msgctxt "dn9:27.1"
msgid "“Ekaññeva nu kho, bhante, bhagavā saññaggaṃ paññapeti, udāhu puthūpi saññagge paññapetī”ti?"
msgstr ""

msgctxt "dn9:27.2"
msgid "“Ekampi kho ahaṃ, poṭṭhapāda, saññaggaṃ paññapemi, puthūpi saññagge paññapemī”ti."
msgstr ""

msgctxt "dn9:27.3"
msgid "“Yathā kathaṃ pana, bhante, bhagavā ekampi saññaggaṃ paññapeti, puthūpi saññagge paññapetī”ti?"
msgstr ""

msgctxt "dn9:27.4"
msgid "“Yathā yathā kho, poṭṭhapāda, nirodhaṃ phusati tathā tathāhaṃ saññaggaṃ paññapemi."
msgstr ""

msgctxt "dn9:27.5"
msgid "Evaṃ kho ahaṃ, poṭṭhapāda, ekampi saññaggaṃ paññapemi, puthūpi saññagge paññapemī”ti."
msgstr ""

#. </p><p><a class="sc" id="23"></a><a class="wp" id="wp20"></a>
msgctxt "dn9:28.1"
msgid "“Saññā nu kho, bhante, paṭhamaṃ uppajjati, pacchā ñāṇaṃ, udāhu ñāṇaṃ paṭhamaṃ uppajjati, pacchā saññā, udāhu saññā ca ñāṇañca apubbaṃ acarimaṃ uppajjantī”ti?"
msgstr ""

msgctxt "dn9:28.2"
msgid "“Saññā kho, poṭṭhapāda, paṭhamaṃ uppajjati, pacchā ñāṇaṃ, saññuppādā ca pana ñāṇuppādo hoti."
msgstr ""

msgctxt "dn9:28.3"
msgid "So evaṃ pajānāti:"
msgstr ""

msgctxt "dn9:28.4"
msgid "‘idappaccayā kira me ñāṇaṃ udapādī’ti."
msgstr ""

msgctxt "dn9:28.5"
msgid "Iminā kho etaṃ, poṭṭhapāda, pariyāyena veditabbaṃ—"
msgstr ""

msgctxt "dn9:28.6"
msgid "yathā saññā paṭhamaṃ uppajjati, pacchā ñāṇaṃ, saññuppādā ca pana ñāṇuppādo hotī”ti."
msgstr ""

#. </p><h3>
msgctxt "dn9:29.1"
msgid "1.3. Saññāattakathā"
msgstr ""

#. </h3><p><a class="sc" id="24"></a><a class="wp" id="wp21"></a><a class="pts"
#. id="pts1.186"></a>
msgctxt "dn9:30.1"
msgid "“Saññā nu kho, bhante, purisassa attā, udāhu aññā saññā añño attā”ti?"
msgstr ""

msgctxt "dn9:30.2"
msgid "“Kaṃ pana tvaṃ, poṭṭhapāda, attānaṃ paccesī”ti?"
msgstr ""

msgctxt "dn9:30.3"
msgid "“Oḷārikaṃ kho ahaṃ, bhante, attānaṃ paccemi rūpiṃ cātumahābhūtikaṃ kabaḷīkārāhārabhakkhan”ti."
msgstr ""

msgctxt "dn9:30.4"
msgid "“Oḷāriko ca hi te, poṭṭhapāda, attā abhavissa rūpī cātumahābhūtiko kabaḷīkārāhārabhakkho."
msgstr ""

msgctxt "dn9:30.5"
msgid "Evaṃ santaṃ kho te, poṭṭhapāda, aññāva saññā bhavissati añño attā."
msgstr ""

msgctxt "dn9:30.6"
msgid "Tadamināpetaṃ, poṭṭhapāda, pariyāyena veditabbaṃ yathā aññāva saññā bhavissati añño attā."
msgstr ""

#. VAR: Tiṭṭhateva sāyaṃ → tiṭṭhateva ayaṃ (s1-3) | tiṭṭhatevāyaṃ (pts1)
msgctxt "dn9:30.7"
msgid "Tiṭṭhateva sāyaṃ, poṭṭhapāda, oḷāriko attā rūpī cātumahābhūtiko kabaḷīkārāhārabhakkho, atha imassa purisassa aññā ca saññā uppajjanti, aññā ca saññā nirujjhanti."
msgstr ""

msgctxt "dn9:30.8"
msgid "Iminā kho etaṃ, poṭṭhapāda, pariyāyena veditabbaṃ yathā aññāva saññā bhavissati añño attā”ti."
msgstr ""

#. </p><p><a class="sc" id="25"></a><a class="wp" id="wp22"></a>
msgctxt "dn9:31.1"
msgid "“Manomayaṃ kho ahaṃ, bhante, attānaṃ paccemi sabbaṅgapaccaṅgiṃ ahīnindriyan”ti."
msgstr ""

msgctxt "dn9:31.2"
msgid "“Manomayo ca hi te, poṭṭhapāda, attā abhavissa sabbaṅgapaccaṅgī ahīnindriyo, evaṃ santampi kho te, poṭṭhapāda, aññāva saññā bhavissati añño attā."
msgstr ""

msgctxt "dn9:31.3"
msgid "Tadamināpetaṃ, poṭṭhapāda, pariyāyena veditabbaṃ yathā aññāva saññā bhavissati añño attā."
msgstr ""

msgctxt "dn9:31.4"
msgid "Tiṭṭhateva sāyaṃ, poṭṭhapāda, manomayo attā sabbaṅgapaccaṅgī ahīnindriyo, atha imassa purisassa aññā ca saññā uppajjanti, aññā ca saññā nirujjhanti."
msgstr ""

msgctxt "dn9:31.5"
msgid "Imināpi kho etaṃ, poṭṭhapāda, pariyāyena veditabbaṃ yathā aññāva saññā bhavissati añño attā”ti."
msgstr ""

#. </p><p><a class="sc" id="26"></a><a class="wp" id="wp23"></a><a class="pts"
#. id="pts1.187"></a>
msgctxt "dn9:32.1"
msgid "“Arūpiṃ kho ahaṃ, bhante, attānaṃ paccemi saññāmayan”ti."
msgstr ""

msgctxt "dn9:32.2"
msgid "“Arūpī ca hi te, poṭṭhapāda, attā abhavissa saññāmayo, evaṃ santampi kho te, poṭṭhapāda, aññāva saññā bhavissati añño attā."
msgstr ""

msgctxt "dn9:32.3"
msgid "Tadamināpetaṃ, poṭṭhapāda, pariyāyena veditabbaṃ yathā aññāva saññā bhavissati añño attā."
msgstr ""

msgctxt "dn9:32.4"
msgid "Tiṭṭhateva sāyaṃ, poṭṭhapāda, arūpī attā saññāmayo, atha imassa purisassa aññā ca saññā uppajjanti, aññā ca saññā nirujjhanti."
msgstr ""

msgctxt "dn9:32.5"
msgid "Imināpi kho etaṃ, poṭṭhapāda, pariyāyena veditabbaṃ yathā aññāva saññā bhavissati añño attā”ti."
msgstr ""

#. </p><p><a class="sc" id="27"></a><a class="wp" id="wp24"></a>
#. VAR: etaṃ → evaṃ (mr)
msgctxt "dn9:33.1"
msgid "“Sakkā panetaṃ, bhante, mayā ñātuṃ:"
msgstr ""

msgctxt "dn9:33.2"
msgid "‘saññā purisassa attā’ti vā ‘aññāva saññā añño attā’ti vā”ti?"
msgstr ""

msgctxt "dn9:33.3"
msgid "“Dujjānaṃ kho etaṃ, poṭṭhapāda, tayā aññadiṭṭhikena aññakhantikena aññarucikena aññatrāyogena aññatrācariyakena:"
msgstr ""

msgctxt "dn9:33.4"
msgid "‘saññā purisassa attā’ti vā, ‘aññāva saññā añño attāti’ vā”ti."
msgstr ""

#. </p><p><a class="sc" id="28"></a><a class="wp" id="wp25"></a>
#. VAR: aññatrāyogena → aññattha āyogena (s1-3) | anñatrayogena (^mn72#17
#. [Aggi­vaccha­sutta])
msgctxt "dn9:34.1"
msgid "“Sacetaṃ, bhante, mayā dujjānaṃ aññadiṭṭhikena aññakhantikena aññarucikena aññatrāyogena aññatrācariyakena:"
msgstr ""

msgctxt "dn9:34.2"
msgid "‘saññā purisassa attā’ti vā, ‘aññāva saññā añño attā’ti vā;"
msgstr ""

msgctxt "dn9:34.3"
msgid "kiṃ pana, bhante, ‘sassato loko, idameva saccaṃ moghamaññan’”ti?"
msgstr ""

msgctxt "dn9:34.4"
msgid "“Abyākataṃ kho etaṃ, poṭṭhapāda, mayā:"
msgstr ""

msgctxt "dn9:34.5"
msgid "‘sassato loko, idameva saccaṃ moghamaññan’”ti."
msgstr ""

#. </p><p><a class="sc" id="29"></a><a class="wp" id="wp26"></a>
msgctxt "dn9:35.1"
msgid "“Kiṃ pana, bhante, ‘asassato loko, idameva saccaṃ moghamaññan’”ti?"
msgstr ""

msgctxt "dn9:35.2"
msgid "“Etampi kho, poṭṭhapāda, mayā abyākataṃ:"
msgstr ""

msgctxt "dn9:35.3"
msgid "‘asassato loko, idameva saccaṃ moghamaññan’”ti."
msgstr ""

#. </p><p><a class="sc" id="30"></a><a class="wp" id="wp27"></a><a class="pts"
#. id="pts1.188"></a>
msgctxt "dn9:36.1"
msgid "“Kiṃ pana, bhante, ‘antavā loko …"
msgstr ""

msgctxt "dn9:36.2"
msgid "pe …"
msgstr ""

msgctxt "dn9:36.3"
msgid "‘anantavā loko …"
msgstr ""

msgctxt "dn9:36.4"
msgid "‘taṃ jīvaṃ taṃ sarīraṃ …"
msgstr ""

msgctxt "dn9:36.5"
msgid "‘aññaṃ jīvaṃ aññaṃ sarīraṃ …"
msgstr ""

msgctxt "dn9:36.6"
msgid "‘hoti tathāgato paraṃ maraṇā …"
msgstr ""

msgctxt "dn9:36.7"
msgid "‘na hoti tathāgato paraṃ maraṇā …"
msgstr ""

msgctxt "dn9:36.8"
msgid "‘hoti ca na ca hoti tathāgato paraṃ maraṇā …"
msgstr ""

msgctxt "dn9:36.9"
msgid "‘neva hoti na na hoti tathāgato paraṃ maraṇā, idameva saccaṃ moghamaññan’”ti?"
msgstr ""

msgctxt "dn9:36.10"
msgid "“Etampi kho, poṭṭhapāda, mayā abyākataṃ:"
msgstr ""

msgctxt "dn9:36.11"
msgid "‘neva hoti na na hoti tathāgato paraṃ maraṇā, idameva saccaṃ moghamaññan’”ti."
msgstr ""

#. </p><p><a class="sc" id="31"></a><a class="wp" id="wp28"></a><a class="pts"
#. id="pts1.189"></a>
msgctxt "dn9:37.1"
msgid "“Kasmā panetaṃ, bhante, bhagavatā abyākatan”ti?"
msgstr ""

msgctxt "dn9:37.2"
msgid "“Na hetaṃ, poṭṭhapāda, atthasaṃhitaṃ na dhammasaṃhitaṃ nādibrahmacariyakaṃ, na nibbidāya na virāgāya na nirodhāya na upasamāya na abhiññāya na sambodhāya na nibbānāya saṃvattati, tasmā etaṃ mayā abyākatan”ti."
msgstr ""

#. </p><p><a class="sc" id="32"></a><a class="wp" id="wp29"></a>
msgctxt "dn9:38.1"
msgid "“Kiṃ pana, bhante, bhagavatā byākatan”ti?"
msgstr ""

msgctxt "dn9:38.2"
msgid "“Idaṃ dukkhanti kho, poṭṭhapāda, mayā byākataṃ."
msgstr ""

msgctxt "dn9:38.3"
msgid "Ayaṃ dukkhasamudayoti kho, poṭṭhapāda, mayā byākataṃ."
msgstr ""

msgctxt "dn9:38.4"
msgid "Ayaṃ dukkhanirodhoti kho, poṭṭhapāda, mayā byākataṃ."
msgstr ""

msgctxt "dn9:38.5"
msgid "Ayaṃ dukkhanirodhagāminī paṭipadāti kho, poṭṭhapāda, mayā byākatan”ti."
msgstr ""

#. </p><p><a class="sc" id="33"></a><a class="wp" id="wp30"></a>
msgctxt "dn9:39.1"
msgid "“Kasmā panetaṃ, bhante, bhagavatā byākatan”ti?"
msgstr ""

msgctxt "dn9:39.2"
msgid "“Etañhi, poṭṭhapāda, atthasaṃhitaṃ, etaṃ dhammasaṃhitaṃ, etaṃ ādibrahmacariyakaṃ, etaṃ nibbidāya virāgāya nirodhāya upasamāya abhiññāya sambodhāya nibbānāya saṃvattati;"
msgstr ""

msgctxt "dn9:39.3"
msgid "tasmā etaṃ mayā byākatan”ti."
msgstr ""

msgctxt "dn9:39.4"
msgid "“Evametaṃ, bhagavā, evametaṃ, sugata."
msgstr ""

msgctxt "dn9:39.5"
msgid "Yassadāni, bhante, bhagavā kālaṃ maññatī”ti."
msgstr ""

msgctxt "dn9:39.6"
msgid "Atha kho bhagavā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. </p><p><a class="sc" id="34"></a><a class="wp" id="wp31"></a><a class="pts"
#. id="pts1.190"></a>
#. VAR: vācā → vācāya (si, s1-3, pts1, mr)
msgctxt "dn9:40.1"
msgid "Atha kho te paribbājakā acirapakkantassa bhagavato poṭṭhapādaṃ paribbājakaṃ samantato vācā sannitodakena sañjhabbharimakaṃsu:"
msgstr ""

msgctxt "dn9:40.2"
msgid "“evameva panāyaṃ bhavaṃ poṭṭhapādo yaññadeva samaṇo gotamo bhāsati, taṃ tadevassa abbhanumodati:"
msgstr ""

msgctxt "dn9:40.3"
msgid "‘evametaṃ, bhagavā, evametaṃ, sugatā’ti."
msgstr ""

msgctxt "dn9:40.4"
msgid "Na kho pana mayaṃ kiñci samaṇassa gotamassa ekaṃsikaṃ dhammaṃ desitaṃ ājānāma:"
msgstr ""

msgctxt "dn9:40.5"
msgid "‘sassato loko’ti vā, ‘asassato loko’ti vā, ‘antavā loko’ti vā, ‘anantavā loko’ti vā, ‘taṃ jīvaṃ taṃ sarīran’ti vā, ‘aññaṃ jīvaṃ aññaṃ sarīran’ti vā, ‘hoti tathāgato paraṃ maraṇā’ti vā, ‘na hoti tathāgato paraṃ maraṇā’ti vā, ‘hoti ca na ca hoti tathāgato paraṃ maraṇā’ti vā, ‘neva hoti na na hoti tathāgato paraṃ maraṇā’ti vā”ti."
msgstr ""

#. </p><p><a class="sc" id="35"></a>
msgctxt "dn9:41.1"
msgid "Evaṃ vutte, poṭṭhapādo paribbājako te paribbājake etadavoca:"
msgstr ""

msgctxt "dn9:41.2"
msgid "“ahampi kho, bho, na kiñci samaṇassa gotamassa ekaṃsikaṃ dhammaṃ desitaṃ ājānāmi:"
msgstr ""

msgctxt "dn9:41.3"
msgid "‘sassato loko’ti vā, ‘asassato loko’ti vā …"
msgstr ""

msgctxt "dn9:41.4"
msgid "pe …"
msgstr ""

msgctxt "dn9:41.5"
msgid "‘neva hoti na na hoti tathāgato paraṃ maraṇā’ti vā;"
msgstr ""

msgctxt "dn9:41.6"
msgid "api ca samaṇo gotamo bhūtaṃ tacchaṃ tathaṃ paṭipadaṃ paññapeti dhammaṭṭhitataṃ dhammaniyāmataṃ."
msgstr ""

msgctxt "dn9:41.7"
msgid "Bhūtaṃ kho pana tacchaṃ tathaṃ paṭipadaṃ paññapentassa dhammaṭṭhitataṃ dhammaniyāmataṃ, kathañhi nāma mādiso viññū samaṇassa gotamassa subhāsitaṃ subhāsitato nābbhanumodeyyā”ti?"
msgstr ""

#. </p><h2>
msgctxt "dn9:42.1"
msgid "2. Cittahatthisāriputtapoṭṭhapādavatthu"
msgstr ""

#. </h2><p><a class="sc" id="36"></a><a class="wp" id="wp32"></a><a class="pts"
#. id="pts1.191"></a>
msgctxt "dn9:43.1"
msgid "Atha kho dvīhatīhassa accayena citto ca hatthisāriputto poṭṭhapādo ca paribbājako yena bhagavā tenupasaṅkamiṃsu;"
msgstr ""

msgctxt "dn9:43.2"
msgid "upasaṅkamitvā citto hatthisāriputto bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "dn9:43.3"
msgid "Poṭṭhapādo pana paribbājako bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "dn9:43.4"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "dn9:43.5"
msgid "Ekamantaṃ nisinno kho poṭṭhapādo paribbājako bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn9:43.6"
msgid "“tadā maṃ, bhante, te paribbājakā acirapakkantassa bhagavato samantato vācāsannitodakena sañjhabbharimakaṃsu:"
msgstr ""

msgctxt "dn9:43.7"
msgid "‘evameva panāyaṃ bhavaṃ poṭṭhapādo yaññadeva samaṇo gotamo bhāsati, taṃ tadevassa abbhanumodati:"
msgstr ""

msgctxt "dn9:43.8"
msgid "“evametaṃ, bhagavā, evametaṃ, sugatā”ti."
msgstr ""

msgctxt "dn9:43.9"
msgid "Na kho pana mayaṃ kiñci samaṇassa gotamassa ekaṃsikaṃ dhammaṃ desitaṃ ājānāma:"
msgstr ""

msgctxt "dn9:43.10"
msgid "“sassato loko”ti vā, “asassato loko”ti vā, “antavā loko”ti vā, “anantavā loko”ti vā, “taṃ jīvaṃ taṃ sarīran”ti vā, “aññaṃ jīvaṃ aññaṃ sarīran”ti vā, “hoti tathāgato paraṃ maraṇā”ti vā, “na hoti tathāgato paraṃ maraṇā”ti vā, “hoti ca na ca hoti tathāgato paraṃ maraṇā”ti vā, “neva hoti na na hoti tathāgato paraṃ maraṇā”ti vā’ti."
msgstr ""

msgctxt "dn9:43.11"
msgid "Evaṃ vuttāhaṃ, bhante, te paribbājake etadavocaṃ:"
msgstr ""

msgctxt "dn9:43.12"
msgid "‘ahampi kho, bho, na kiñci samaṇassa gotamassa ekaṃsikaṃ dhammaṃ desitaṃ ājānāmi:"
msgstr ""

msgctxt "dn9:43.13"
msgid "“sassato loko”ti vā, “asassato loko”ti vā …"
msgstr ""

msgctxt "dn9:43.14"
msgid "pe …"
msgstr ""

msgctxt "dn9:43.15"
msgid "“neva hoti na na hoti tathāgato paraṃ maraṇā”ti vā;"
msgstr ""

msgctxt "dn9:43.16"
msgid "api ca samaṇo gotamo bhūtaṃ tacchaṃ tathaṃ paṭipadaṃ paññapeti dhammaṭṭhitataṃ dhammaniyāmataṃ."
msgstr ""

msgctxt "dn9:43.17"
msgid "Bhūtaṃ kho pana tacchaṃ tathaṃ paṭipadaṃ paññapentassa dhammaṭṭhitataṃ dhammaniyāmataṃ, kathañhi nāma mādiso viññū samaṇassa gotamassa subhāsitaṃ subhāsitato nābbhanumodeyyā’”ti?"
msgstr ""

#. </p><p><a class="sc" id="37"></a><a class="wp" id="wp33"></a>
msgctxt "dn9:44.1"
msgid "“Sabbeva kho ete, poṭṭhapāda, paribbājakā andhā acakkhukā;"
msgstr ""

msgctxt "dn9:44.2"
msgid "tvaṃyeva nesaṃ eko cakkhumā."
msgstr ""

msgctxt "dn9:44.3"
msgid "Ekaṃsikāpi hi kho, poṭṭhapāda, mayā dhammā desitā paññattā;"
msgstr ""

msgctxt "dn9:44.4"
msgid "anekaṃsikāpi hi kho, poṭṭhapāda, mayā dhammā desitā paññattā."
msgstr ""

#. </p><p><a class="sc" id="38"></a>
msgctxt "dn9:45.1"
msgid "Katame ca te, poṭṭhapāda, mayā anekaṃsikā dhammā desitā paññattā?"
msgstr ""

#. VAR: loko’ti → lokoti vā (bj, mr)
msgctxt "dn9:45.2"
msgid "‘Sassato loko’ti kho, poṭṭhapāda, mayā anekaṃsiko dhammo desito paññatto;"
msgstr ""

msgctxt "dn9:45.3"
msgid "‘asassato loko’ti kho, poṭṭhapāda, mayā anekaṃsiko dhammo desito paññatto;"
msgstr ""

msgctxt "dn9:45.4"
msgid "‘antavā loko’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.5"
msgid "pe …"
msgstr ""

msgctxt "dn9:45.6"
msgid "‘anantavā loko’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.7"
msgid "‘taṃ jīvaṃ taṃ sarīran’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.8"
msgid "‘aññaṃ jīvaṃ aññaṃ sarīran’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.9"
msgid "‘hoti tathāgato paraṃ maraṇā’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.10"
msgid "na hoti tathāgato paraṃ maraṇā’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.11"
msgid "‘hoti ca na ca hoti tathāgato paraṃ maraṇā’ti kho, poṭṭhapāda …"
msgstr ""

msgctxt "dn9:45.12"
msgid "‘neva hoti na na hoti tathāgato paraṃ maraṇā’ti kho, poṭṭhapāda, mayā anekaṃsiko dhammo desito paññatto."
msgstr ""

#. </p><p><a class="sc" id="39"></a>
msgctxt "dn9:46.1"
msgid "Kasmā ca te, poṭṭhapāda, mayā anekaṃsikā dhammā desitā paññattā?"
msgstr ""

msgctxt "dn9:46.2"
msgid "Na hete, poṭṭhapāda, atthasaṃhitā na dhammasaṃhitā na ādibrahmacariyakā na nibbidāya na virāgāya na nirodhāya na upasamāya na abhiññāya na sambodhāya na nibbānāya saṃvattanti."
msgstr ""

msgctxt "dn9:46.3"
msgid "Tasmā te mayā anekaṃsikā dhammā desitā paññattā."
msgstr ""

#. </p><h3>
msgctxt "dn9:47.1"
msgid "2.1. Ekaṃsikadhammā"
msgstr ""

#. </h3><p><a class="sc" id="40"></a><a class="pts" id="pts1.192"></a>
msgctxt "dn9:48.1"
msgid "Katame ca te, poṭṭhapāda, mayā ekaṃsikā dhammā desitā paññattā?"
msgstr ""

msgctxt "dn9:48.2"
msgid "Idaṃ dukkhanti kho, poṭṭhapāda, mayā ekaṃsiko dhammo desito paññatto."
msgstr ""

msgctxt "dn9:48.3"
msgid "Ayaṃ dukkhasamudayoti kho, poṭṭhapāda, mayā ekaṃsiko dhammo desito paññatto."
msgstr ""

msgctxt "dn9:48.4"
msgid "Ayaṃ dukkhanirodhoti kho, poṭṭhapāda, mayā ekaṃsiko dhammo desito paññatto."
msgstr ""

msgctxt "dn9:48.5"
msgid "Ayaṃ dukkhanirodhagāminī paṭipadāti kho, poṭṭhapāda, mayā ekaṃsiko dhammo desito paññatto."
msgstr ""

#. </p><p><a class="sc" id="41"></a>
msgctxt "dn9:49.1"
msgid "Kasmā ca te, poṭṭhapāda, mayā ekaṃsikā dhammā desitā paññattā?"
msgstr ""

msgctxt "dn9:49.2"
msgid "Ete hi, poṭṭhapāda, atthasaṃhitā, ete dhammasaṃhitā, ete ādibrahmacariyakā ete nibbidāya virāgāya nirodhāya upasamāya abhiññāya sambodhāya nibbānāya saṃvattanti."
msgstr ""

msgctxt "dn9:49.3"
msgid "Tasmā te mayā ekaṃsikā dhammā desitā paññattā."
msgstr ""

#. </p><p><a class="sc" id="42"></a><a class="wp" id="wp34"></a>
msgctxt "dn9:50.1"
msgid "Santi, poṭṭhapāda, eke samaṇabrāhmaṇā evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "dn9:50.2"
msgid "‘ekantasukhī attā hoti arogo paraṃ maraṇā’ti."
msgstr ""

msgctxt "dn9:50.3"
msgid "Tyāhaṃ upasaṅkamitvā evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:50.4"
msgid "‘saccaṃ kira tumhe āyasmanto evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "dn9:50.5"
msgid "“ekantasukhī attā hoti arogo paraṃ maraṇā”’ti?"
msgstr ""

msgctxt "dn9:50.6"
msgid "Te ce me evaṃ puṭṭhā ‘āmā’ti paṭijānanti."
msgstr ""

msgctxt "dn9:50.7"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:50.8"
msgid "‘api pana tumhe āyasmanto ekantasukhaṃ lokaṃ jānaṃ passaṃ viharathā’ti?"
msgstr ""

msgctxt "dn9:50.9"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="43"></a>
msgctxt "dn9:51.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

#. VAR: sañjānāthā’ti → sampajānāthāti (bj, mr) | sampajānathāpi (s1-3)
msgctxt "dn9:51.2"
msgid "‘api pana tumhe āyasmanto ekaṃ vā rattiṃ ekaṃ vā divasaṃ upaḍḍhaṃ vā rattiṃ upaḍḍhaṃ vā divasaṃ ekantasukhiṃ attānaṃ sañjānāthā’ti?"
msgstr ""

msgctxt "dn9:51.3"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="44"></a>
msgctxt "dn9:52.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:52.2"
msgid "‘api pana tumhe āyasmanto jānātha:"
msgstr ""

msgctxt "dn9:52.3"
msgid "“ayaṃ maggo ayaṃ paṭipadā ekantasukhassa lokassa sacchikiriyāyā”’ti?"
msgstr ""

msgctxt "dn9:52.4"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="45"></a><a class="pts" id="pts1.193"></a>
msgctxt "dn9:53.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:53.2"
msgid "‘api pana tumhe āyasmanto yā tā devatā ekantasukhaṃ lokaṃ upapannā, tāsaṃ bhāsamānānaṃ saddaṃ suṇātha:"
msgstr ""

msgctxt "dn9:53.3"
msgid "“suppaṭipannāttha, mārisā, ujuppaṭipannāttha, mārisā, ekantasukhassa lokassa sacchikiriyāya;"
msgstr ""

msgctxt "dn9:53.4"
msgid "mayampi hi, mārisā, evaṃpaṭipannā ekantasukhaṃ lokaṃ upapannā”’ti?"
msgstr ""

msgctxt "dn9:53.5"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="46"></a>
msgctxt "dn9:54.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante tesaṃ samaṇabrāhmaṇānaṃ appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:54.2"
msgid "“Addhā kho, bhante, evaṃ sante tesaṃ samaṇabrāhmaṇānaṃ appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="47"></a><a class="wp" id="wp35"></a>
msgctxt "dn9:55.1"
msgid "“Seyyathāpi, poṭṭhapāda, puriso evaṃ vadeyya:"
msgstr ""

msgctxt "dn9:55.2"
msgid "‘ahaṃ yā imasmiṃ janapade janapadakalyāṇī, taṃ icchāmi taṃ kāmemī’ti."
msgstr ""

msgctxt "dn9:55.3"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn9:55.4"
msgid "‘ambho purisa, yaṃ tvaṃ janapadakalyāṇiṃ icchasi kāmesi, jānāsi taṃ janapadakalyāṇiṃ khattiyī vā brāhmaṇī vā vessī vā suddī vā’ti?"
msgstr ""

msgctxt "dn9:55.5"
msgid "Iti puṭṭho ‘no’ti vadeyya."
msgstr ""

msgctxt "dn9:55.6"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn9:55.7"
msgid "‘ambho purisa, yaṃ tvaṃ janapadakalyāṇiṃ icchasi kāmesi, jānāsi taṃ janapadakalyāṇiṃ evaṃnāmā evaṅgottāti vā, dīghā vā rassā vā majjhimā vā kāḷī vā sāmā vā maṅguracchavī vāti, amukasmiṃ gāme vā nigame vā nagare vā’ti?"
msgstr ""

msgctxt "dn9:55.8"
msgid "Iti puṭṭho ‘no’ti vadeyya."
msgstr ""

msgctxt "dn9:55.9"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn9:55.10"
msgid "‘ambho purisa, yaṃ tvaṃ na jānāsi na passasi, taṃ tvaṃ icchasi kāmesī’ti?"
msgstr ""

msgctxt "dn9:55.11"
msgid "Iti puṭṭho ‘āmā’ti vadeyya."
msgstr ""

#. </p><p><a class="sc" id="48"></a>
msgctxt "dn9:56.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante tassa purisassa appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:56.2"
msgid "“Addhā kho, bhante, evaṃ sante tassa purisassa appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="49"></a><a class="wp" id="wp36"></a><a class="pts"
#. id="pts1.194"></a>
msgctxt "dn9:57.1"
msgid "“Evameva kho, poṭṭhapāda, ye te samaṇabrāhmaṇā evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "dn9:57.2"
msgid "‘ekantasukhī attā hoti arogo paraṃ maraṇā’ti."
msgstr ""

msgctxt "dn9:57.3"
msgid "Tyāhaṃ upasaṅkamitvā evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:57.4"
msgid "‘saccaṃ kira tumhe āyasmanto evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "dn9:57.5"
msgid "“ekantasukhī attā hoti arogo paraṃ maraṇā”’ti?"
msgstr ""

msgctxt "dn9:57.6"
msgid "Te ce me evaṃ puṭṭhā ‘āmā’ti paṭijānanti."
msgstr ""

msgctxt "dn9:57.7"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:57.8"
msgid "‘api pana tumhe āyasmanto ekantasukhaṃ lokaṃ jānaṃ passaṃ viharathā’ti?"
msgstr ""

msgctxt "dn9:57.9"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="50"></a>
msgctxt "dn9:58.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:58.2"
msgid "‘api pana tumhe āyasmanto ekaṃ vā rattiṃ ekaṃ vā divasaṃ upaḍḍhaṃ vā rattiṃ upaḍḍhaṃ vā divasaṃ ekantasukhiṃ attānaṃ sañjānāthā’ti?"
msgstr ""

msgctxt "dn9:58.3"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="51"></a>
msgctxt "dn9:59.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:59.2"
msgid "‘api pana tumhe āyasmanto jānātha:"
msgstr ""

msgctxt "dn9:59.3"
msgid "“ayaṃ maggo ayaṃ paṭipadā ekantasukhassa lokassa sacchikiriyāyā”’ti?"
msgstr ""

msgctxt "dn9:59.4"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="52"></a>
msgctxt "dn9:60.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:60.2"
msgid "‘api pana tumhe āyasmanto yā tā devatā ekantasukhaṃ lokaṃ upapannā, tāsaṃ bhāsamānānaṃ saddaṃ suṇātha:"
msgstr ""

msgctxt "dn9:60.3"
msgid "“suppaṭipannāttha, mārisā, ujuppaṭipannāttha, mārisā, ekantasukhassa lokassa sacchikiriyāya;"
msgstr ""

msgctxt "dn9:60.4"
msgid "mayampi hi, mārisā, evaṃpaṭipannā ekantasukhaṃ lokaṃ upapannā”’ti?"
msgstr ""

msgctxt "dn9:60.5"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="53"></a>
msgctxt "dn9:61.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante tesaṃ samaṇabrāhmaṇānaṃ appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:61.2"
msgid "“Addhā kho, bhante, evaṃ sante tesaṃ samaṇabrāhmaṇānaṃ appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="54"></a><a class="wp" id="wp37"></a>
msgctxt "dn9:62.1"
msgid "“Seyyathāpi, poṭṭhapāda, puriso cātumahāpathe nisseṇiṃ kareyya pāsādassa ārohaṇāya."
msgstr ""

msgctxt "dn9:62.2"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

#. VAR: yassa tvaṃ → yaṃ tvaṃ (mr)
msgctxt "dn9:62.3"
msgid "‘ambho purisa, yassa tvaṃ pāsādassa ārohaṇāya nisseṇiṃ karosi, jānāsi taṃ pāsādaṃ puratthimāya vā disāya dakkhiṇāya vā disāya pacchimāya vā disāya uttarāya vā disāya ucco vā nīco vā majjhimo vā’ti?"
msgstr ""

msgctxt "dn9:62.4"
msgid "Iti puṭṭho ‘no’ti vadeyya."
msgstr ""

msgctxt "dn9:62.5"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn9:62.6"
msgid "‘ambho purisa, yaṃ tvaṃ na jānāsi na passasi, tassa tvaṃ pāsādassa ārohaṇāya nisseṇiṃ karosī’ti?"
msgstr ""

msgctxt "dn9:62.7"
msgid "Iti puṭṭho ‘āmā’ti vadeyya."
msgstr ""

#. </p><p><a class="sc" id="55"></a>
msgctxt "dn9:63.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante tassa purisassa appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:63.2"
msgid "“Addhā kho, bhante, evaṃ sante tassa purisassa appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="56"></a><a class="wp" id="wp38"></a><a class="pts"
#. id="pts1.195"></a>
msgctxt "dn9:64.1"
msgid "“Evameva kho, poṭṭhapāda, ye te samaṇabrāhmaṇā evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "dn9:64.2"
msgid "‘ekantasukhī attā hoti arogo paraṃ maraṇā’ti."
msgstr ""

msgctxt "dn9:64.3"
msgid "Tyāhaṃ upasaṅkamitvā evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:64.4"
msgid "‘saccaṃ kira tumhe āyasmanto evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "dn9:64.5"
msgid "“ekantasukhī attā hoti arogo paraṃ maraṇā”’ti?"
msgstr ""

msgctxt "dn9:64.6"
msgid "Te ce me evaṃ puṭṭhā ‘āmā’ti paṭijānanti."
msgstr ""

msgctxt "dn9:64.7"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:64.8"
msgid "‘api pana tumhe āyasmanto ekantasukhaṃ lokaṃ jānaṃ passaṃ viharathā’ti?"
msgstr ""

msgctxt "dn9:64.9"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="57"></a>
msgctxt "dn9:65.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:65.2"
msgid "‘api pana tumhe āyasmanto ekaṃ vā rattiṃ ekaṃ vā divasaṃ upaḍḍhaṃ vā rattiṃ upaḍḍhaṃ vā divasaṃ ekantasukhiṃ attānaṃ sañjānāthā’ti?"
msgstr ""

msgctxt "dn9:65.3"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="58"></a>
msgctxt "dn9:66.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:66.2"
msgid "‘api pana tumhe āyasmanto jānātha ayaṃ maggo ayaṃ paṭipadā ekantasukhassa lokassa sacchikiriyāyā’ti?"
msgstr ""

msgctxt "dn9:66.3"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="59"></a>
msgctxt "dn9:67.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "dn9:67.2"
msgid "‘api pana tumhe āyasmanto yā tā devatā ekantasukhaṃ lokaṃ upapannā tāsaṃ devatānaṃ bhāsamānānaṃ saddaṃ suṇātha:"
msgstr ""

msgctxt "dn9:67.3"
msgid "“suppaṭipannāttha, mārisā, ujuppaṭipannāttha, mārisā, ekantasukhassa lokassa sacchikiriyāya;"
msgstr ""

msgctxt "dn9:67.4"
msgid "mayampi hi, mārisā, evaṃ paṭipannā ekantasukhaṃ lokaṃ upapannā”’ti?"
msgstr ""

msgctxt "dn9:67.5"
msgid "Iti puṭṭhā ‘no’ti vadanti."
msgstr ""

#. </p><p><a class="sc" id="60"></a>
msgctxt "dn9:68.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante tesaṃ samaṇabrāhmaṇānaṃ appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:68.2"
msgid "“Addhā kho, bhante, evaṃ sante tesaṃ samaṇabrāhmaṇānaṃ appāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><h3>
msgctxt "dn9:69.1"
msgid "2.2. Tayoattapaṭilābha"
msgstr ""

#. </h3><p><a class="sc" id="61"></a><a class="wp" id="wp39"></a>
msgctxt "dn9:70.1"
msgid "“Tayo kho me, poṭṭhapāda, attapaṭilābhā—"
msgstr ""

msgctxt "dn9:70.2"
msgid "oḷāriko attapaṭilābho, manomayo attapaṭilābho, arūpo attapaṭilābho."
msgstr ""

msgctxt "dn9:70.3"
msgid "Katamo ca, poṭṭhapāda, oḷāriko attapaṭilābho?"
msgstr ""

msgctxt "dn9:70.4"
msgid "Rūpī cātumahābhūtiko kabaḷīkārāhārabhakkho, ayaṃ oḷāriko attapaṭilābho."
msgstr ""

msgctxt "dn9:70.5"
msgid "Katamo manomayo attapaṭilābho?"
msgstr ""

msgctxt "dn9:70.6"
msgid "Rūpī manomayo sabbaṅgapaccaṅgī ahīnindriyo, ayaṃ manomayo attapaṭilābho."
msgstr ""

msgctxt "dn9:70.7"
msgid "Katamo arūpo attapaṭilābho?"
msgstr ""

msgctxt "dn9:70.8"
msgid "Arūpī saññāmayo, ayaṃ arūpo attapaṭilābho."
msgstr ""

#. </p><p><a class="sc" id="62"></a><a class="wp" id="wp40"></a><a class="pts"
#. id="pts1.196"></a>
msgctxt "dn9:71.1"
msgid "Oḷārikassapi kho ahaṃ, poṭṭhapāda, attapaṭilābhassa pahānāya dhammaṃ desemi:"
msgstr ""

msgctxt "dn9:71.2"
msgid "‘yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

msgctxt "dn9:71.3"
msgid "Siyā kho pana te, poṭṭhapāda, evamassa:"
msgstr ""

msgctxt "dn9:71.4"
msgid "‘saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissati, dukkho ca kho vihāro’ti."
msgstr ""

msgctxt "dn9:71.5"
msgid "Na kho panetaṃ, poṭṭhapāda, evaṃ daṭṭhabbaṃ."
msgstr ""

msgctxt "dn9:71.6"
msgid "Saṅkilesikā ceva dhammā pahīyissanti, vodāniyā ca dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissati, pāmujjañceva bhavissati pīti ca passaddhi ca sati ca sampajaññañca sukho ca vihāro."
msgstr ""

#. </p><p><a class="sc" id="63"></a><a class="wp" id="wp41"></a>
msgctxt "dn9:72.1"
msgid "Manomayassapi kho ahaṃ, poṭṭhapāda, attapaṭilābhassa pahānāya dhammaṃ desemi:"
msgstr ""

msgctxt "dn9:72.2"
msgid "‘yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

msgctxt "dn9:72.3"
msgid "Siyā kho pana te, poṭṭhapāda, evamassa:"
msgstr ""

msgctxt "dn9:72.4"
msgid "‘saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissati, dukkho ca kho vihāro’ti."
msgstr ""

msgctxt "dn9:72.5"
msgid "Na kho panetaṃ, poṭṭhapāda, evaṃ daṭṭhabbaṃ."
msgstr ""

msgctxt "dn9:72.6"
msgid "Saṅkilesikā ceva dhammā pahīyissanti, vodāniyā ca dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissati, pāmujjañceva bhavissati pīti ca passaddhi ca sati ca sampajaññañca sukho ca vihāro."
msgstr ""

#. </p><p><a class="sc" id="64"></a><a class="wp" id="wp42"></a><a class="pts"
#. id="pts1.197"></a>
msgctxt "dn9:73.1"
msgid "Arūpassapi kho ahaṃ, poṭṭhapāda, attapaṭilābhassa pahānāya dhammaṃ desemi:"
msgstr ""

msgctxt "dn9:73.2"
msgid "‘yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

msgctxt "dn9:73.3"
msgid "Siyā kho pana te, poṭṭhapāda, evamassa:"
msgstr ""

msgctxt "dn9:73.4"
msgid "‘saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissati, dukkho ca kho vihāro’ti."
msgstr ""

msgctxt "dn9:73.5"
msgid "Na kho panetaṃ, poṭṭhapāda, evaṃ daṭṭhabbaṃ."
msgstr ""

msgctxt "dn9:73.6"
msgid "Saṅkilesikā ceva dhammā pahīyissanti, vodāniyā ca dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissati, pāmujjañceva bhavissati pīti ca passaddhi ca sati ca sampajaññañca sukho ca vihāro."
msgstr ""

#. </p><p><a class="sc" id="65"></a><a class="wp" id="wp43"></a>
msgctxt "dn9:74.1"
msgid "Pare ce, poṭṭhapāda, amhe evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:74.2"
msgid "‘katamo pana so, āvuso, oḷāriko attapaṭilābho, yassa tumhe pahānāya dhammaṃ desetha, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti, tesaṃ mayaṃ evaṃ puṭṭhā evaṃ byākareyyāma:"
msgstr ""

msgctxt "dn9:74.3"
msgid "‘ayaṃ vā so, āvuso, oḷāriko attapaṭilābho, yassa mayaṃ pahānāya dhammaṃ desema, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

#. </p><p><a class="sc" id="66"></a><a class="wp" id="wp44"></a><a class="pts"
#. id="pts1.198"></a>
msgctxt "dn9:75.1"
msgid "Pare ce, poṭṭhapāda, amhe evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:75.2"
msgid "‘katamo pana so, āvuso, manomayo attapaṭilābho, yassa tumhe pahānāya dhammaṃ desetha, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti?"
msgstr ""

msgctxt "dn9:75.3"
msgid "Tesaṃ mayaṃ evaṃ puṭṭhā evaṃ byākareyyāma:"
msgstr ""

msgctxt "dn9:75.4"
msgid "‘ayaṃ vā so, āvuso, manomayo attapaṭilābho yassa mayaṃ pahānāya dhammaṃ desema, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

#. </p><p><a class="sc" id="67"></a><a class="wp" id="wp45"></a>
msgctxt "dn9:76.1"
msgid "Pare ce, poṭṭhapāda, amhe evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:76.2"
msgid "‘katamo pana so, āvuso, arūpo attapaṭilābho, yassa tumhe pahānāya dhammaṃ desetha, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti?"
msgstr ""

msgctxt "dn9:76.3"
msgid "Tesaṃ mayaṃ evaṃ puṭṭhā evaṃ byākareyyāma:"
msgstr ""

msgctxt "dn9:76.4"
msgid "‘ayaṃ vā so, āvuso, arūpo attapaṭilābho yassa mayaṃ pahānāya dhammaṃ desema, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

#. </p><p><a class="sc" id="68"></a>
msgctxt "dn9:77.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante sappāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:77.2"
msgid "“Addhā kho, bhante, evaṃ sante sappāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="69"></a><a class="wp" id="wp46"></a>
msgctxt "dn9:78.1"
msgid "“Seyyathāpi, poṭṭhapāda, puriso nisseṇiṃ kareyya pāsādassa ārohaṇāya tasseva pāsādassa heṭṭhā."
msgstr ""

msgctxt "dn9:78.2"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn9:78.3"
msgid "‘ambho purisa, yassa tvaṃ pāsādassa ārohaṇāya nisseṇiṃ karosi, jānāsi taṃ pāsādaṃ, puratthimāya vā disāya dakkhiṇāya vā disāya pacchimāya vā disāya uttarāya vā disāya ucco vā nīco vā majjhimo vā’ti?"
msgstr ""

msgctxt "dn9:78.4"
msgid "So evaṃ vadeyya:"
msgstr ""

msgctxt "dn9:78.5"
msgid "‘ayaṃ vā so, āvuso, pāsādo, yassāhaṃ ārohaṇāya nisseṇiṃ karomi, tasseva pāsādassa heṭṭhā’ti."
msgstr ""

#. </p><p><a class="sc" id="70"></a>
msgctxt "dn9:79.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante tassa purisassa sappāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:79.2"
msgid "“Addhā kho, bhante, evaṃ sante tassa purisassa sappāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="71"></a><a class="wp" id="wp47"></a><a class="pts"
#. id="pts1.199"></a>
msgctxt "dn9:80.1"
msgid "“Evameva kho, poṭṭhapāda, pare ce amhe evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:80.2"
msgid "‘katamo pana so, āvuso, oḷāriko attapaṭilābho …"
msgstr ""

msgctxt "dn9:80.3"
msgid "pe …"
msgstr ""

msgctxt "dn9:80.4"
msgid "katamo pana so, āvuso, manomayo attapaṭilābho …"
msgstr ""

msgctxt "dn9:80.5"
msgid "pe …"
msgstr ""

msgctxt "dn9:80.6"
msgid "katamo pana so, āvuso, arūpo attapaṭilābho, yassa tumhe pahānāya dhammaṃ desetha, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti?"
msgstr ""

msgctxt "dn9:80.7"
msgid "Tesaṃ mayaṃ evaṃ puṭṭhā evaṃ byākareyyāma:"
msgstr ""

msgctxt "dn9:80.8"
msgid "‘ayaṃ vā so, āvuso, arūpo attapaṭilābho, yassa mayaṃ pahānāya dhammaṃ desema, yathāpaṭipannānaṃ vo saṅkilesikā dhammā pahīyissanti, vodāniyā dhammā abhivaḍḍhissanti, paññāpāripūriṃ vepullattañca diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja viharissathā’ti."
msgstr ""

#. </p><p><a class="sc" id="72"></a>
msgctxt "dn9:81.1"
msgid "Taṃ kiṃ maññasi, poṭṭhapāda, nanu evaṃ sante sappāṭihīrakataṃ bhāsitaṃ sampajjatī”ti?"
msgstr ""

msgctxt "dn9:81.2"
msgid "“Addhā kho, bhante, evaṃ sante sappāṭihīrakataṃ bhāsitaṃ sampajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="73"></a><a class="wp" id="wp48"></a>
msgctxt "dn9:82.1"
msgid "Evaṃ vutte, citto hatthisāriputto bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn9:82.2"
msgid "“yasmiṃ, bhante, samaye oḷāriko attapaṭilābho hoti, moghassa tasmiṃ samaye manomayo attapaṭilābho hoti, mogho arūpo attapaṭilābho hoti;"
msgstr ""

msgctxt "dn9:82.3"
msgid "oḷāriko vāssa attapaṭilābho tasmiṃ samaye sacco hoti."
msgstr ""

msgctxt "dn9:82.4"
msgid "Yasmiṃ, bhante, samaye manomayo attapaṭilābho hoti, moghassa tasmiṃ samaye oḷāriko attapaṭilābho hoti, mogho arūpo attapaṭilābho hoti;"
msgstr ""

msgctxt "dn9:82.5"
msgid "manomayo vāssa attapaṭilābho tasmiṃ samaye sacco hoti."
msgstr ""

msgctxt "dn9:82.6"
msgid "Yasmiṃ, bhante, samaye arūpo attapaṭilābho hoti, moghassa tasmiṃ samaye oḷāriko attapaṭilābho hoti, mogho manomayo attapaṭilābho hoti;"
msgstr ""

msgctxt "dn9:82.7"
msgid "arūpo vāssa attapaṭilābho tasmiṃ samaye sacco hotī”ti."
msgstr ""

#. </p><p><a class="sc" id="74"></a><a class="wp" id="wp49"></a><a class="pts"
#. id="pts1.200"></a>
msgctxt "dn9:83.1"
msgid "“Yasmiṃ, citta, samaye oḷāriko attapaṭilābho hoti, neva tasmiṃ samaye manomayo attapaṭilābhoti saṅkhaṃ gacchati, na arūpo attapaṭilābhoti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:83.2"
msgid "oḷāriko attapaṭilābhotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

msgctxt "dn9:83.3"
msgid "Yasmiṃ, citta, samaye manomayo attapaṭilābho hoti, neva tasmiṃ samaye oḷāriko attapaṭilābhoti saṅkhaṃ gacchati, na arūpo attapaṭilābhoti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:83.4"
msgid "manomayo attapaṭilābhotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

msgctxt "dn9:83.5"
msgid "Yasmiṃ, citta, samaye arūpo attapaṭilābho hoti, neva tasmiṃ samaye oḷāriko attapaṭilābhoti saṅkhaṃ gacchati, na manomayo attapaṭilābhoti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:83.6"
msgid "arūpo attapaṭilābhotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

#. </p><p><a class="sc" id="75"></a>
msgctxt "dn9:84.1"
msgid "Sace taṃ, citta, evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:84.2"
msgid "‘ahosi tvaṃ atītamaddhānaṃ, na tvaṃ nāhosi;"
msgstr ""

msgctxt "dn9:84.3"
msgid "bhavissasi tvaṃ anāgatamaddhānaṃ, na tvaṃ na bhavissasi;"
msgstr ""

msgctxt "dn9:84.4"
msgid "atthi tvaṃ etarahi, na tvaṃ natthī’ti."
msgstr ""

msgctxt "dn9:84.5"
msgid "Evaṃ puṭṭho tvaṃ, citta, kinti byākareyyāsī”ti?"
msgstr ""

#. </p><p><a class="sc" id="76"></a>
msgctxt "dn9:85.1"
msgid "“Sace maṃ, bhante, evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:85.2"
msgid "‘ahosi tvaṃ atītamaddhānaṃ, na tvaṃ na ahosi;"
msgstr ""

msgctxt "dn9:85.3"
msgid "bhavissasi tvaṃ anāgatamaddhānaṃ, na tvaṃ na bhavissasi;"
msgstr ""

msgctxt "dn9:85.4"
msgid "atthi tvaṃ etarahi, na tvaṃ natthī’ti."
msgstr ""

msgctxt "dn9:85.5"
msgid "Evaṃ puṭṭho ahaṃ, bhante, evaṃ byākareyyaṃ:"
msgstr ""

msgctxt "dn9:85.6"
msgid "‘ahosāhaṃ atītamaddhānaṃ, nāhaṃ na ahosiṃ;"
msgstr ""

msgctxt "dn9:85.7"
msgid "bhavissāmahaṃ anāgatamaddhānaṃ, nāhaṃ na bhavissāmi;"
msgstr ""

msgctxt "dn9:85.8"
msgid "atthāhaṃ etarahi, nāhaṃ natthī’ti."
msgstr ""

msgctxt "dn9:85.9"
msgid "Evaṃ puṭṭho ahaṃ, bhante, evaṃ byākareyyan”ti."
msgstr ""

#. </p><p><a class="sc" id="77"></a><a class="wp" id="wp50"></a>
msgctxt "dn9:86.1"
msgid "“Sace pana taṃ, citta, evaṃ puccheyyuṃ:"
msgstr ""

#. VAR: sova → svera (bj, pts1) | soyeva (s1-3) | so ca (mr)
msgctxt "dn9:86.2"
msgid "‘yo te ahosi atīto attapaṭilābho, sova te attapaṭilābho sacco, mogho anāgato, mogho paccuppanno?"
msgstr ""

#. VAR: Yo → yo va (pts1)
msgctxt "dn9:86.3"
msgid "Yo te bhavissati anāgato attapaṭilābho, sova te attapaṭilābho sacco, mogho atīto, mogho paccuppanno?"
msgstr ""

msgctxt "dn9:86.4"
msgid "Yo te etarahi paccuppanno attapaṭilābho, sova te attapaṭilābho sacco, mogho atīto, mogho anāgato’ti."
msgstr ""

msgctxt "dn9:86.5"
msgid "Evaṃ puṭṭho tvaṃ, citta, kinti byākareyyāsī”ti?"
msgstr ""

#. </p><p><a class="sc" id="78"></a><a class="pts" id="pts1.201"></a>
msgctxt "dn9:87.1"
msgid "“Sace pana maṃ, bhante, evaṃ puccheyyuṃ:"
msgstr ""

msgctxt "dn9:87.2"
msgid "‘yo te ahosi atīto attapaṭilābho, sova te attapaṭilābho sacco, mogho anāgato, mogho paccuppanno."
msgstr ""

msgctxt "dn9:87.3"
msgid "Yo te bhavissati anāgato attapaṭilābho, sova te attapaṭilābho sacco, mogho atīto, mogho paccuppanno."
msgstr ""

msgctxt "dn9:87.4"
msgid "Yo te etarahi paccuppanno attapaṭilābho, sova te attapaṭilābho sacco, mogho atīto, mogho anāgato’ti."
msgstr ""

msgctxt "dn9:87.5"
msgid "Evaṃ puṭṭho ahaṃ, bhante, evaṃ byākareyyaṃ:"
msgstr ""

msgctxt "dn9:87.6"
msgid "‘yo me ahosi atīto attapaṭilābho, sova me attapaṭilābho tasmiṃ samaye sacco ahosi, mogho anāgato, mogho paccuppanno."
msgstr ""

msgctxt "dn9:87.7"
msgid "Yo me bhavissati anāgato attapaṭilābho, sova me attapaṭilābho tasmiṃ samaye sacco bhavissati, mogho atīto, mogho paccuppanno."
msgstr ""

msgctxt "dn9:87.8"
msgid "Yo me etarahi paccuppanno attapaṭilābho, sova me attapaṭilābho sacco, mogho atīto, mogho anāgato’ti."
msgstr ""

msgctxt "dn9:87.9"
msgid "Evaṃ puṭṭho ahaṃ, bhante, evaṃ byākareyyan”ti."
msgstr ""

#. </p><p><a class="sc" id="79"></a><a class="wp" id="wp51"></a>
msgctxt "dn9:88.1"
msgid "“Evameva kho, citta, yasmiṃ samaye oḷāriko attapaṭilābho hoti, neva tasmiṃ samaye manomayo attapaṭilābhoti saṅkhaṃ gacchati, na arūpo attapaṭilābhoti saṅkhaṃ gacchati."
msgstr ""

msgctxt "dn9:88.2"
msgid "Oḷāriko attapaṭilābhotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

msgctxt "dn9:88.3"
msgid "Yasmiṃ, citta, samaye manomayo attapaṭilābho hoti …"
msgstr ""

msgctxt "dn9:88.4"
msgid "pe …"
msgstr ""

msgctxt "dn9:88.5"
msgid "yasmiṃ, citta, samaye arūpo attapaṭilābho hoti, neva tasmiṃ samaye oḷāriko attapaṭilābhoti saṅkhaṃ gacchati, na manomayo attapaṭilābhoti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:88.6"
msgid "arūpo attapaṭilābhotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

#. </p><p><a class="sc" id="80"></a><a class="wp" id="wp52"></a><a class="pts"
#. id="pts1.202"></a>
msgctxt "dn9:89.1"
msgid "Seyyathāpi, citta, gavā khīraṃ, khīramhā dadhi, dadhimhā navanītaṃ, navanītamhā sappi, sappimhā sappimaṇḍo."
msgstr ""

msgctxt "dn9:89.2"
msgid "Yasmiṃ samaye khīraṃ hoti, neva tasmiṃ samaye dadhīti saṅkhaṃ gacchati, na navanītanti saṅkhaṃ gacchati, na sappīti saṅkhaṃ gacchati, na sappimaṇḍoti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:89.3"
msgid "khīrantveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

msgctxt "dn9:89.4"
msgid "Yasmiṃ samaye dadhi hoti …"
msgstr ""

msgctxt "dn9:89.5"
msgid "pe …"
msgstr ""

msgctxt "dn9:89.6"
msgid "navanītaṃ hoti …"
msgstr ""

msgctxt "dn9:89.7"
msgid "sappi hoti …"
msgstr ""

msgctxt "dn9:89.8"
msgid "sappimaṇḍo hoti, neva tasmiṃ samaye khīranti saṅkhaṃ gacchati, na dadhīti saṅkhaṃ gacchati, na navanītanti saṅkhaṃ gacchati, na sappīti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:89.9"
msgid "sappimaṇḍotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

#. <a class="wp" id="wp53"></a>
msgctxt "dn9:89.10"
msgid "Evameva kho, citta, yasmiṃ samaye oḷāriko attapaṭilābho hoti …"
msgstr ""

msgctxt "dn9:89.11"
msgid "pe …"
msgstr ""

msgctxt "dn9:89.12"
msgid "yasmiṃ, citta, samaye manomayo attapaṭilābho hoti …"
msgstr ""

msgctxt "dn9:89.13"
msgid "pe …"
msgstr ""

msgctxt "dn9:89.14"
msgid "yasmiṃ, citta, samaye arūpo attapaṭilābho hoti, neva tasmiṃ samaye oḷāriko attapaṭilābhoti saṅkhaṃ gacchati, na manomayo attapaṭilābhoti saṅkhaṃ gacchati;"
msgstr ""

msgctxt "dn9:89.15"
msgid "arūpo attapaṭilābhotveva tasmiṃ samaye saṅkhaṃ gacchati."
msgstr ""

msgctxt "dn9:89.16"
msgid "Imā kho, citta, lokasamaññā lokaniruttiyo lokavohārā lokapaññattiyo, yāhi tathāgato voharati aparāmasan”ti."
msgstr ""

#. </p><p><a class="sc" id="81"></a><a class="wp" id="wp54"></a>
msgctxt "dn9:90.1"
msgid "Evaṃ vutte, poṭṭhapādo paribbājako bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn9:90.2"
msgid "“abhikkantaṃ, bhante, abhikkantaṃ, bhante."
msgstr ""

msgctxt "dn9:90.3"
msgid "Seyyathāpi, bhante, nikkujjitaṃ vā ukkujjeyya, paṭicchannaṃ vā vivareyya, mūḷhassa vā maggaṃ ācikkheyya, andhakāre vā telapajjotaṃ dhāreyya:"
msgstr ""

msgctxt "dn9:90.4"
msgid "‘cakkhumanto rūpāni dakkhantī’ti;"
msgstr ""

msgctxt "dn9:90.5"
msgid "evamevaṃ bhagavatā anekapariyāyena dhammo pakāsito."
msgstr ""

msgctxt "dn9:90.6"
msgid "Esāhaṃ, bhante, bhagavantaṃ saraṇaṃ gacchāmi dhammañca bhikkhusaṅghañca."
msgstr ""

msgctxt "dn9:90.7"
msgid "Upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gatan”ti."
msgstr ""

#. </p><h3>
msgctxt "dn9:91.1"
msgid "2.3. Cittahatthisāriputtaupasampadā"
msgstr ""

#. </h3><p><a class="sc" id="82"></a><a class="wp" id="wp55"></a>
msgctxt "dn9:92.1"
msgid "Citto pana hatthisāriputto bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn9:92.2"
msgid "“abhikkantaṃ, bhante, abhikkantaṃ, bhante."
msgstr ""

msgctxt "dn9:92.3"
msgid "Seyyathāpi, bhante, nikkujjitaṃ vā ukkujjeyya, paṭicchannaṃ vā vivareyya, mūḷhassa vā maggaṃ ācikkheyya, andhakāre vā telapajjotaṃ dhāreyya:"
msgstr ""

msgctxt "dn9:92.4"
msgid "‘cakkhumanto rūpāni dakkhantī’ti;"
msgstr ""

msgctxt "dn9:92.5"
msgid "evamevaṃ bhagavatā anekapariyāyena dhammo pakāsito."
msgstr ""

msgctxt "dn9:92.6"
msgid "Esāhaṃ, bhante, bhagavantaṃ saraṇaṃ gacchāmi dhammañca bhikkhusaṅghañca."
msgstr ""

msgctxt "dn9:92.7"
msgid "Labheyyāhaṃ, bhante, bhagavato santike pabbajjaṃ, labheyyaṃ upasampadan”ti."
msgstr ""

#. </p><p><a class="sc" id="83"></a><a class="wp" id="wp56"></a><a class="pts"
#. id="pts1.203"></a>
msgctxt "dn9:93.1"
msgid "Alattha kho citto hatthisāriputto bhagavato santike pabbajjaṃ, alattha upasampadaṃ."
msgstr ""

msgctxt "dn9:93.2"
msgid "Acirūpasampanno kho panāyasmā citto hatthisāriputto eko vūpakaṭṭho appamatto ātāpī pahitatto viharanto na cirasseva—"
msgstr ""

msgctxt "dn9:93.3"
msgid "yassatthāya kulaputtā sammadeva agārasmā anagāriyaṃ pabbajanti, tadanuttaraṃ—"
msgstr ""

msgctxt "dn9:93.4"
msgid "brahmacariyapariyosānaṃ diṭṭheva dhamme sayaṃ abhiññā sacchikatvā upasampajja vihāsi."
msgstr ""

msgctxt "dn9:93.5"
msgid "“Khīṇā jāti, vusitaṃ brahmacariyaṃ, kataṃ karaṇīyaṃ, nāparaṃ itthattāyā”ti—"
msgstr ""

msgctxt "dn9:93.6"
msgid "abbhaññāsi."
msgstr ""

msgctxt "dn9:93.7"
msgid "Aññataro kho panāyasmā citto hatthisāriputto arahataṃ ahosīti."
msgstr ""

#. </p><p class="endsutta">
msgctxt "dn9:94.1"
msgid "Poṭṭhapādasuttaṃ niṭṭhitaṃ navamaṃ."
msgstr ""

