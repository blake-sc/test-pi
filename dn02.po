msgstr ""

msgctxt "dn2:89.3"
msgid "candaggāho bhavissati, sūriyaggāho bhavissati, nakkhattaggāho bhavissati, candimasūriyānaṃ pathagamanaṃ bhavissati, candimasūriyānaṃ uppathagamanaṃ bhavissati, nakkhattānaṃ pathagamanaṃ bhavissati, nakkhattānaṃ uppathagamanaṃ bhavissati, ukkāpāto bhavissati, disāḍāho bhavissati, bhūmicālo bhavissati, devadudrabhi bhavissati, candimasūriyanakkhattānaṃ uggamanaṃ ogamanaṃ saṅkilesaṃ vodānaṃ bhavissati, evaṃvipāko candaggāho bhavissati, evaṃvipāko sūriyaggāho bhavissati, evaṃvipāko nakkhattaggāho bhavissati, evaṃvipākaṃ candimasūriyānaṃ pathagamanaṃ bhavissati, evaṃvipākaṃ candimasūriyānaṃ uppathagamanaṃ bhavissati, evaṃvipākaṃ nakkhattānaṃ pathagamanaṃ bhavissati, evaṃvipākaṃ nakkhattānaṃ uppathagamanaṃ bhavissati, evaṃvipāko ukkāpāto bhavissati, evaṃvipāko disāḍāho bhavissati, evaṃvipāko bhūmicālo bhavissati, evaṃvipāko devadudrabhi bhavissati, evaṃvipākaṃ candimasūriyanakkhattānaṃ uggamanaṃ ogamanaṃ saṅkilesaṃ vodānaṃ bhavissati iti vā iti evarūpāya tiracchānavijjāya micchājīvā paṭivirato hoti."
msgstr ""

msgctxt "dn2:89.4"
msgid "Idampissa hoti sīlasmiṃ."
msgstr ""

#. </p><p><a class="sc" id="72"></a><a class="pts" id="pts1.69"></a>
msgctxt "dn2:90.1"
msgid "Yathā vā paneke bhonto samaṇabrāhmaṇā saddhādeyyāni bhojanāni bhuñjitvā te evarūpāya tiracchānavijjāya micchājīvena jīvitaṃ kappenti."
msgstr ""

msgctxt "dn2:90.2"
msgid "Seyyathidaṃ—"
msgstr ""

msgctxt "dn2:90.3"
msgid "suvuṭṭhikā bhavissati, dubbuṭṭhikā bhavissati, subhikkhaṃ bhavissati, dubbhikkhaṃ bhavissati, khemaṃ bhavissati, bhayaṃ bhavissati, rogo bhavissati, ārogyaṃ bhavissati, muddā, gaṇanā, saṅkhānaṃ, kāveyyaṃ, lokāyataṃ iti vā iti evarūpāya tiracchānavijjāya micchājīvā paṭivirato hoti."
msgstr ""

msgctxt "dn2:90.4"
msgid "Idampissa hoti sīlasmiṃ."
msgstr ""

#. </p><p><a class="sc" id="73"></a>
msgctxt "dn2:91.1"
msgid "Yathā vā paneke bhonto samaṇabrāhmaṇā saddhādeyyāni bhojanāni bhuñjitvā te evarūpāya tiracchānavijjāya micchājīvena jīvitaṃ kappenti."
msgstr ""

msgctxt "dn2:91.2"
msgid "Seyyathidaṃ—"
msgstr ""

msgctxt "dn2:91.3"
msgid "āvāhanaṃ vivāhanaṃ saṃvaraṇaṃ vivaraṇaṃ saṅkiraṇaṃ vikiraṇaṃ subhagakaraṇaṃ dubbhagakaraṇaṃ viruddhagabbhakaraṇaṃ jivhānibandhanaṃ hanusaṃhananaṃ hatthābhijappanaṃ hanujappanaṃ kaṇṇajappanaṃ ādāsapañhaṃ kumārikapañhaṃ devapañhaṃ ādiccupaṭṭhānaṃ mahatupaṭṭhānaṃ abbhujjalanaṃ sirivhāyanaṃ iti vā iti evarūpāya tiracchānavijjāya micchājīvā paṭivirato hoti."
msgstr ""

msgctxt "dn2:91.4"
msgid "Idampissa hoti sīlasmiṃ."
msgstr ""

#. </p><p><a class="sc" id="74"></a>
msgctxt "dn2:92.1"
msgid "Yathā vā paneke bhonto samaṇabrāhmaṇā saddhādeyyāni bhojanāni bhuñjitvā te evarūpāya tiracchānavijjāya micchājīvena jīvitaṃ kappenti."
msgstr ""

msgctxt "dn2:92.2"
msgid "Seyyathidaṃ—"
msgstr ""

msgctxt "dn2:92.3"
msgid "santikammaṃ paṇidhikammaṃ bhūtakammaṃ bhūrikammaṃ vassakammaṃ vossakammaṃ vatthukammaṃ vatthuparikammaṃ ācamanaṃ nhāpanaṃ juhanaṃ vamanaṃ virecanaṃ uddhaṃvirecanaṃ adhovirecanaṃ sīsavirecanaṃ kaṇṇatelaṃ nettatappanaṃ natthukammaṃ añjanaṃ paccañjanaṃ sālākiyaṃ sallakattiyaṃ dārakatikicchā, mūlabhesajjānaṃ anuppadānaṃ, osadhīnaṃ paṭimokkho iti vā iti evarūpāya tiracchānavijjāya micchājīvā paṭivirato hoti."
msgstr ""

msgctxt "dn2:92.4"
msgid "Idampissa hoti sīlasmiṃ."
msgstr ""

#. </p><p><a class="sc" id="75"></a><a class="pts" id="pts1.70"></a>
msgctxt "dn2:93.1"
msgid "Sa kho so, mahārāja, bhikkhu evaṃ sīlasampanno na kutoci bhayaṃ samanupassati, yadidaṃ sīlasaṃvarato."
msgstr ""

msgctxt "dn2:93.2"
msgid "Seyyathāpi, mahārāja, rājā khattiyo muddhābhisitto nihatapaccāmitto na kutoci bhayaṃ samanupassati, yadidaṃ paccatthikato;"
msgstr ""

msgctxt "dn2:93.3"
msgid "evameva kho, mahārāja, bhikkhu evaṃ sīlasampanno na kutoci bhayaṃ samanupassati, yadidaṃ sīlasaṃvarato."
msgstr ""

msgctxt "dn2:93.4"
msgid "So iminā ariyena sīlakkhandhena samannāgato ajjhattaṃ anavajjasukhaṃ paṭisaṃvedeti."
msgstr ""

msgctxt "dn2:93.5"
msgid "Evaṃ kho, mahārāja, bhikkhu sīlasampanno hoti."
msgstr ""

#. </p><p class="endsection">
msgctxt "dn2:94.1"
msgid "Mahāsīlaṃ niṭṭhitaṃ."
msgstr ""

#. </p><h4>
msgctxt "dn2:95.1"
msgid "4.3.2. Samādhi"
msgstr ""

#. </h4><h5></h5><p><a class="sc" id="76"></a>
msgctxt "dn2:96.1"
msgid "Kathañca, mahārāja, bhikkhu indriyesu guttadvāro hoti?"
msgstr ""

msgctxt "dn2:96.2"
msgid "Idha, mahārāja, bhikkhu cakkhunā rūpaṃ disvā na nimittaggāhī hoti nānubyañjanaggāhī."
msgstr ""

msgctxt "dn2:96.3"
msgid "Yatvādhikaraṇamenaṃ cakkhundriyaṃ asaṃvutaṃ viharantaṃ abhijjhā domanassā pāpakā akusalā dhammā anvāssaveyyuṃ, tassa saṃvarāya paṭipajjati, rakkhati cakkhundriyaṃ, cakkhundriye saṃvaraṃ āpajjati."
msgstr ""

msgctxt "dn2:96.4"
msgid "Sotena saddaṃ sutvā …"
msgstr ""

msgctxt "dn2:96.5"
msgid "pe …"
msgstr ""

msgctxt "dn2:96.6"
msgid "ghānena gandhaṃ ghāyitvā …"
msgstr ""

msgctxt "dn2:96.7"
msgid "pe …"
msgstr ""

msgctxt "dn2:96.8"
msgid "jivhāya rasaṃ sāyitvā …"
msgstr ""

msgctxt "dn2:96.9"
msgid "pe …"
msgstr ""

msgctxt "dn2:96.10"
msgid "kāyena phoṭṭhabbaṃ phusitvā …"
msgstr ""

msgctxt "dn2:96.11"
msgid "pe …"
msgstr ""

msgctxt "dn2:96.12"
msgid "manasā dhammaṃ viññāya na nimittaggāhī hoti nānubyañjanaggāhī."
msgstr ""

msgctxt "dn2:96.13"
msgid "Yatvādhikaraṇamenaṃ manindriyaṃ asaṃvutaṃ viharantaṃ abhijjhā domanassā pāpakā akusalā dhammā anvāssaveyyuṃ, tassa saṃvarāya paṭipajjati, rakkhati manindriyaṃ, manindriye saṃvaraṃ āpajjati."
msgstr ""

msgctxt "dn2:96.14"
msgid "So iminā ariyena indriyasaṃvarena samannāgato ajjhattaṃ abyāsekasukhaṃ paṭisaṃvedeti."
msgstr ""

msgctxt "dn2:96.15"
msgid "Evaṃ kho, mahārāja, bhikkhu indriyesu guttadvāro hoti."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="77"></a><a class="pts" id="pts1.71"></a>
msgctxt "dn2:97.1"
msgid "Kathañca, mahārāja, bhikkhu satisampajaññena samannāgato hoti?"
msgstr ""

msgctxt "dn2:97.2"
msgid "Idha, mahārāja, bhikkhu abhikkante paṭikkante sampajānakārī hoti, ālokite vilokite sampajānakārī hoti, samiñjite pasārite sampajānakārī hoti, saṅghāṭipattacīvaradhāraṇe sampajānakārī hoti, asite pīte khāyite sāyite sampajānakārī hoti, uccārapassāvakamme sampajānakārī hoti, gate ṭhite nisinne sutte jāgarite bhāsite tuṇhībhāve sampajānakārī hoti."
msgstr ""

msgctxt "dn2:97.3"
msgid "Evaṃ kho, mahārāja, bhikkhu satisampajaññena samannāgato hoti."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="78"></a>
msgctxt "dn2:98.1"
msgid "Kathañca, mahārāja, bhikkhu santuṭṭho hoti?"
msgstr ""

msgctxt "dn2:98.2"
msgid "Idha, mahārāja, bhikkhu santuṭṭho hoti kāyaparihārikena cīvarena, kucchiparihārikena piṇḍapātena."
msgstr ""

msgctxt "dn2:98.3"
msgid "So yena yeneva pakkamati, samādāyeva pakkamati."
msgstr ""

msgctxt "dn2:98.4"
msgid "Seyyathāpi, mahārāja, pakkhī sakuṇo yena yeneva ḍeti, sapattabhārova ḍeti;"
msgstr ""

msgctxt "dn2:98.5"
msgid "evameva kho, mahārāja, bhikkhu santuṭṭho hoti kāyaparihārikena cīvarena kucchiparihārikena piṇḍapātena."
msgstr ""

msgctxt "dn2:98.6"
msgid "So yena yeneva pakkamati, samādāyeva pakkamati."
msgstr ""

msgctxt "dn2:98.7"
msgid "Evaṃ kho, mahārāja, bhikkhu santuṭṭho hoti."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="79"></a>
msgctxt "dn2:99.1"
msgid "So iminā ca ariyena sīlakkhandhena samannāgato, iminā ca ariyena indriyasaṃvarena samannāgato, iminā ca ariyena satisampajaññena samannāgato, imāya ca ariyāya santuṭṭhiyā samannāgato, vivittaṃ senāsanaṃ bhajati araññaṃ rukkhamūlaṃ pabbataṃ kandaraṃ giriguhaṃ susānaṃ vanapatthaṃ abbhokāsaṃ palālapuñjaṃ."
msgstr ""

msgctxt "dn2:99.2"
msgid "So pacchābhattaṃ piṇḍapātapaṭikkanto nisīdati pallaṅkaṃ ābhujitvā ujuṃ kāyaṃ paṇidhāya parimukhaṃ satiṃ upaṭṭhapetvā."
msgstr ""

#. </p><p><a class="sc" id="80"></a>
msgctxt "dn2:100.1"
msgid "So abhijjhaṃ loke pahāya vigatābhijjhena cetasā viharati, abhijjhāya cittaṃ parisodheti."
msgstr ""

msgctxt "dn2:100.2"
msgid "Byāpādapadosaṃ pahāya abyāpannacitto viharati sabbapāṇabhūtahitānukampī, byāpādapadosā cittaṃ parisodheti."
msgstr ""

msgctxt "dn2:100.3"
msgid "Thinamiddhaṃ pahāya vigatathinamiddho viharati ālokasaññī, sato sampajāno, thinamiddhā cittaṃ parisodheti."
msgstr ""

msgctxt "dn2:100.4"
msgid "Uddhaccakukkuccaṃ pahāya anuddhato viharati, ajjhattaṃ vūpasantacitto, uddhaccakukkuccā cittaṃ parisodheti."
msgstr ""

msgctxt "dn2:100.5"
msgid "Vicikicchaṃ pahāya tiṇṇavicikiccho viharati, akathaṅkathī kusalesu dhammesu, vicikicchāya cittaṃ parisodheti."
msgstr ""

#. </p><p><a class="sc" id="81"></a><a class="pts" id="pts1.72"></a>
msgctxt "dn2:101.1"
msgid "Seyyathāpi, mahārāja, puriso iṇaṃ ādāya kammante payojeyya."
msgstr ""

msgctxt "dn2:101.2"
msgid "Tassa te kammantā samijjheyyuṃ."
msgstr ""

#. VAR: byantiṃ kareyya → byantīkareyya (bj, s1-3, km) | vyantikareyya (pts1)
msgctxt "dn2:101.3"
msgid "So yāni ca porāṇāni iṇamūlāni, tāni ca byantiṃ kareyya, siyā cassa uttariṃ avasiṭṭhaṃ dārabharaṇāya."
msgstr ""

msgctxt "dn2:101.4"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:101.5"
msgid "‘ahaṃ kho pubbe iṇaṃ ādāya kammante payojesiṃ."
msgstr ""

msgctxt "dn2:101.6"
msgid "Tassa me te kammantā samijjhiṃsu."
msgstr ""

msgctxt "dn2:101.7"
msgid "Sohaṃ yāni ca porāṇāni iṇamūlāni, tāni ca byantiṃ akāsiṃ, atthi ca me uttariṃ avasiṭṭhaṃ dārabharaṇāyā’ti."
msgstr ""

msgctxt "dn2:101.8"
msgid "So tatonidānaṃ labhetha pāmojjaṃ, adhigaccheyya somanassaṃ."
msgstr ""

#. </p><p><a class="sc" id="82"></a>
msgctxt "dn2:102.1"
msgid "Seyyathāpi, mahārāja, puriso ābādhiko assa dukkhito bāḷhagilāno;"
msgstr ""

msgctxt "dn2:102.2"
msgid "bhattañcassa nacchādeyya, na cassa kāye balamattā."
msgstr ""

msgctxt "dn2:102.3"
msgid "So aparena samayena tamhā ābādhā mucceyya;"
msgstr ""

msgctxt "dn2:102.4"
msgid "bhattaṃ cassa chādeyya, siyā cassa kāye balamattā."
msgstr ""

msgctxt "dn2:102.5"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:102.6"
msgid "‘ahaṃ kho pubbe ābādhiko ahosiṃ dukkhito bāḷhagilāno;"
msgstr ""

#. VAR: na ca me → nacassa me (bj, mr)
msgctxt "dn2:102.7"
msgid "bhattañca me nacchādesi, na ca me āsi kāye balamattā."
msgstr ""

msgctxt "dn2:102.8"
msgid "Somhi etarahi tamhā ābādhā mutto;"
msgstr ""

msgctxt "dn2:102.9"
msgid "bhattañca me chādeti, atthi ca me kāye balamattā’ti."
msgstr ""

msgctxt "dn2:102.10"
msgid "So tatonidānaṃ labhetha pāmojjaṃ, adhigaccheyya somanassaṃ."
msgstr ""

#. </p><p><a class="sc" id="83"></a>
msgctxt "dn2:103.1"
msgid "Seyyathāpi, mahārāja, puriso bandhanāgāre baddho assa."
msgstr ""

#. VAR: abbhayena → abbayena (bj, mr) | avyayena (pts1)
msgctxt "dn2:103.2"
msgid "So aparena samayena tamhā bandhanāgārā mucceyya sotthinā abbhayena, na cassa kiñci bhogānaṃ vayo."
msgstr ""

msgctxt "dn2:103.3"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:103.4"
msgid "‘ahaṃ kho pubbe bandhanāgāre baddho ahosiṃ, somhi etarahi tamhā bandhanāgārā mutto sotthinā abbhayena."
msgstr ""

msgctxt "dn2:103.5"
msgid "Natthi ca me kiñci bhogānaṃ vayo’ti."
msgstr ""

msgctxt "dn2:103.6"
msgid "So tatonidānaṃ labhetha pāmojjaṃ, adhigaccheyya somanassaṃ."
msgstr ""

#. </p><p><a class="sc" id="84"></a><a class="pts" id="pts1.73"></a>
msgctxt "dn2:104.1"
msgid "Seyyathāpi, mahārāja, puriso dāso assa anattādhīno parādhīno na yenakāmaṅgamo."
msgstr ""

msgctxt "dn2:104.2"
msgid "So aparena samayena tamhā dāsabyā mucceyya attādhīno aparādhīno bhujisso yenakāmaṅgamo."
msgstr ""

msgctxt "dn2:104.3"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:104.4"
msgid "‘ahaṃ kho pubbe dāso ahosiṃ anattādhīno parādhīno na yenakāmaṅgamo."
msgstr ""

msgctxt "dn2:104.5"
msgid "Somhi etarahi tamhā dāsabyā mutto attādhīno aparādhīno bhujisso yenakāmaṅgamo’ti."
msgstr ""

msgctxt "dn2:104.6"
msgid "So tatonidānaṃ labhetha pāmojjaṃ, adhigaccheyya somanassaṃ."
msgstr ""

#. </p><p><a class="sc" id="85"></a>
msgctxt "dn2:105.1"
msgid "Seyyathāpi, mahārāja, puriso sadhano sabhogo kantāraddhānamaggaṃ paṭipajjeyya dubbhikkhaṃ sappaṭibhayaṃ."
msgstr ""

msgctxt "dn2:105.2"
msgid "So aparena samayena taṃ kantāraṃ nitthareyya sotthinā, gāmantaṃ anupāpuṇeyya khemaṃ appaṭibhayaṃ."
msgstr ""

msgctxt "dn2:105.3"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:105.4"
msgid "‘ahaṃ kho pubbe sadhano sabhogo kantāraddhānamaggaṃ paṭipajjiṃ dubbhikkhaṃ sappaṭibhayaṃ."
msgstr ""

msgctxt "dn2:105.5"
msgid "Somhi etarahi taṃ kantāraṃ nitthiṇṇo sotthinā, gāmantaṃ anuppatto khemaṃ appaṭibhayan’ti."
msgstr ""

msgctxt "dn2:105.6"
msgid "So tatonidānaṃ labhetha pāmojjaṃ, adhigaccheyya somanassaṃ."
msgstr ""

#. </p><p><a class="sc" id="86"></a>
msgctxt "dn2:106.1"
msgid "Evameva kho, mahārāja, bhikkhu yathā iṇaṃ yathā rogaṃ yathā bandhanāgāraṃ yathā dāsabyaṃ yathā kantāraddhānamaggaṃ, evaṃ ime pañca nīvaraṇe appahīne attani samanupassati."
msgstr ""

#. </p><p><a class="sc" id="87"></a>
msgctxt "dn2:107.1"
msgid "Seyyathāpi, mahārāja, yathā āṇaṇyaṃ yathā ārogyaṃ yathā bandhanāmokkhaṃ yathā bhujissaṃ yathā khemantabhūmiṃ;"
msgstr ""

msgctxt "dn2:107.2"
msgid "evameva kho, mahārāja, bhikkhu ime pañca nīvaraṇe pahīne attani samanupassati."
msgstr ""

#. </p><p><a class="sc" id="88"></a>
msgctxt "dn2:108.1"
msgid "Tassime pañca nīvaraṇe pahīne attani samanupassato pāmojjaṃ jāyati, pamuditassa pīti jāyati, pītimanassa kāyo passambhati, passaddhakāyo sukhaṃ vedeti, sukhino cittaṃ samādhiyati."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="89"></a>
msgctxt "dn2:109.1"
msgid "So vivicceva kāmehi, vivicca akusalehi dhammehi savitakkaṃ savicāraṃ vivekajaṃ pītisukhaṃ paṭhamaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn2:109.2"
msgid "So imameva kāyaṃ vivekajena pītisukhena abhisandeti parisandeti paripūreti parippharati, nāssa kiñci sabbāvato kāyassa vivekajena pītisukhena apphuṭaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="90"></a><a class="pts" id="pts1.74"></a>
msgctxt "dn2:110.1"
msgid "Seyyathāpi, mahārāja, dakkho nhāpako vā nhāpakantevāsī vā kaṃsathāle nhānīyacuṇṇāni ākiritvā udakena paripphosakaṃ paripphosakaṃ sanneyya, sāyaṃ nhānīyapiṇḍi snehānugatā snehaparetā santarabāhirā phuṭā snehena, na ca paggharaṇī;"
msgstr ""

msgctxt "dn2:110.2"
msgid "evameva kho, mahārāja, bhikkhu imameva kāyaṃ vivekajena pītisukhena abhisandeti parisandeti paripūreti parippharati, nāssa kiñci sabbāvato kāyassa vivekajena pītisukhena apphuṭaṃ hoti."
msgstr ""

msgctxt "dn2:110.3"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="91"></a>
msgctxt "dn2:111.1"
msgid "Puna caparaṃ, mahārāja, bhikkhu vitakkavicārānaṃ vūpasamā ajjhattaṃ sampasādanaṃ cetaso ekodibhāvaṃ avitakkaṃ avicāraṃ samādhijaṃ pītisukhaṃ dutiyaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn2:111.2"
msgid "So imameva kāyaṃ samādhijena pītisukhena abhisandeti parisandeti paripūreti parippharati, nāssa kiñci sabbāvato kāyassa samādhijena pītisukhena apphuṭaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="92"></a><a class="pts" id="pts1.75"></a>
#. VAR: ubbhidodako → ubbhitodako (s1-3, km, mr)
msgctxt "dn2:112.1"
msgid "Seyyathāpi, mahārāja, udakarahado gambhīro ubbhidodako tassa nevassa puratthimāya disāya udakassa āyamukhaṃ, na dakkhiṇāya disāya udakassa āyamukhaṃ, na pacchimāya disāya udakassa āyamukhaṃ, na uttarāya disāya udakassa āyamukhaṃ, devo ca na kālena kālaṃ sammādhāraṃ anuppaveccheyya."
msgstr ""

msgctxt "dn2:112.2"
msgid "Atha kho tamhāva udakarahadā sītā vāridhārā ubbhijjitvā tameva udakarahadaṃ sītena vārinā abhisandeyya parisandeyya paripūreyya paripphareyya, nāssa kiñci sabbāvato udakarahadassa sītena vārinā apphuṭaṃ assa."
msgstr ""

msgctxt "dn2:112.3"
msgid "Evameva kho, mahārāja, bhikkhu imameva kāyaṃ samādhijena pītisukhena abhisandeti parisandeti paripūreti parippharati, nāssa kiñci sabbāvato kāyassa samādhijena pītisukhena apphuṭaṃ hoti."
msgstr ""

msgctxt "dn2:112.4"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="93"></a>
msgctxt "dn2:113.1"
msgid "Puna caparaṃ, mahārāja, bhikkhu pītiyā ca virāgā upekkhako ca viharati sato sampajāno, sukhañca kāyena paṭisaṃvedeti, yaṃ taṃ ariyā ācikkhanti:"
msgstr ""

msgctxt "dn2:113.2"
msgid "‘upekkhako satimā sukhavihārī’ti, tatiyaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn2:113.3"
msgid "So imameva kāyaṃ nippītikena sukhena abhisandeti parisandeti paripūreti parippharati, nāssa kiñci sabbāvato kāyassa nippītikena sukhena apphuṭaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="94"></a>
#. VAR: paripphuṭāni → paripphaṭāni (s1-3) | paripphuṭṭhāni (pts1)
#. VAR: nāssa → nassā (bj)
#. VAR: parisannāni → abhisannāni (s2, s3) | abhisandāni parisandāni (mr)
msgctxt "dn2:114.1"
msgid "Seyyathāpi, mahārāja, uppaliniyaṃ vā paduminiyaṃ vā puṇḍarīkiniyaṃ vā appekaccāni uppalāni vā padumāni vā puṇḍarīkāni vā udake jātāni udake saṃvaḍḍhāni udakānuggatāni antonimuggaposīni, tāni yāva caggā yāva ca mūlā sītena vārinā abhisannāni parisannāni paripūrāni paripphuṭāni, nāssa kiñci sabbāvataṃ uppalānaṃ vā padumānaṃ vā puṇḍarīkānaṃ vā sītena vārinā apphuṭaṃ assa;"
msgstr ""

msgctxt "dn2:114.2"
msgid "evameva kho, mahārāja, bhikkhu imameva kāyaṃ nippītikena sukhena abhisandeti parisandeti paripūreti parippharati, nāssa kiñci sabbāvato kāyassa nippītikena sukhena apphuṭaṃ hoti."
msgstr ""

msgctxt "dn2:114.3"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="95"></a><a class="pts" id="pts1.76"></a>
msgctxt "dn2:115.1"
msgid "Puna caparaṃ, mahārāja, bhikkhu sukhassa ca pahānā dukkhassa ca pahānā, pubbeva somanassadomanassānaṃ atthaṅgamā adukkhamasukhaṃ upekkhāsatipārisuddhiṃ catutthaṃ jhānaṃ upasampajja viharati, so imameva kāyaṃ parisuddhena cetasā pariyodātena pharitvā nisinno hoti, nāssa kiñci sabbāvato kāyassa parisuddhena cetasā pariyodātena apphuṭaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="96"></a>
msgctxt "dn2:116.1"
msgid "Seyyathāpi, mahārāja, puriso odātena vatthena sasīsaṃ pārupitvā nisinno assa, nāssa kiñci sabbāvato kāyassa odātena vatthena apphuṭaṃ assa;"
msgstr ""

msgctxt "dn2:116.2"
msgid "evameva kho, mahārāja, bhikkhu imameva kāyaṃ parisuddhena cetasā pariyodātena pharitvā nisinno hoti, nāssa kiñci sabbāvato kāyassa parisuddhena cetasā pariyodātena apphuṭaṃ hoti."
msgstr ""

msgctxt "dn2:116.3"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h4>
msgctxt "dn2:117.1"
msgid "4.3.3. Aṭṭhañāṇa"
msgstr ""

#. </h4><h5></h5><p><a class="sc" id="97"></a>
#. VAR: So → puna caparaṃ mahārāja bhikkhu so (bj, mr)
msgctxt "dn2:118.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte ñāṇadassanāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:118.2"
msgid "So evaṃ pajānāti:"
msgstr ""

msgctxt "dn2:118.3"
msgid "‘ayaṃ kho me kāyo rūpī cātumahābhūtiko mātāpettikasambhavo odanakummāsūpacayo aniccucchādanaparimaddanabhedanaviddhaṃsanadhammo;"
msgstr ""

msgctxt "dn2:118.4"
msgid "idañca pana me viññāṇaṃ ettha sitaṃ ettha paṭibaddhan’ti."
msgstr ""

#. </p><p><a class="sc" id="98"></a><a class="pts" id="pts1.77"></a>
msgctxt "dn2:119.1"
msgid "Seyyathāpi, mahārāja, maṇi veḷuriyo subho jātimā aṭṭhaṃso suparikammakato accho vippasanno anāvilo sabbākārasampanno."
msgstr ""

#. VAR: pītaṃ vā lohitaṃ vā → pītakaṃ vā lohitakaṃ vā (mr)
msgctxt "dn2:119.2"
msgid "Tatrāssa suttaṃ āvutaṃ nīlaṃ vā pītaṃ vā lohitaṃ vā odātaṃ vā paṇḍusuttaṃ vā."
msgstr ""

msgctxt "dn2:119.3"
msgid "Tamenaṃ cakkhumā puriso hatthe karitvā paccavekkheyya:"
msgstr ""

msgctxt "dn2:119.4"
msgid "‘ayaṃ kho maṇi veḷuriyo subho jātimā aṭṭhaṃso suparikammakato accho vippasanno anāvilo sabbākārasampanno;"
msgstr ""

msgctxt "dn2:119.5"
msgid "tatridaṃ suttaṃ āvutaṃ nīlaṃ vā pītaṃ vā lohitaṃ vā odātaṃ vā paṇḍusuttaṃ vā’ti."
msgstr ""

msgctxt "dn2:119.6"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte ñāṇadassanāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:119.7"
msgid "So evaṃ pajānāti:"
msgstr ""

msgctxt "dn2:119.8"
msgid "‘ayaṃ kho me kāyo rūpī cātumahābhūtiko mātāpettikasambhavo odanakummāsūpacayo aniccucchādanaparimaddanabhedanaviddhaṃsanadhammo;"
msgstr ""

msgctxt "dn2:119.9"
msgid "idañca pana me viññāṇaṃ ettha sitaṃ ettha paṭibaddhan’ti."
msgstr ""

msgctxt "dn2:119.10"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="99"></a>
msgctxt "dn2:120.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte manomayaṃ kāyaṃ abhinimmānāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:120.2"
msgid "So imamhā kāyā aññaṃ kāyaṃ abhinimmināti rūpiṃ manomayaṃ sabbaṅgapaccaṅgiṃ ahīnindriyaṃ."
msgstr ""

#. </p><p><a class="sc" id="100"></a>
#. VAR: īsikaṃ → isikaṃ (bj, s1-3) | isīkaṃ (pts1)
#. VAR: Seyyathā → seyyathāpi (bj, pts1)
#. VAR: pavāheyya → pabbāheyya (s1-3, mr)
msgctxt "dn2:121.1"
msgid "Seyyathāpi, mahārāja, puriso muñjamhā īsikaṃ pavāheyya."
msgstr ""

msgctxt "dn2:121.2"
msgid "Tassa evamassa:"
msgstr ""

#. VAR: pavāḷhā’ti → pavālhāti (bj) | pabbāḷhāti (s1, s2, mr) | pabāḷhāti (s3)
msgctxt "dn2:121.3"
msgid "‘ayaṃ muñjo, ayaṃ īsikā, añño muñjo, aññā īsikā, muñjamhā tveva īsikā pavāḷhā’ti."
msgstr ""

msgctxt "dn2:121.4"
msgid "Seyyathā vā pana, mahārāja, puriso asiṃ kosiyā pavāheyya."
msgstr ""

msgctxt "dn2:121.5"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:121.6"
msgid "‘ayaṃ asi, ayaṃ kosi, añño asi, aññā kosi, kosiyā tveva asi pavāḷho’ti."
msgstr ""

msgctxt "dn2:121.7"
msgid "Seyyathā vā pana, mahārāja, puriso ahiṃ karaṇḍā uddhareyya."
msgstr ""

msgctxt "dn2:121.8"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:121.9"
msgid "‘ayaṃ ahi, ayaṃ karaṇḍo."
msgstr ""

#. VAR: ubbhato’ti → uddharito (s1-3, km)
msgctxt "dn2:121.10"
msgid "Añño ahi, añño karaṇḍo, karaṇḍā tveva ahi ubbhato’ti."
msgstr ""

msgctxt "dn2:121.11"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte manomayaṃ kāyaṃ abhinimmānāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:121.12"
msgid "So imamhā kāyā aññaṃ kāyaṃ abhinimmināti rūpiṃ manomayaṃ sabbaṅgapaccaṅgiṃ ahīnindriyaṃ."
msgstr ""

msgctxt "dn2:121.13"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="101"></a><a class="pts" id="pts1.78"></a>
msgctxt "dn2:122.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte iddhividhāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:122.2"
msgid "So anekavihitaṃ iddhividhaṃ paccanubhoti–  ekopi hutvā bahudhā hoti, bahudhāpi hutvā eko hoti;"
msgstr ""

msgctxt "dn2:122.3"
msgid "āvibhāvaṃ tirobhāvaṃ tirokuṭṭaṃ tiropākāraṃ tiropabbataṃ asajjamāno gacchati seyyathāpi ākāse;"
msgstr ""

msgctxt "dn2:122.4"
msgid "pathaviyāpi ummujjanimujjaṃ karoti seyyathāpi udake;"
msgstr ""

#. VAR: abhijjamāne → abhijjamāno (pts1, mr)
msgctxt "dn2:122.5"
msgid "udakepi abhijjamāne gacchati seyyathāpi pathaviyā;"
msgstr ""

msgctxt "dn2:122.6"
msgid "ākāsepi pallaṅkena kamati seyyathāpi pakkhī sakuṇo;"
msgstr ""

msgctxt "dn2:122.7"
msgid "imepi candimasūriye evaṃmahiddhike evaṃmahānubhāve pāṇinā parāmasati parimajjati;"
msgstr ""

msgctxt "dn2:122.8"
msgid "yāva brahmalokāpi kāyena vasaṃ vatteti."
msgstr ""

#. </p><p><a class="sc" id="102"></a><a class="pts" id="pts1.79"></a>
msgctxt "dn2:123.1"
msgid "Seyyathāpi, mahārāja, dakkho kumbhakāro vā kumbhakārantevāsī vā suparikammakatāya mattikāya yaṃ yadeva bhājanavikatiṃ ākaṅkheyya, taṃ tadeva kareyya abhinipphādeyya."
msgstr ""

msgctxt "dn2:123.2"
msgid "Seyyathā vā pana, mahārāja, dakkho dantakāro vā dantakārantevāsī vā suparikammakatasmiṃ dantasmiṃ yaṃ yadeva dantavikatiṃ ākaṅkheyya, taṃ tadeva kareyya abhinipphādeyya."
msgstr ""

msgctxt "dn2:123.3"
msgid "Seyyathā vā pana, mahārāja, dakkho suvaṇṇakāro vā suvaṇṇakārantevāsī vā suparikammakatasmiṃ suvaṇṇasmiṃ yaṃ yadeva suvaṇṇavikatiṃ ākaṅkheyya, taṃ tadeva kareyya abhinipphādeyya."
msgstr ""

msgctxt "dn2:123.4"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte iddhividhāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:123.5"
msgid "So anekavihitaṃ iddhividhaṃ paccanubhoti—"
msgstr ""

msgctxt "dn2:123.6"
msgid "ekopi hutvā bahudhā hoti, bahudhāpi hutvā eko hoti;"
msgstr ""

msgctxt "dn2:123.7"
msgid "āvibhāvaṃ tirobhāvaṃ tirokuṭṭaṃ tiropākāraṃ tiropabbataṃ asajjamāno gacchati seyyathāpi ākāse;"
msgstr ""

msgctxt "dn2:123.8"
msgid "pathaviyāpi ummujjanimujjaṃ karoti seyyathāpi udake;"
msgstr ""

msgctxt "dn2:123.9"
msgid "udakepi abhijjamāne gacchati seyyathāpi pathaviyā;"
msgstr ""

msgctxt "dn2:123.10"
msgid "ākāsepi pallaṅkena kamati seyyathāpi pakkhī sakuṇo;"
msgstr ""

msgctxt "dn2:123.11"
msgid "imepi candimasūriye evaṃmahiddhike evaṃmahānubhāve pāṇinā parāmasati parimajjati;"
msgstr ""

msgctxt "dn2:123.12"
msgid "yāva brahmalokāpi kāyena vasaṃ vatteti."
msgstr ""

msgctxt "dn2:123.13"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="103"></a>
msgctxt "dn2:124.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte dibbāya sotadhātuyā cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:124.2"
msgid "So dibbāya sotadhātuyā visuddhāya atikkantamānusikāya ubho sadde suṇāti dibbe ca mānuse ca ye dūre santike ca."
msgstr ""

#. </p><p><a class="sc" id="104"></a>
msgctxt "dn2:125.1"
msgid "Seyyathāpi, mahārāja, puriso addhānamaggappaṭipanno."
msgstr ""

msgctxt "dn2:125.2"
msgid "So suṇeyya bherisaddampi mudiṅgasaddampi saṅkhapaṇavadindimasaddampi."
msgstr ""

msgctxt "dn2:125.3"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:125.4"
msgid "‘bherisaddo’ itipi, ‘mudiṅgasaddo’ itipi, ‘saṅkhapaṇavadindimasaddo’ itipi."
msgstr ""

msgctxt "dn2:125.5"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte dibbāya sotadhātuyā cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:125.6"
msgid "So dibbāya sotadhātuyā visuddhāya atikkantamānusikāya ubho sadde suṇāti dibbe ca mānuse ca ye dūre santike ca."
msgstr ""

msgctxt "dn2:125.7"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="105"></a><a class="pts" id="pts1.80"></a>
msgctxt "dn2:126.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte cetopariyañāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:126.2"
msgid "So parasattānaṃ parapuggalānaṃ cetasā ceto paricca pajānāti—"
msgstr ""

msgctxt "dn2:126.3"
msgid "sarāgaṃ vā cittaṃ ‘sarāgaṃ cittan’ti pajānāti, vītarāgaṃ vā cittaṃ ‘vītarāgaṃ cittan’ti pajānāti, sadosaṃ vā cittaṃ ‘sadosaṃ cittan’ti pajānāti, vītadosaṃ vā cittaṃ ‘vītadosaṃ cittan’ti pajānāti, samohaṃ vā cittaṃ ‘samohaṃ cittan’ti pajānāti, vītamohaṃ vā cittaṃ ‘vītamohaṃ cittan’ti pajānāti, saṅkhittaṃ vā cittaṃ ‘saṅkhittaṃ cittan’ti pajānāti, vikkhittaṃ vā cittaṃ ‘vikkhittaṃ cittan’ti pajānāti, mahaggataṃ vā cittaṃ ‘mahaggataṃ cittan’ti pajānāti, amahaggataṃ vā cittaṃ ‘amahaggataṃ cittan’ti pajānāti, sauttaraṃ vā cittaṃ ‘sauttaraṃ cittan’ti pajānāti, anuttaraṃ vā cittaṃ ‘anuttaraṃ cittan’ti pajānāti, samāhitaṃ vā cittaṃ ‘samāhitaṃ cittan’ti pajānāti, asamāhitaṃ vā cittaṃ ‘asamāhitaṃ cittan’ti pajānāti, vimuttaṃ vā cittaṃ ‘vimuttaṃ cittan’ti pajānāti, avimuttaṃ vā cittaṃ ‘avimuttaṃ cittan’ti pajānāti."
msgstr ""

#. </p><p><a class="sc" id="106"></a><a class="pts" id="pts1.81"></a>
msgctxt "dn2:127.1"
msgid "Seyyathāpi, mahārāja, itthī vā puriso vā daharo yuvā maṇḍanajātiko ādāse vā parisuddhe pariyodāte acche vā udakapatte sakaṃ mukhanimittaṃ paccavekkhamāno sakaṇikaṃ vā ‘sakaṇikan’ti jāneyya, akaṇikaṃ vā ‘akaṇikan’ti jāneyya;"
msgstr ""

msgctxt "dn2:127.2"
msgid "evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte cetopariyañāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:127.3"
msgid "So parasattānaṃ parapuggalānaṃ cetasā ceto paricca pajānāti—"
msgstr ""

msgctxt "dn2:127.4"
msgid "sarāgaṃ vā cittaṃ ‘sarāgaṃ cittan’ti pajānāti, vītarāgaṃ vā cittaṃ ‘vītarāgaṃ cittan’ti pajānāti, sadosaṃ vā cittaṃ ‘sadosaṃ cittan’ti pajānāti, vītadosaṃ vā cittaṃ ‘vītadosaṃ cittan’ti pajānāti, samohaṃ vā cittaṃ ‘samohaṃ cittan’ti pajānāti, vītamohaṃ vā cittaṃ ‘vītamohaṃ cittan’ti pajānāti, saṅkhittaṃ vā cittaṃ ‘saṅkhittaṃ cittan’ti pajānāti, vikkhittaṃ vā cittaṃ ‘vikkhittaṃ cittan’ti pajānāti, mahaggataṃ vā cittaṃ ‘mahaggataṃ cittan’ti pajānāti, amahaggataṃ vā cittaṃ ‘amahaggataṃ cittan’ti pajānāti, sauttaraṃ vā cittaṃ ‘sauttaraṃ cittan’ti pajānāti, anuttaraṃ vā cittaṃ ‘anuttaraṃ cittan’ti pajānāti, samāhitaṃ vā cittaṃ ‘samāhitaṃ cittan’ti pajānāti, asamāhitaṃ vā cittaṃ ‘asamāhitaṃ cittan’ti pajānāti, vimuttaṃ vā cittaṃ ‘vimuttaṃ cittan’ti pajānāti, avimuttaṃ vā cittaṃ ‘avimuttaṃ cittan’ti pajānāti."
msgstr ""

msgctxt "dn2:127.5"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="107"></a>
msgctxt "dn2:128.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte pubbenivāsānussatiñāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:128.2"
msgid "So anekavihitaṃ pubbenivāsaṃ anussarati, seyyathidaṃ—"
msgstr ""

msgctxt "dn2:128.3"
msgid "ekampi jātiṃ dvepi jātiyo tissopi jātiyo catassopi jātiyo pañcapi jātiyo dasapi jātiyo vīsampi jātiyo tiṃsampi jātiyo cattālīsampi jātiyo paññāsampi jātiyo jātisatampi jātisahassampi jātisatasahassampi anekepi saṃvaṭṭakappe anekepi vivaṭṭakappe anekepi saṃvaṭṭavivaṭṭakappe, ‘amutrāsiṃ evaṃnāmo evaṅgotto evaṃvaṇṇo evamāhāro evaṃsukhadukkhappaṭisaṃvedī evamāyupariyanto, so tato cuto amutra udapādiṃ;"
msgstr ""

msgctxt "dn2:128.4"
msgid "tatrāpāsiṃ evaṃnāmo evaṅgotto evaṃvaṇṇo evamāhāro evaṃsukhadukkhappaṭisaṃvedī evamāyupariyanto, so tato cuto idhūpapanno’ti."
msgstr ""

msgctxt "dn2:128.5"
msgid "Iti sākāraṃ sauddesaṃ anekavihitaṃ pubbenivāsaṃ anussarati."
msgstr ""

#. </p><p><a class="sc" id="108"></a><a class="pts" id="pts1.82"></a>
msgctxt "dn2:129.1"
msgid "Seyyathāpi, mahārāja, puriso sakamhā gāmā aññaṃ gāmaṃ gaccheyya, tamhāpi gāmā aññaṃ gāmaṃ gaccheyya."
msgstr ""

msgctxt "dn2:129.2"
msgid "So tamhā gāmā sakaṃyeva gāmaṃ paccāgaccheyya."
msgstr ""

msgctxt "dn2:129.3"
msgid "Tassa evamassa:"
msgstr ""

#. VAR: agacchiṃ → agañchiṃ (s1-3, km) | agañciṃ (pts1)
msgctxt "dn2:129.4"
msgid "‘ahaṃ kho sakamhā gāmā amuṃ gāmaṃ agacchiṃ, tatra evaṃ aṭṭhāsiṃ, evaṃ nisīdiṃ, evaṃ abhāsiṃ, evaṃ tuṇhī ahosiṃ, tamhāpi gāmā amuṃ gāmaṃ agacchiṃ, tatrāpi evaṃ aṭṭhāsiṃ, evaṃ nisīdiṃ, evaṃ abhāsiṃ, evaṃ tuṇhī ahosiṃ, somhi tamhā gāmā sakaṃyeva gāmaṃ paccāgato’ti."
msgstr ""

msgctxt "dn2:129.5"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte pubbenivāsānussatiñāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:129.6"
msgid "So anekavihitaṃ pubbenivāsaṃ anussarati, seyyathidaṃ—"
msgstr ""

msgctxt "dn2:129.7"
msgid "ekampi jātiṃ dvepi jātiyo tissopi jātiyo catassopi jātiyo pañcapi jātiyo dasapi jātiyo vīsampi jātiyo tiṃsampi jātiyo cattālīsampi jātiyo paññāsampi jātiyo jātisatampi jātisahassampi jātisatasahassampi anekepi saṃvaṭṭakappe anekepi vivaṭṭakappe anekepi saṃvaṭṭavivaṭṭakappe, ‘amutrāsiṃ evaṃnāmo evaṃgotto evaṃvaṇṇo evamāhāro evaṃsukhadukkhappaṭisaṃvedī evamāyupariyanto, so tato cuto amutra udapādiṃ;"
msgstr ""

msgctxt "dn2:129.8"
msgid "tatrāpāsiṃ evaṃnāmo evaṃgotto evaṃvaṇṇo evamāhāro evaṃsukhadukkhappaṭisaṃvedī evamāyupariyanto, so tato cuto idhūpapanno’ti."
msgstr ""

msgctxt "dn2:129.9"
msgid "Iti sākāraṃ sauddesaṃ anekavihitaṃ pubbenivāsaṃ anussarati."
msgstr ""

msgctxt "dn2:129.10"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="109"></a><a class="pts" id="pts1.83"></a>
msgctxt "dn2:130.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte sattānaṃ cutūpapātañāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:130.2"
msgid "So dibbena cakkhunā visuddhena atikkantamānusakena satte passati cavamāne upapajjamāne hīne paṇīte suvaṇṇe dubbaṇṇe sugate duggate, yathākammūpage satte pajānāti:"
msgstr ""

msgctxt "dn2:130.3"
msgid "‘ime vata bhonto sattā kāyaduccaritena samannāgatā vacīduccaritena samannāgatā manoduccaritena samannāgatā ariyānaṃ upavādakā micchādiṭṭhikā micchādiṭṭhikammasamādānā."
msgstr ""

msgctxt "dn2:130.4"
msgid "Te kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapannā."
msgstr ""

msgctxt "dn2:130.5"
msgid "Ime vā pana bhonto sattā kāyasucaritena samannāgatā vacīsucaritena samannāgatā manosucaritena samannāgatā ariyānaṃ anupavādakā sammādiṭṭhikā sammādiṭṭhikammasamādānā, te kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapannā’ti."
msgstr ""

msgctxt "dn2:130.6"
msgid "Iti dibbena cakkhunā visuddhena atikkantamānusakena satte passati cavamāne upapajjamāne hīne paṇīte suvaṇṇe dubbaṇṇe sugate duggate, yathākammūpage satte pajānāti."
msgstr ""

#. </p><p><a class="sc" id="110"></a>
msgctxt "dn2:131.1"
msgid "Seyyathāpi, mahārāja, majjhe siṅghāṭake pāsādo."
msgstr ""

#. VAR: rathikāyapi vīthiṃ sañcarante → rathiyā vīti­sañ­caran­tenapi (bj) |
#. rathiyāya vithiṃ sañcarantepi (s1-3) | rathiyā vīthi sañcarantepi (pts1)
msgctxt "dn2:131.2"
msgid "Tattha cakkhumā puriso ṭhito passeyya manusse gehaṃ pavisantepi nikkhamantepi rathikāyapi vīthiṃ sañcarante majjhe siṅghāṭake nisinnepi."
msgstr ""

msgctxt "dn2:131.3"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:131.4"
msgid "‘ete manussā gehaṃ pavisanti, ete nikkhamanti, ete rathikāya vīthiṃ sañcaranti, ete majjhe siṅghāṭake nisinnā’ti."
msgstr ""

msgctxt "dn2:131.5"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte sattānaṃ cutūpapātañāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:131.6"
msgid "So dibbena cakkhunā visuddhena atikkantamānusakena satte passati cavamāne upapajjamāne hīne paṇīte suvaṇṇe dubbaṇṇe sugate duggate, yathākammūpage satte pajānāti:"
msgstr ""

msgctxt "dn2:131.7"
msgid "‘ime vata bhonto sattā kāyaduccaritena samannāgatā vacīduccaritena samannāgatā manoduccaritena samannāgatā ariyānaṃ upavādakā micchādiṭṭhikā micchādiṭṭhikammasamādānā, te kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapannā."
msgstr ""

msgctxt "dn2:131.8"
msgid "Ime vā pana bhonto sattā kāyasucaritena samannāgatā vacīsucaritena samannāgatā manosucaritena samannāgatā ariyānaṃ anupavādakā sammādiṭṭhikā sammādiṭṭhikammasamādānā."
msgstr ""

msgctxt "dn2:131.9"
msgid "Te kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapannā’ti."
msgstr ""

msgctxt "dn2:131.10"
msgid "Iti dibbena cakkhunā visuddhena atikkantamānusakena satte passati cavamāne upapajjamāne hīne paṇīte suvaṇṇe dubbaṇṇe sugate duggate;"
msgstr ""

msgctxt "dn2:131.11"
msgid "yathākammūpage satte pajānāti."
msgstr ""

msgctxt "dn2:131.12"
msgid "Idampi kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

#. </p><h5></h5><p><a class="sc" id="111"></a><a class="pts" id="pts1.84"></a>
msgctxt "dn2:132.1"
msgid "So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte āsavānaṃ khayañāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:132.2"
msgid "So idaṃ dukkhanti yathābhūtaṃ pajānāti, ayaṃ dukkhasamudayoti yathābhūtaṃ pajānāti, ayaṃ dukkhanirodhoti yathābhūtaṃ pajānāti, ayaṃ dukkhanirodhagāminī paṭipadāti yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "dn2:132.3"
msgid "Ime āsavāti yathābhūtaṃ pajānāti, ayaṃ āsavasamudayoti yathābhūtaṃ pajānāti, ayaṃ āsavanirodhoti yathābhūtaṃ pajānāti, ayaṃ āsavanirodhagāminī paṭipadāti yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "dn2:132.4"
msgid "Tassa evaṃ jānato evaṃ passato kāmāsavāpi cittaṃ vimuccati, bhavāsavāpi cittaṃ vimuccati, avijjāsavāpi cittaṃ vimuccati, vimuttasmiṃ ‘vimuttam’iti ñāṇaṃ hoti, ‘khīṇā jāti, vusitaṃ brahmacariyaṃ, kataṃ karaṇīyaṃ, nāparaṃ itthattāyā’ti pajānāti."
msgstr ""

#. </p><p><a class="sc" id="112"></a><a class="pts" id="pts1.85"></a>
msgctxt "dn2:133.1"
msgid "Seyyathāpi, mahārāja, pabbatasaṅkhepe udakarahado accho vippasanno anāvilo."
msgstr ""

msgctxt "dn2:133.2"
msgid "Tattha cakkhumā puriso tīre ṭhito passeyya sippisambukampi sakkharakathalampi macchagumbampi carantampi tiṭṭhantampi."
msgstr ""

msgctxt "dn2:133.3"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "dn2:133.4"
msgid "‘ayaṃ kho udakarahado accho vippasanno anāvilo."
msgstr ""

msgctxt "dn2:133.5"
msgid "Tatrime sippisambukāpi sakkharakathalāpi macchagumbāpi carantipi tiṭṭhantipī’ti."
msgstr ""

msgctxt "dn2:133.6"
msgid "Evameva kho, mahārāja, bhikkhu evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese mudubhūte kammaniye ṭhite āneñjappatte āsavānaṃ khayañāṇāya cittaṃ abhinīharati abhininnāmeti."
msgstr ""

msgctxt "dn2:133.7"
msgid "‘So idaṃ dukkhan’ti yathābhūtaṃ pajānāti, ‘ayaṃ dukkhasamudayo’ti yathābhūtaṃ pajānāti, ‘ayaṃ dukkhanirodho’ti yathābhūtaṃ pajānāti, ‘ayaṃ dukkhanirodhagāminī paṭipadā’ti yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "dn2:133.8"
msgid "‘Ime āsavā’ti yathābhūtaṃ pajānāti, ‘ayaṃ āsavasamudayo’ti yathābhūtaṃ pajānāti, ‘ayaṃ āsavanirodho’ti yathābhūtaṃ pajānāti, ‘ayaṃ āsavanirodhagāminī paṭipadā’ti yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "dn2:133.9"
msgid "Tassa evaṃ jānato evaṃ passato kāmāsavāpi cittaṃ vimuccati, bhavāsavāpi cittaṃ vimuccati, avijjāsavāpi cittaṃ vimuccati, vimuttasmiṃ ‘vimuttam’iti ñāṇaṃ hoti, ‘khīṇā jāti, vusitaṃ brahmacariyaṃ, kataṃ karaṇīyaṃ, nāparaṃ itthattāyā’ti pajānāti."
msgstr ""

msgctxt "dn2:133.10"
msgid "Idaṃ kho, mahārāja, sandiṭṭhikaṃ sāmaññaphalaṃ purimehi sandiṭṭhikehi sāmaññaphalehi abhikkantatarañca paṇītatarañca."
msgstr ""

msgctxt "dn2:133.11"
msgid "Imasmā ca pana, mahārāja, sandiṭṭhikā sāmaññaphalā aññaṃ sandiṭṭhikaṃ sāmaññaphalaṃ uttaritaraṃ vā paṇītataraṃ vā natthī”ti."
msgstr ""

#. </p><h2>
msgctxt "dn2:134.1"
msgid "5. Ajātasattuupāsakattapaṭivedanā"
msgstr ""

#. </h2><p><a class="sc" id="113"></a>
msgctxt "dn2:135.1"
msgid "Evaṃ vutte, rājā māgadho ajātasattu vedehiputto bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn2:135.2"
msgid "“abhikkantaṃ, bhante, abhikkantaṃ, bhante."
msgstr ""

msgctxt "dn2:135.3"
msgid "Seyyathāpi, bhante, nikkujjitaṃ vā ukkujjeyya, paṭicchannaṃ vā vivareyya, mūḷhassa vā maggaṃ ācikkheyya, andhakāre vā telapajjotaṃ dhāreyya:"
msgstr ""

msgctxt "dn2:135.4"
msgid "‘cakkhumanto rūpāni dakkhantī’ti;"
msgstr ""

msgctxt "dn2:135.5"
msgid "evamevaṃ, bhante, bhagavatā anekapariyāyena dhammo pakāsito."
msgstr ""

msgctxt "dn2:135.6"
msgid "Esāhaṃ, bhante, bhagavantaṃ saraṇaṃ gacchāmi dhammañca bhikkhusaṅghañca."
msgstr ""

msgctxt "dn2:135.7"
msgid "Upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gataṃ."
msgstr ""

msgctxt "dn2:135.8"
msgid "Accayo maṃ, bhante, accagamā yathābālaṃ yathāmūḷhaṃ yathāakusalaṃ, yohaṃ pitaraṃ dhammikaṃ dhammarājānaṃ issariyakāraṇā jīvitā voropesiṃ."
msgstr ""

msgctxt "dn2:135.9"
msgid "Tassa me, bhante bhagavā, accayaṃ accayato paṭiggaṇhātu āyatiṃ saṃvarāyā”ti."
msgstr ""

#. </p><p><a class="sc" id="114"></a>
msgctxt "dn2:136.1"
msgid "“Taggha tvaṃ, mahārāja, accayo accagamā yathābālaṃ yathāmūḷhaṃ yathāakusalaṃ, yaṃ tvaṃ pitaraṃ dhammikaṃ dhammarājānaṃ jīvitā voropesi."
msgstr ""

msgctxt "dn2:136.2"
msgid "Yato ca kho tvaṃ, mahārāja, accayaṃ accayato disvā yathādhammaṃ paṭikarosi, taṃ te mayaṃ paṭiggaṇhāma."
msgstr ""

msgctxt "dn2:136.3"
msgid "Vuddhihesā, mahārāja, ariyassa vinaye, yo accayaṃ accayato disvā yathādhammaṃ paṭikaroti, āyatiṃ saṃvaraṃ āpajjatī”ti."
msgstr ""

#. </p><p><a class="sc" id="115"></a>
msgctxt "dn2:137.1"
msgid "Evaṃ vutte, rājā māgadho ajātasattu vedehiputto bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn2:137.2"
msgid "“handa ca dāni mayaṃ, bhante, gacchāma bahukiccā mayaṃ bahukaraṇīyā”ti."
msgstr ""

msgctxt "dn2:137.3"
msgid "“Yassadāni tvaṃ, mahārāja, kālaṃ maññasī”ti."
msgstr ""

msgctxt "dn2:137.4"
msgid "Atha kho rājā māgadho ajātasattu vedehiputto bhagavato bhāsitaṃ abhinanditvā anumoditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. </p><p><a class="sc" id="116"></a><a class="pts" id="pts1.86"></a>
msgctxt "dn2:138.1"
msgid "Atha kho bhagavā acirapakkantassa rañño māgadhassa ajātasattussa vedehiputtassa bhikkhū āmantesi:"
msgstr ""

msgctxt "dn2:138.2"
msgid "“khatāyaṃ, bhikkhave, rājā."
msgstr ""

msgctxt "dn2:138.3"
msgid "Upahatāyaṃ, bhikkhave, rājā."
msgstr ""

msgctxt "dn2:138.4"
msgid "Sacāyaṃ, bhikkhave, rājā pitaraṃ dhammikaṃ dhammarājānaṃ jīvitā na voropessatha, imasmiññeva āsane virajaṃ vītamalaṃ dhammacakkhuṃ uppajjissathā”ti."
msgstr ""

#. </p><p><a class="sc" id="117"></a>
msgctxt "dn2:139.1"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "dn2:139.2"
msgid "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti."
msgstr ""

#. </p><p class="endsutta">
msgctxt "dn2:140.1"
msgid "Sāmaññaphalasuttaṃ niṭṭhitaṃ dutiyaṃ."
msgstr ""

