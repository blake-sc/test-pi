msgid "‘rājā kho mahāvijito mahāyaññaṃ yajati no ca kho abhirūpo dassanīyo pāsādiko paramāya vaṇṇapokkharatāya samannāgato brahmavaṇṇī brahmavacchasī akhuddāvakāso dassanāya …"
msgstr ""

msgctxt "dn5:78.3"
msgid "pe …"
msgstr ""

msgctxt "dn5:78.4"
msgid "no ca kho aḍḍho mahaddhano mahābhogo pahūtajātarūparajato pahūtavittūpakaraṇo pahūtadhanadhañño paripuṇṇakosakoṭṭhāgāro …"
msgstr ""

msgctxt "dn5:78.5"
msgid "pe …"
msgstr ""

msgctxt "dn5:78.6"
msgid "no ca kho balavā caturaṅginiyā senāya samannāgato assavāya ovādapaṭikarāya sahati maññe paccatthike yasasā …"
msgstr ""

msgctxt "dn5:78.7"
msgid "pe …"
msgstr ""

msgctxt "dn5:78.8"
msgid "no ca kho saddho dāyako dānapati anāvaṭadvāro samaṇabrāhmaṇakapaṇaddhikavaṇibbakayācakānaṃ opānabhūto puññāni karoti …"
msgstr ""

msgctxt "dn5:78.9"
msgid "pe …"
msgstr ""

msgctxt "dn5:78.10"
msgid "no ca kho bahussuto tassa tassa sutajātassa …"
msgstr ""

msgctxt "dn5:78.11"
msgid "pe …"
msgstr ""

msgctxt "dn5:78.12"
msgid "no ca kho tassa tasseva kho pana bhāsitassa atthaṃ jānāti:"
msgstr ""

msgctxt "dn5:78.13"
msgid "“ayaṃ imassa bhāsitassa attho, ayaṃ imassa bhāsitassa attho”ti …"
msgstr ""

msgctxt "dn5:78.14"
msgid "pe …"
msgstr ""

msgctxt "dn5:78.15"
msgid "no ca kho paṇḍito viyatto medhāvī paṭibalo atītānāgatapaccuppanne atthe cintetuṃ, atha ca pana bhavaṃ rājā evarūpaṃ mahāyaññaṃ yajatī’ti."
msgstr ""

msgctxt "dn5:78.16"
msgid "Evampi bhoto rañño vattā dhammato natthi."
msgstr ""

msgctxt "dn5:78.17"
msgid "Bhavaṃ kho pana rājā paṇḍito viyatto medhāvī paṭibalo atītānāgatapaccuppanne atthe cintetuṃ."
msgstr ""

msgctxt "dn5:78.18"
msgid "Imināpetaṃ bhavaṃ rājā jānātu, yajataṃ bhavaṃ, sajjataṃ bhavaṃ, modataṃ bhavaṃ, cittameva bhavaṃ antaraṃ pasādetu."
msgstr ""

msgctxt "dn5:78.19"
msgid "(6–12.)"
msgstr ""

#. </p><p><a class="sc" id="67"></a><a class="wp" id="wp67"></a><a class="pts"
#. id="pts1.141"></a>
msgctxt "dn5:79.1"
msgid "Siyā kho pana bhoto rañño mahāyaññaṃ yajamānassa kocideva vattā:"
msgstr ""

msgctxt "dn5:79.2"
msgid "‘rājā kho mahāvijito mahāyaññaṃ yajati."
msgstr ""

msgctxt "dn5:79.3"
msgid "No ca khvassa purohito brāhmaṇo ubhato sujāto mātito ca pitito ca saṃsuddhagahaṇiko yāva sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena;"
msgstr ""

msgctxt "dn5:79.4"
msgid "atha ca pana bhavaṃ rājā evarūpaṃ mahāyaññaṃ yajatī’ti."
msgstr ""

msgctxt "dn5:79.5"
msgid "Evampi bhoto rañño vattā dhammato natthi."
msgstr ""

msgctxt "dn5:79.6"
msgid "Bhoto kho pana rañño purohito brāhmaṇo ubhato sujāto mātito ca pitito ca saṃsuddhagahaṇiko yāva sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena."
msgstr ""

msgctxt "dn5:79.7"
msgid "Imināpetaṃ bhavaṃ rājā jānātu, yajataṃ bhavaṃ, sajjataṃ bhavaṃ, modataṃ bhavaṃ, cittameva bhavaṃ antaraṃ pasādetu. <span class=\"brnum\">(13)</span>"
msgstr ""

#. </p><p><a class="sc" id="68"></a><a class="wp" id="wp68"></a>
msgctxt "dn5:80.1"
msgid "Siyā kho pana bhoto rañño mahāyaññaṃ yajamānassa kocideva vattā:"
msgstr ""

msgctxt "dn5:80.2"
msgid "‘rājā kho mahāvijito mahāyaññaṃ yajati."
msgstr ""

msgctxt "dn5:80.3"
msgid "No ca khvassa purohito brāhmaṇo ajjhāyako mantadharo tiṇṇaṃ vedānaṃ pāragū sanighaṇḍukeṭubhānaṃ sākkharappabhedānaṃ itihāsapañcamānaṃ padako veyyākaraṇo lokāyatamahāpurisalakkhaṇesu anavayo …"
msgstr ""

msgctxt "dn5:80.4"
msgid "pe …"
msgstr ""

msgctxt "dn5:80.5"
msgid "no ca khvassa purohito brāhmaṇo sīlavā vuddhasīlī vuddhasīlena samannāgato …"
msgstr ""

msgctxt "dn5:80.6"
msgid "pe …"
msgstr ""

msgctxt "dn5:80.7"
msgid "no ca khvassa purohito brāhmaṇo paṇḍito viyatto medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ, atha ca pana bhavaṃ rājā evarūpaṃ mahāyaññaṃ yajatī’ti."
msgstr ""

msgctxt "dn5:80.8"
msgid "Evampi bhoto rañño vattā dhammato natthi."
msgstr ""

msgctxt "dn5:80.9"
msgid "Bhoto kho pana rañño purohito brāhmaṇo paṇḍito viyatto medhāvī paṭhamo vā dutiyo vā sujaṃ paggaṇhantānaṃ."
msgstr ""

msgctxt "dn5:80.10"
msgid "Imināpetaṃ bhavaṃ rājā jānātu, yajataṃ bhavaṃ, sajjataṃ bhavaṃ, modataṃ bhavaṃ, cittameva bhavaṃ antaraṃ pasādetūti."
msgstr ""

msgctxt "dn5:80.11"
msgid "Imehi kho, brāhmaṇa, purohito brāhmaṇo rañño mahāvijitassa mahāyaññaṃ yajamānassa soḷasahi ākārehi cittaṃ sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "dn5:80.12"
msgid "(14–16.)"
msgstr ""

#. </p><p><a class="sc" id="69"></a><a class="wp" id="wp69"></a>
#. VAR: barihisatthāya → pari­hiṃ­satthāya (si, s1-3, mr) | para­hiṃ­satthāya
#. (mr)
msgctxt "dn5:81.1"
msgid "Tasmiṃ kho, brāhmaṇa, yaññe neva gāvo haññiṃsu, na ajeḷakā haññiṃsu, na kukkuṭasūkarā haññiṃsu, na vividhā pāṇā saṅghātaṃ āpajjiṃsu, na rukkhā chijjiṃsu yūpatthāya, na dabbhā lūyiṃsu barihisatthāya."
msgstr ""

msgctxt "dn5:81.2"
msgid "Yepissa ahesuṃ dāsāti vā pessāti vā kammakarāti vā, tepi na daṇḍatajjitā na bhayatajjitā na assumukhā rudamānā parikammāni akaṃsu."
msgstr ""

msgctxt "dn5:81.3"
msgid "Atha kho ye icchiṃsu, te akaṃsu, ye na icchiṃsu, na te akaṃsu;"
msgstr ""

msgctxt "dn5:81.4"
msgid "yaṃ icchiṃsu, taṃ akaṃsu, yaṃ na icchiṃsu, na taṃ akaṃsu."
msgstr ""

msgctxt "dn5:81.5"
msgid "Sappitelanavanītadadhimadhuphāṇitena ceva so yañño niṭṭhānamagamāsi."
msgstr ""

#. </p><p><a class="sc" id="70"></a><a class="wp" id="wp70"></a><a class="pts"
#. id="pts1.142"></a>
msgctxt "dn5:82.1"
msgid "Atha kho, brāhmaṇa, khattiyā ānuyantā negamā ceva jānapadā ca, amaccā pārisajjā negamā ceva jānapadā ca, brāhmaṇamahāsālā negamā ceva jānapadā ca, gahapatinecayikā negamā ceva jānapadā ca pahūtaṃ sāpateyyaṃ ādāya rājānaṃ mahāvijitaṃ upasaṅkamitvā evamāhaṃsu:"
msgstr ""

msgctxt "dn5:82.2"
msgid "‘idaṃ, deva, pahūtaṃ sāpateyyaṃ devaññeva uddissābhataṃ, taṃ devo paṭiggaṇhātū’ti."
msgstr ""

msgctxt "dn5:82.3"
msgid "‘Alaṃ, bho, mamāpidaṃ pahūtaṃ sāpateyyaṃ dhammikena balinā abhisaṅkhataṃ;"
msgstr ""

msgctxt "dn5:82.4"
msgid "tañca vo hotu, ito ca bhiyyo harathā’ti."
msgstr ""

msgctxt "dn5:82.5"
msgid "Te raññā paṭikkhittā ekamantaṃ apakkamma evaṃ samacintesuṃ:"
msgstr ""

msgctxt "dn5:82.6"
msgid "‘na kho etaṃ amhākaṃ patirūpaṃ, yaṃ mayaṃ imāni sāpateyyāni punadeva sakāni gharāni paṭihareyyāma."
msgstr ""

msgctxt "dn5:82.7"
msgid "Rājā kho mahāvijito mahāyaññaṃ yajati, handassa mayaṃ anuyāgino homā’ti."
msgstr ""

#. </p><p><a class="sc" id="71"></a><a class="wp" id="wp71"></a>
#. VAR: yaññavāṭassa → yaññāvāṭassa (bj, pts1, mr) | yaññavātassa (s1-3)
msgctxt "dn5:83.1"
msgid "Atha kho, brāhmaṇa, puratthimena yaññavāṭassa khattiyā ānuyantā negamā ceva jānapadā ca dānāni paṭṭhapesuṃ."
msgstr ""

msgctxt "dn5:83.2"
msgid "Dakkhiṇena yaññavāṭassa amaccā pārisajjā negamā ceva jānapadā ca dānāni paṭṭhapesuṃ."
msgstr ""

msgctxt "dn5:83.3"
msgid "Pacchimena yaññavāṭassa brāhmaṇamahāsālā negamā ceva jānapadā ca dānāni paṭṭhapesuṃ."
msgstr ""

msgctxt "dn5:83.4"
msgid "Uttarena yaññavāṭassa gahapatinecayikā negamā ceva jānapadā ca dānāni paṭṭhapesuṃ."
msgstr ""

#. </p><p><a class="sc" id="72"></a><a class="wp" id="wp72"></a>
msgctxt "dn5:84.1"
msgid "Tesupi kho, brāhmaṇa, yaññesu neva gāvo haññiṃsu, na ajeḷakā haññiṃsu, na kukkuṭasūkarā haññiṃsu, na vividhā pāṇā saṅghātaṃ āpajjiṃsu, na rukkhā chijjiṃsu yūpatthāya, na dabbhā lūyiṃsu barihisatthāya."
msgstr ""

msgctxt "dn5:84.2"
msgid "Yepi nesaṃ ahesuṃ dāsāti vā pessāti vā kammakarāti vā, tepi na daṇḍatajjitā na bhayatajjitā na assumukhā rudamānā parikammāni akaṃsu."
msgstr ""

msgctxt "dn5:84.3"
msgid "Atha kho ye icchiṃsu, te akaṃsu, ye na icchiṃsu, na te akaṃsu;"
msgstr ""

msgctxt "dn5:84.4"
msgid "yaṃ icchiṃsu, taṃ akaṃsu, yaṃ na icchiṃsu na taṃ akaṃsu."
msgstr ""

msgctxt "dn5:84.5"
msgid "Sappitelanavanītadadhimadhuphāṇitena ceva te yaññā niṭṭhānamagamaṃsu."
msgstr ""

#. </p><p><a class="sc" id="73"></a><a class="wp" id="wp73"></a><a class="pts"
#. id="pts1.143"></a>
msgctxt "dn5:85.1"
msgid "Iti cattāro ca anumatipakkhā, rājā mahāvijito aṭṭhahaṅgehi samannāgato, purohito brāhmaṇo catūhaṅgehi samannāgato;"
msgstr ""

msgctxt "dn5:85.2"
msgid "tisso ca vidhā."
msgstr ""

msgctxt "dn5:85.3"
msgid "Ayaṃ vuccati, brāhmaṇa, tividhā yaññasampadā soḷasaparikkhārā”ti."
msgstr ""

#. </p><p><a class="sc" id="74"></a><a class="wp" id="wp74"></a>
msgctxt "dn5:86.1"
msgid "Evaṃ vutte, te brāhmaṇā unnādino uccāsaddamahāsaddā ahesuṃ:"
msgstr ""

msgctxt "dn5:86.2"
msgid "“aho yañño, aho yaññasampadā”ti."
msgstr ""

msgctxt "dn5:86.3"
msgid "Kūṭadanto pana brāhmaṇo tūṇhībhūtova nisinno hoti."
msgstr ""

msgctxt "dn5:86.4"
msgid "Atha kho te brāhmaṇā kūṭadantaṃ brāhmaṇaṃ etadavocuṃ:"
msgstr ""

msgctxt "dn5:86.5"
msgid "“kasmā pana bhavaṃ kūṭadanto samaṇassa gotamassa subhāsitaṃ subhāsitato nābbhanumodatī”ti?"
msgstr ""

msgctxt "dn5:86.6"
msgid "“Nāhaṃ, bho, samaṇassa gotamassa subhāsitaṃ subhāsitato nābbhanumodāmi."
msgstr ""

msgctxt "dn5:86.7"
msgid "Muddhāpi tassa vipateyya, yo samaṇassa gotamassa subhāsitaṃ subhāsitato nābbhanumodeyya."
msgstr ""

msgctxt "dn5:86.8"
msgid "Api ca me, bho, evaṃ hoti—"
msgstr ""

msgctxt "dn5:86.9"
msgid "samaṇo gotamo na evamāha:"
msgstr ""

msgctxt "dn5:86.10"
msgid "‘evaṃ me sutan’ti vā ‘evaṃ arahati bhavitun’ti vā;"
msgstr ""

msgctxt "dn5:86.11"
msgid "api ca samaṇo gotamo:"
msgstr ""

msgctxt "dn5:86.12"
msgid "‘evaṃ tadā āsi, itthaṃ tadā āsi’ tveva bhāsati."
msgstr ""

msgctxt "dn5:86.13"
msgid "Tassa mayhaṃ bho evaṃ hoti:"
msgstr ""

msgctxt "dn5:86.14"
msgid "‘addhā samaṇo gotamo tena samayena rājā vā ahosi mahāvijito yaññassāmi purohito vā brāhmaṇo tassa yaññassa yājetā’ti."
msgstr ""

msgctxt "dn5:86.15"
msgid "Abhijānāti pana bhavaṃ gotamo evarūpaṃ yaññaṃ yajitvā vā yājetvā vā kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjitā”ti?"
msgstr ""

msgctxt "dn5:86.16"
msgid "“Abhijānāmahaṃ, brāhmaṇa, evarūpaṃ yaññaṃ yajitvā vā yājetvā vā kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjitā, ahaṃ tena samayena purohito brāhmaṇo ahosiṃ tassa yaññassa yājetā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn5:87.1"
msgid "5. Niccadānaanukulayañña"
msgstr ""

#. </h2><p><a class="sc" id="75"></a><a class="wp" id="wp75"></a>
#. VAR: appaṭṭhataro → appatthataro (s1-3, km)
#. VAR: tividhāya yaññasampadāya → tividha­yañña­sam­padāya (mr)
msgctxt "dn5:88.1"
msgid "“Atthi pana, bho gotama, añño yañño imāya tividhāya yaññasampadāya soḷasaparikkhārāya appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="76"></a><a class="wp" id="wp76"></a><a class="pts"
#. id="pts1.144"></a>
msgctxt "dn5:89.1"
msgid "“Atthi kho, brāhmaṇa, añño yañño imāya tividhāya yaññasampadāya soḷasaparikkhārāya appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="77"></a><a class="wp" id="wp77"></a>
msgctxt "dn5:90.1"
msgid "“Katamo pana so, bho gotama, yañño imāya tividhāya yaññasampadāya soḷasaparikkhārāya appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="78"></a><a class="wp" id="wp78"></a>
msgctxt "dn5:91.1"
msgid "“Yāni kho pana tāni, brāhmaṇa, niccadānāni anukulayaññāni sīlavante pabbajite uddissa diyyanti;"
msgstr ""

msgctxt "dn5:91.2"
msgid "ayaṃ kho, brāhmaṇa, yañño imāya tividhāya yaññasampadāya soḷasaparikkhārāya appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="79"></a><a class="wp" id="wp79"></a>
msgctxt "dn5:92.1"
msgid "“Ko nu kho, bho gotama, hetu ko paccayo, yena taṃ niccadānaṃ anukulayaññaṃ imāya tividhāya yaññasampadāya soḷasaparikkhārāya appaṭṭhatarañca appasamārambhatarañca mahapphalatarañca mahānisaṃsatarañcā”ti?"
msgstr ""

#. </p><p><a class="sc" id="80"></a><a class="wp" id="wp80"></a>
msgctxt "dn5:93.1"
msgid "“Na kho, brāhmaṇa, evarūpaṃ yaññaṃ upasaṅkamanti arahanto vā arahattamaggaṃ vā samāpannā."
msgstr ""

msgctxt "dn5:93.2"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn5:93.3"
msgid "Dissanti hettha, brāhmaṇa, daṇḍappahārāpi galaggahāpi, tasmā evarūpaṃ yaññaṃ na upasaṅkamanti arahanto vā arahattamaggaṃ vā samāpannā."
msgstr ""

msgctxt "dn5:93.4"
msgid "Yāni kho pana tāni, brāhmaṇa, niccadānāni anukulayaññāni sīlavante pabbajite uddissa diyyanti;"
msgstr ""

msgctxt "dn5:93.5"
msgid "evarūpaṃ kho, brāhmaṇa, yaññaṃ upasaṅkamanti arahanto vā arahattamaggaṃ vā samāpannā."
msgstr ""

msgctxt "dn5:93.6"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "dn5:93.7"
msgid "Na hettha, brāhmaṇa, dissanti daṇḍappahārāpi galaggahāpi, tasmā evarūpaṃ yaññaṃ upasaṅkamanti arahanto vā arahattamaggaṃ vā samāpannā."
msgstr ""

msgctxt "dn5:93.8"
msgid "Ayaṃ kho, brāhmaṇa, hetu ayaṃ paccayo, yena taṃ niccadānaṃ anukulayaññaṃ imāya tividhāya yaññasampadāya soḷasaparikkhārāya appaṭṭhatarañca appasamārambhatarañca mahapphalatarañca mahānisaṃsatarañcā”ti."
msgstr ""

#. </p><p><a class="sc" id="81"></a><a class="wp" id="wp81"></a><a class="pts"
#. id="pts1.145"></a>
msgctxt "dn5:94.1"
msgid "“Atthi pana, bho gotama, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="82"></a><a class="wp" id="wp82"></a>
msgctxt "dn5:95.1"
msgid "“Atthi kho, brāhmaṇa, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="83"></a><a class="wp" id="wp83"></a>
msgctxt "dn5:96.1"
msgid "“Katamo pana so, bho gotama, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="84"></a><a class="wp" id="wp84"></a>
msgctxt "dn5:97.1"
msgid "“Yo kho, brāhmaṇa, cātuddisaṃ saṅghaṃ uddissa vihāraṃ karoti, ayaṃ kho, brāhmaṇa, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="85"></a><a class="wp" id="wp85"></a>
msgctxt "dn5:98.1"
msgid "“Atthi pana, bho gotama, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="86"></a><a class="wp" id="wp86"></a>
msgctxt "dn5:99.1"
msgid "“Atthi kho, brāhmaṇa, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="87"></a><a class="wp" id="wp87"></a>
msgctxt "dn5:100.1"
msgid "“Katamo pana so, bho gotama, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="88"></a><a class="wp" id="wp88"></a><a class="pts"
#. id="pts1.146"></a>
msgctxt "dn5:101.1"
msgid "“Yo kho, brāhmaṇa, pasannacitto buddhaṃ saraṇaṃ gacchati, dhammaṃ saraṇaṃ gacchati, saṅghaṃ saraṇaṃ gacchati;"
msgstr ""

msgctxt "dn5:101.2"
msgid "ayaṃ kho, brāhmaṇa, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="89"></a><a class="wp" id="wp89"></a>
msgctxt "dn5:102.1"
msgid "“Atthi pana, bho gotama, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="90"></a><a class="wp" id="wp90"></a>
msgctxt "dn5:103.1"
msgid "“Atthi kho, brāhmaṇa, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="91"></a><a class="wp" id="wp91"></a>
msgctxt "dn5:104.1"
msgid "“Katamo pana so, bho gotama, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="92"></a><a class="wp" id="wp92"></a>
msgctxt "dn5:105.1"
msgid "“Yo kho, brāhmaṇa, pasannacitto sikkhāpadāni samādiyati—"
msgstr ""

msgctxt "dn5:105.2"
msgid "pāṇātipātā veramaṇiṃ, adinnādānā veramaṇiṃ, kāmesumicchācārā veramaṇiṃ, musāvādā veramaṇiṃ, surāmerayamajjapamādaṭṭhānā veramaṇiṃ."
msgstr ""

msgctxt "dn5:105.3"
msgid "Ayaṃ kho, brāhmaṇa, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="93"></a><a class="wp" id="wp93"></a>
msgctxt "dn5:106.1"
msgid "“Atthi pana, bho gotama, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi imehi ca sikkhāpadehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="94"></a><a class="wp" id="wp94"></a>
msgctxt "dn5:107.1"
msgid "“Atthi kho, brāhmaṇa, añño yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi imehi ca sikkhāpadehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti."
msgstr ""

#. </p><p><a class="sc" id="95"></a><a class="wp" id="wp95"></a><a class="pts"
#. id="pts1.147"></a>
msgctxt "dn5:108.1"
msgid "“Katamo pana so, bho gotama, yañño imāya ca tividhāya yaññasampadāya soḷasaparikkhārāya iminā ca niccadānena anukulayaññena iminā ca vihāradānena imehi ca saraṇagamanehi imehi ca sikkhāpadehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cā”ti?"
msgstr ""

#. </p><p><a class="sc" id="96"></a><a class="wp" id="wp96"></a>
msgctxt "dn5:109.1"
msgid "“Idha, brāhmaṇa, tathāgato loke uppajjati arahaṃ sammāsambuddho …"
msgstr ""

msgctxt "dn5:109.2"
msgid "pe …"
msgstr ""

msgctxt "dn5:109.3"
msgid "Evaṃ kho, brāhmaṇa, bhikkhu sīlasampanno hoti …"
msgstr ""

msgctxt "dn5:109.4"
msgid "pe …"
msgstr ""

msgctxt "dn5:109.5"
msgid "paṭhamaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn5:109.6"
msgid "Ayaṃ kho, brāhmaṇa, yañño purimehi yaññehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro ca …"
msgstr ""

#. </p><p><a class="sc" id="97"></a><a class="wp" id="wp97"></a>
msgctxt "dn5:110.1"
msgid "…"
msgstr ""

msgctxt "dn5:110.2"
msgid "pe …"
msgstr ""

msgctxt "dn5:110.3"
msgid "Dutiyaṃ jhānaṃ …"
msgstr ""

msgctxt "dn5:110.4"
msgid "tatiyaṃ jhānaṃ …"
msgstr ""

msgctxt "dn5:110.5"
msgid "catutthaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "dn5:110.6"
msgid "Ayampi kho, brāhmaṇa, yañño purimehi yaññehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro cāti."
msgstr ""

msgctxt "dn5:110.7"
msgid "…"
msgstr ""

msgctxt "dn5:110.8"
msgid "pe …"
msgstr ""

msgctxt "dn5:110.9"
msgid "Ñāṇadassanāya cittaṃ abhinīharati abhininnāmeti …"
msgstr ""

msgctxt "dn5:110.10"
msgid "ayampi kho, brāhmaṇa, yañño purimehi yaññehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro ca …"
msgstr ""

msgctxt "dn5:110.11"
msgid "pe …"
msgstr ""

msgctxt "dn5:110.12"
msgid "nāparaṃ itthattāyāti pajānāti."
msgstr ""

msgctxt "dn5:110.13"
msgid "Ayampi kho, brāhmaṇa, yañño purimehi yaññehi appaṭṭhataro ca appasamārambhataro ca mahapphalataro ca mahānisaṃsataro ca."
msgstr ""

msgctxt "dn5:110.14"
msgid "Imāya ca, brāhmaṇa, yaññasampadāya aññā yaññasampadā uttaritarā vā paṇītatarā vā natthī”ti."
msgstr ""

#. </p><h2>
msgctxt "dn5:111.1"
msgid "6. Kūṭadantaupāsakattapaṭivedanā"
msgstr ""

#. </h2><p><a class="sc" id="98"></a><a class="wp" id="wp98"></a><a class="pts"
#. id="pts1.148"></a>
msgctxt "dn5:112.1"
msgid "Evaṃ vutte, kūṭadanto brāhmaṇo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn5:112.2"
msgid "“abhikkantaṃ, bho gotama, abhikkantaṃ, bho gotama."
msgstr ""

msgctxt "dn5:112.3"
msgid "Seyyathāpi, bho gotama, nikkujjitaṃ vā ukkujjeyya, paṭicchannaṃ vā vivareyya, mūḷhassa vā maggaṃ ācikkheyya, andhakāre vā telapajjotaṃ dhāreyya:"
msgstr ""

msgctxt "dn5:112.4"
msgid "‘cakkhumanto rūpāni dakkhantī’ti;"
msgstr ""

msgctxt "dn5:112.5"
msgid "evamevaṃ bhotā gotamena anekapariyāyena dhammo pakāsito."
msgstr ""

msgctxt "dn5:112.6"
msgid "Esāhaṃ bhavantaṃ gotamaṃ saraṇaṃ gacchāmi dhammañca bhikkhusaṅghañca."
msgstr ""

msgctxt "dn5:112.7"
msgid "Upāsakaṃ maṃ bhavaṃ gotamo dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gataṃ."
msgstr ""

msgctxt "dn5:112.8"
msgid "Esāhaṃ, bho gotama, satta ca usabhasatāni satta ca vacchatarasatāni satta ca vacchatarīsatāni satta ca ajasatāni satta ca urabbhasatāni muñcāmi, jīvitaṃ demi, haritāni ceva tiṇāni khādantu, sītāni ca pānīyāni pivantu, sīto ca nesaṃ vāto upavāyatū”ti."
msgstr ""

#. </p><h2>
msgctxt "dn5:113.1"
msgid "7. Sotāpattiphalasacchikiriyā"
msgstr ""

#. </h2><p><a class="sc" id="99"></a><a class="wp" id="wp99"></a>
msgctxt "dn5:114.1"
msgid "Atha kho bhagavā kūṭadantassa brāhmaṇassa anupubbiṃ kathaṃ kathesi, seyyathidaṃ—"
msgstr ""

msgctxt "dn5:114.2"
msgid "dānakathaṃ sīlakathaṃ saggakathaṃ;"
msgstr ""

msgctxt "dn5:114.3"
msgid "kāmānaṃ ādīnavaṃ okāraṃ saṅkilesaṃ nekkhamme ānisaṃsaṃ pakāsesi."
msgstr ""

msgctxt "dn5:114.4"
msgid "Yadā bhagavā aññāsi kūṭadantaṃ brāhmaṇaṃ kallacittaṃ muducittaṃ vinīvaraṇacittaṃ udaggacittaṃ pasannacittaṃ, atha yā buddhānaṃ sāmukkaṃsikā dhammadesanā, taṃ pakāsesi—"
msgstr ""

msgctxt "dn5:114.5"
msgid "dukkhaṃ samudayaṃ nirodhaṃ maggaṃ."
msgstr ""

msgctxt "dn5:114.6"
msgid "Seyyathāpi nāma suddhaṃ vatthaṃ apagatakāḷakaṃ sammadeva rajanaṃ paṭiggaṇheyya;"
msgstr ""

msgctxt "dn5:114.7"
msgid "evameva kūṭadantassa brāhmaṇassa tasmiññeva āsane virajaṃ vītamalaṃ dhammacakkhuṃ udapādi:"
msgstr ""

msgctxt "dn5:114.8"
msgid "“yaṃ kiñci samudayadhammaṃ sabbaṃ taṃ nirodhadhamman”ti."
msgstr ""

#. </p><p><a class="sc" id="100"></a><a class="wp" id="wp100"></a>
msgctxt "dn5:115.1"
msgid "Atha kho kūṭadanto brāhmaṇo diṭṭhadhammo pattadhammo viditadhammo pariyogāḷhadhammo tiṇṇavicikiccho vigatakathaṅkatho vesārajjappatto aparappaccayo satthusāsane bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn5:115.2"
msgid "“adhivāsetu me bhavaṃ gotamo svātanāya bhattaṃ saddhiṃ bhikkhusaṅghenā”ti."
msgstr ""

msgctxt "dn5:115.3"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

#. </p><p><a class="sc" id="101"></a><a class="wp" id="wp101"></a>
msgctxt "dn5:116.1"
msgid "Atha kho kūṭadanto brāhmaṇo bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "dn5:116.2"
msgid "Atha kho kūṭadanto brāhmaṇo tassā rattiyā accayena sake yaññavāṭe paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi:"
msgstr ""

msgctxt "dn5:116.3"
msgid "“kālo, bho gotama;"
msgstr ""

msgctxt "dn5:116.4"
msgid "niṭṭhitaṃ bhattan”ti."
msgstr ""

#. </p><p><a class="sc" id="102"></a><a class="wp" id="wp102"></a>
msgctxt "dn5:117.1"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya saddhiṃ bhikkhusaṅghena yena kūṭadantassa brāhmaṇassa yaññavāṭo tenupasaṅkami;"
msgstr ""

msgctxt "dn5:117.2"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

#. </p><p><a class="sc" id="103"></a><a class="wp" id="wp103"></a><a
#. class="pts" id="pts1.149"></a>
msgctxt "dn5:118.1"
msgid "Atha kho kūṭadanto brāhmaṇo buddhappamukhaṃ bhikkhusaṅghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappesi sampavāresi."
msgstr ""

msgctxt "dn5:118.2"
msgid "Atha kho kūṭadanto brāhmaṇo bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ aññataraṃ nīcaṃ āsanaṃ gahetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "dn5:118.3"
msgid "Ekamantaṃ nisinnaṃ kho kūṭadantaṃ brāhmaṇaṃ bhagavā dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmīti."
msgstr ""

#. </p><p class="endsutta">
msgctxt "dn5:119.1"
msgid "Kūṭadantasuttaṃ niṭṭhitaṃ pañcamaṃ."
msgstr ""

