msgctxt "dn8:1.1"
msgid "Dīgha Nikāya 8"
msgstr ""

#. </p><h1>
msgctxt "dn8:2.1"
msgid "Mahāsīhanādasutta"
msgstr ""

#. </h1></div><p><a class="sc" id="1"></a><a class="wp" id="wp1"></a><a
#. class="pts" id="pts1.161"></a>
msgctxt "dn8:3.1"
msgid "<span class=\"evam\">Evaṃ me sutaṃ—​</span>"
msgstr ""

#. VAR: uruññāyaṃ → ujuññāyaṃ (bj, s1-3, km, pts1)
msgctxt "dn8:3.2"
msgid "ekaṃ samayaṃ bhagavā uruññāyaṃ viharati kaṇṇakatthale migadāye."
msgstr ""

msgctxt "dn8:3.3"
msgid "Atha kho acelo kassapo yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "dn8:3.4"
msgid "upasaṅkamitvā bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "dn8:3.5"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "dn8:3.6"
msgid "Ekamantaṃ ṭhito kho acelo kassapo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn8:3.7"
msgid "“<a class=\"wp\" id=\"wp2\"></a> sutaṃ metaṃ, bho gotama:"
msgstr ""

msgctxt "dn8:3.8"
msgid "‘samaṇo gotamo sabbaṃ tapaṃ garahati, sabbaṃ tapassiṃ lūkhājīviṃ ekaṃsena upakkosati upavadatī’ti."
msgstr ""

msgctxt "dn8:3.9"
msgid "Ye te, bho gotama, evamāhaṃsu:"
msgstr ""

#. VAR: vādānuvādo → vādānupāto (^sn12.24#1 [24. Añña­titthi­ya­sutta])
msgctxt "dn8:3.10"
msgid "‘samaṇo gotamo sabbaṃ tapaṃ garahati, sabbaṃ tapassiṃ lūkhājīviṃ ekaṃsena upakkosati upavadatī’ti, kacci te bhoto gotamassa vuttavādino, na ca bhavantaṃ gotamaṃ abhūtena abbhācikkhanti, dhammassa cānudhammaṃ byākaronti, na ca koci sahadhammiko vādānuvādo gārayhaṃ ṭhānaṃ āgacchati?"
msgstr ""

msgctxt "dn8:3.11"
msgid "Anabbhakkhātukāmā hi mayaṃ bhavantaṃ gotaman”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a><a class="wp" id="wp3"></a><a class="pts"
#. id="pts1.162"></a>
msgctxt "dn8:4.1"
msgid "“Ye te, kassapa, evamāhaṃsu:"
msgstr ""

msgctxt "dn8:4.2"
msgid "‘samaṇo gotamo sabbaṃ tapaṃ garahati, sabbaṃ tapassiṃ lūkhājīviṃ ekaṃsena upakkosati upavadatī’ti, na me te vuttavādino, abbhācikkhanti ca pana maṃ te asatā abhūtena."
msgstr ""

msgctxt "dn8:4.3"
msgid "Idhāhaṃ, kassapa, ekaccaṃ tapassiṃ lūkhājīviṃ passāmi dibbena cakkhunā visuddhena atikkantamānusakena kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapannaṃ."
msgstr ""

msgctxt "dn8:4.4"
msgid "Idha panāhaṃ, kassapa, ekaccaṃ tapassiṃ lūkhājīviṃ passāmi dibbena cakkhunā visuddhena atikkantamānusakena kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapannaṃ."
msgstr ""

#. </p><p><a class="sc" id="3"></a>
msgctxt "dn8:5.1"
msgid "Idhāhaṃ, kassapa, ekaccaṃ tapassiṃ appadukkhavihāriṃ passāmi dibbena cakkhunā visuddhena atikkantamānusakena kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapannaṃ."
msgstr ""

msgctxt "dn8:5.2"
msgid "Idha panāhaṃ, kassapa, ekaccaṃ tapassiṃ appadukkhavihāriṃ passāmi dibbena cakkhunā visuddhena atikkantamānusakena kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapannaṃ."
msgstr ""

msgctxt "dn8:5.3"
msgid "Yohaṃ, kassapa, imesaṃ tapassīnaṃ evaṃ āgatiñca gatiñca cutiñca upapattiñca yathābhūtaṃ pajānāmi, sohaṃ kiṃ sabbaṃ tapaṃ garahissāmi, sabbaṃ vā tapassiṃ lūkhājīviṃ ekaṃsena upakkosissāmi upavadissāmi?"
msgstr ""

#. </p><p><a class="sc" id="4"></a><a class="wp" id="wp4"></a>
msgctxt "dn8:6.1"
msgid "Santi, kassapa, eke samaṇabrāhmaṇā paṇḍitā nipuṇā kataparappavādā vālavedhirūpā."
msgstr ""

msgctxt "dn8:6.2"
msgid "Te bhindantā maññe caranti paññāgatena diṭṭhigatāni."
msgstr ""

msgctxt "dn8:6.3"
msgid "Tehipi me saddhiṃ ekaccesu ṭhānesu sameti, ekaccesu ṭhānesu na sameti."
msgstr ""

msgctxt "dn8:6.4"
msgid "Yaṃ te ekaccaṃ vadanti ‘sādhū’ti, mayampi taṃ ekaccaṃ vadema ‘sādhū’ti."
msgstr ""

msgctxt "dn8:6.5"
msgid "Yaṃ te ekaccaṃ vadanti ‘na sādhū’ti, mayampi taṃ ekaccaṃ vadema ‘na sādhū’ti."
msgstr ""

msgctxt "dn8:6.6"
msgid "Yaṃ te ekaccaṃ vadanti ‘sādhū’ti, mayaṃ taṃ ekaccaṃ vadema ‘na sādhū’ti."
msgstr ""

msgctxt "dn8:6.7"
msgid "Yaṃ te ekaccaṃ vadanti ‘na sādhū’ti, mayaṃ taṃ ekaccaṃ vadema ‘sādhū’ti."
msgstr ""

#. </p><p><a class="sc" id="5"></a><a class="pts" id="pts1.163"></a>
msgctxt "dn8:7.1"
msgid "Yaṃ mayaṃ ekaccaṃ vadema ‘sādhū’ti, parepi taṃ ekaccaṃ vadanti ‘sādhū’ti."
msgstr ""

msgctxt "dn8:7.2"
msgid "Yaṃ mayaṃ ekaccaṃ vadema ‘na sādhū’ti, parepi taṃ ekaccaṃ vadanti ‘na sādhū’ti."
msgstr ""

msgctxt "dn8:7.3"
msgid "Yaṃ mayaṃ ekaccaṃ vadema ‘na sādhū’ti, pare taṃ ekaccaṃ vadanti ‘sādhū’ti."
msgstr ""

msgctxt "dn8:7.4"
msgid "Yaṃ mayaṃ ekaccaṃ vadema ‘sādhū’ti, pare taṃ ekaccaṃ vadanti ‘na sādhū’ti."
msgstr ""

#. </p><h2>
msgctxt "dn8:8.1"
msgid "1. Samanuyuñjāpanakathā"
msgstr ""

#. </h2><p><a class="sc" id="6"></a><a class="wp" id="wp5"></a>
msgctxt "dn8:9.1"
msgid "Tyāhaṃ upasaṅkamitvā evaṃ vadāmi:"
msgstr ""

msgctxt "dn8:9.2"
msgid "‘yesu no, āvuso, ṭhānesu na sameti, tiṭṭhantu tāni ṭhānāni."
msgstr ""

msgctxt "dn8:9.3"
msgid "Yesu ṭhānesu sameti, tattha viññū samanuyuñjantaṃ samanugāhantaṃ samanubhāsantaṃ satthārā vā satthāraṃ saṅghena vā saṅghaṃ:"
msgstr ""

msgctxt "dn8:9.4"
msgid "“ye imesaṃ bhavataṃ dhammā akusalā akusalasaṅkhātā, sāvajjā sāvajjasaṅkhātā, asevitabbā asevitabbasaṅkhātā, na alamariyā na alamariyasaṅkhātā, kaṇhā kaṇhasaṅkhātā."
msgstr ""

msgctxt "dn8:9.5"
msgid "Ko ime dhamme anavasesaṃ pahāya vattati, samaṇo vā gotamo, pare vā pana bhonto gaṇācariyā”ti?"
msgstr ""

#. </p><p><a class="sc" id="7"></a><a class="wp" id="wp6"></a>
msgctxt "dn8:10.1"
msgid "Ṭhānaṃ kho panetaṃ, kassapa, vijjati, yaṃ viññū samanuyuñjantā samanugāhantā samanubhāsantā evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn8:10.2"
msgid "‘ye imesaṃ bhavataṃ dhammā akusalā akusalasaṅkhātā, sāvajjā sāvajjasaṅkhātā, asevitabbā asevitabbasaṅkhātā, na alamariyā na alamariyasaṅkhātā, kaṇhā kaṇhasaṅkhātā."
msgstr ""

msgctxt "dn8:10.3"
msgid "Samaṇo gotamo ime dhamme anavasesaṃ pahāya vattati, yaṃ vā pana bhonto pare gaṇācariyā’ti."
msgstr ""

msgctxt "dn8:10.4"
msgid "Itiha, kassapa, viññū samanuyuñjantā samanugāhantā samanubhāsantā amheva tattha yebhuyyena pasaṃseyyuṃ."
msgstr ""

#. </p><p><a class="sc" id="8"></a><a class="wp" id="wp7"></a>
msgctxt "dn8:11.1"
msgid "Aparampi no, kassapa, viññū samanuyuñjantaṃ samanugāhantaṃ samanubhāsantaṃ satthārā vā satthāraṃ saṅghena vā saṅghaṃ:"
msgstr ""

msgctxt "dn8:11.2"
msgid "‘ye imesaṃ bhavataṃ dhammā kusalā kusalasaṅkhātā, anavajjā anavajjasaṅkhātā, sevitabbā sevitabbasaṅkhātā, alamariyā alamariyasaṅkhātā, sukkā sukkasaṅkhātā."
msgstr ""

msgctxt "dn8:11.3"
msgid "Ko ime dhamme anavasesaṃ samādāya vattati, samaṇo vā gotamo, pare vā pana bhonto gaṇācariyā’ti?"
msgstr ""

#. </p><p><a class="sc" id="9"></a><a class="wp" id="wp8"></a><a class="pts"
#. id="pts1.164"></a>
msgctxt "dn8:12.1"
msgid "Ṭhānaṃ kho panetaṃ, kassapa, vijjati, yaṃ viññū samanuyuñjantā samanugāhantā samanubhāsantā evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn8:12.2"
msgid "‘ye imesaṃ bhavataṃ dhammā kusalā kusalasaṅkhātā, anavajjā anavajjasaṅkhātā, sevitabbā sevitabbasaṅkhātā, alamariyā alamariyasaṅkhātā, sukkā sukkasaṅkhātā."
msgstr ""

msgctxt "dn8:12.3"
msgid "Samaṇo gotamo ime dhamme anavasesaṃ samādāya vattati, yaṃ vā pana bhonto pare gaṇācariyā’ti."
msgstr ""

msgctxt "dn8:12.4"
msgid "Itiha, kassapa, viññū samanuyuñjantā samanugāhantā samanubhāsantā amheva tattha yebhuyyena pasaṃseyyuṃ."
msgstr ""

#. </p><p><a class="sc" id="10"></a><a class="wp" id="wp9"></a>
msgctxt "dn8:13.1"
msgid "Aparampi no, kassapa, viññū samanuyuñjantaṃ samanugāhantaṃ samanubhāsantaṃ satthārā vā satthāraṃ saṅghena vā saṅghaṃ:"
msgstr ""

msgctxt "dn8:13.2"
msgid "‘ye imesaṃ bhavataṃ dhammā akusalā akusalasaṅkhātā, sāvajjā sāvajjasaṅkhātā, asevitabbā asevitabbasaṅkhātā, na alamariyā na alamariyasaṅkhātā, kaṇhā kaṇhasaṅkhātā."
msgstr ""

msgctxt "dn8:13.3"
msgid "Ko ime dhamme anavasesaṃ pahāya vattati, gotamasāvakasaṅgho vā, pare vā pana bhonto gaṇācariyasāvakasaṅghā’ti?"
msgstr ""

#. </p><p><a class="sc" id="11"></a><a class="wp" id="wp10"></a>
msgctxt "dn8:14.1"
msgid "Ṭhānaṃ kho panetaṃ, kassapa, vijjati, yaṃ viññū samanuyuñjantā samanugāhantā samanubhāsantā evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn8:14.2"
msgid "‘ye imesaṃ bhavataṃ dhammā akusalā akusalasaṅkhātā, sāvajjā sāvajjasaṅkhātā, asevitabbā asevitabbasaṅkhātā, na alamariyā na alamariyasaṅkhātā, kaṇhā kaṇhasaṅkhātā."
msgstr ""

msgctxt "dn8:14.3"
msgid "Gotamasāvakasaṅgho ime dhamme anavasesaṃ pahāya vattati, yaṃ vā pana bhonto pare gaṇācariyasāvakasaṅghā’ti."
msgstr ""

msgctxt "dn8:14.4"
msgid "Itiha, kassapa, viññū samanuyuñjantā samanugāhantā samanubhāsantā amheva tattha yebhuyyena pasaṃseyyuṃ."
msgstr ""

#. </p><p><a class="sc" id="12"></a><a class="wp" id="wp11"></a><a class="pts"
#. id="pts1.165"></a>
msgctxt "dn8:15.1"
msgid "Aparampi no, kassapa, viññū samanuyuñjantaṃ samanugāhantaṃ samanubhāsantaṃ satthārā vā satthāraṃ saṅghena vā saṅghaṃ."
msgstr ""

msgctxt "dn8:15.2"
msgid "‘Ye imesaṃ bhavataṃ dhammā kusalā kusalasaṅkhātā, anavajjā anavajjasaṅkhātā, sevitabbā sevitabbasaṅkhātā, alamariyā alamariyasaṅkhātā, sukkā sukkasaṅkhātā."
msgstr ""

msgctxt "dn8:15.3"
msgid "Ko ime dhamme anavasesaṃ samādāya vattati, gotamasāvakasaṅgho vā, pare vā pana bhonto gaṇācariyasāvakasaṅghā’ti?"
msgstr ""

#. </p><p><a class="sc" id="13"></a><a class="wp" id="wp12"></a>
msgctxt "dn8:16.1"
msgid "Ṭhānaṃ kho panetaṃ, kassapa, vijjati, yaṃ viññū samanuyuñjantā samanugāhantā samanubhāsantā evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "dn8:16.2"
msgid "‘ye imesaṃ bhavataṃ dhammā kusalā kusalasaṅkhātā, anavajjā anavajjasaṅkhātā, sevitabbā sevitabbasaṅkhātā, alamariyā alamariyasaṅkhātā, sukkā sukkasaṅkhātā."
msgstr ""

msgctxt "dn8:16.3"
msgid "Gotamasāvakasaṅgho ime dhamme anavasesaṃ samādāya vattati, yaṃ vā pana bhonto pare gaṇācariyasāvakasaṅghā’ti."
msgstr ""

msgctxt "dn8:16.4"
msgid "Itiha, kassapa, viññū samanuyuñjantā samanugāhantā samanubhāsantā amheva tattha yebhuyyena pasaṃseyyuṃ."
msgstr ""

#. </p><h2>
msgctxt "dn8:17.1"
msgid "2. Ariyaaṭṭhaṅgikamagga"
msgstr ""

#. </h2><p><a class="sc" id="14"></a><a class="wp" id="wp13"></a>
#. VAR: dakkhati → dakkhiti (bj) | dākkhīti (pts1)
msgctxt "dn8:18.1"
msgid "Atthi, kassapa, maggo atthi paṭipadā, yathāpaṭipanno sāmaññeva ñassati sāmaṃ dakkhati:"
msgstr ""

msgctxt "dn8:18.2"
msgid "‘samaṇova gotamo kālavādī bhūtavādī atthavādī dhammavādī vinayavādī’ti."
msgstr ""

msgctxt "dn8:18.3"
msgid "Katamo ca, kassapa, maggo, katamā ca paṭipadā, yathāpaṭipanno sāmaññeva ñassati sāmaṃ dakkhati:"
msgstr ""

msgctxt "dn8:18.4"
msgid "‘samaṇova gotamo kālavādī bhūtavādī atthavādī dhammavādī vinayavādī’ti?"
msgstr ""

msgctxt "dn8:18.5"
msgid "Ayameva ariyo aṭṭhaṅgiko maggo."
msgstr ""

msgctxt "dn8:18.6"
msgid "Seyyathidaṃ—"
msgstr ""

msgctxt "dn8:18.7"
msgid "sammādiṭṭhi sammāsaṅkappo sammāvācā sammākammanto sammāājīvo sammāvāyāmo sammāsati sammāsamādhi."
msgstr ""

msgctxt "dn8:18.8"
msgid "Ayaṃ kho, kassapa, maggo, ayaṃ paṭipadā, yathāpaṭipanno sāmaññeva ñassati sāmaṃ dakkhati ‘samaṇova gotamo kālavādī bhūtavādī atthavādī dhammavādī vinayavādī’”ti."
msgstr ""

#. </p><h2>
msgctxt "dn8:19.1"
msgid "3. Tapopakkamakathā"
msgstr ""

#. </h2><p><a class="sc" id="15"></a><a class="wp" id="wp14"></a><a class="pts"
#. id="pts1.166"></a>
msgctxt "dn8:20.1"
msgid "Evaṃ vutte, acelo kassapo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn8:20.2"
msgid "“imepi kho, āvuso gotama, tapopakkamā etesaṃ samaṇabrāhmaṇānaṃ sāmaññasaṅkhātā ca brahmaññasaṅkhātā ca."
msgstr ""

msgctxt "dn8:20.3"
msgid "Acelako hoti, muttācāro, hatthāpalekhano, naehibhaddantiko, natiṭṭhabhaddantiko, nābhihaṭaṃ, na uddissakataṃ, na nimantanaṃ sādiyati."
msgstr ""

msgctxt "dn8:20.4"
msgid "So na kumbhimukhā paṭiggaṇhāti, na kaḷopimukhā paṭiggaṇhāti, na eḷakamantaraṃ, na daṇḍamantaraṃ, na musalamantaraṃ, na dvinnaṃ bhuñjamānānaṃ, na gabbhiniyā, na pāyamānāya, na purisantaragatāya, na saṅkittīsu, na yattha sā upaṭṭhito hoti, na yattha makkhikā saṇḍasaṇḍacārinī, na macchaṃ, na maṃsaṃ, na suraṃ, na merayaṃ, na thusodakaṃ pivati."
msgstr ""

msgctxt "dn8:20.5"
msgid "So ekāgāriko vā hoti ekālopiko, dvāgāriko vā hoti dvālopiko …"
msgstr ""

msgctxt "dn8:20.6"
msgid "sattāgāriko vā hoti sattālopiko;"
msgstr ""

msgctxt "dn8:20.7"
msgid "ekissāpi dattiyā yāpeti, dvīhipi dattīhi yāpeti …"
msgstr ""

msgctxt "dn8:20.8"
msgid "sattahipi dattīhi yāpeti;"
msgstr ""

msgctxt "dn8:20.9"
msgid "ekāhikampi āhāraṃ āhāreti, dvīhikampi āhāraṃ āhāreti …"
msgstr ""

msgctxt "dn8:20.10"
msgid "sattāhikampi āhāraṃ āhāreti."
msgstr ""

msgctxt "dn8:20.11"
msgid "Iti evarūpaṃ addhamāsikampi pariyāyabhattabhojanānuyogamanuyutto viharati."
msgstr ""

#. </p><p><a class="sc" id="16"></a>
msgctxt "dn8:21.1"
msgid "Imepi kho, āvuso gotama, tapopakkamā etesaṃ samaṇabrāhmaṇānaṃ sāmaññasaṅkhātā ca brahmaññasaṅkhātā ca."
msgstr ""

msgctxt "dn8:21.2"
msgid "Sākabhakkho vā hoti, sāmākabhakkho vā hoti, nīvārabhakkho vā hoti, daddulabhakkho vā hoti, haṭabhakkho vā hoti, kaṇabhakkho vā hoti, ācāmabhakkho vā hoti, piññākabhakkho vā hoti, tiṇabhakkho vā hoti, gomayabhakkho vā hoti, vanamūlaphalāhāro yāpeti pavattaphalabhojī."
msgstr ""

#. </p><p><a class="sc" id="17"></a><a class="pts" id="pts1.167"></a>
msgctxt "dn8:22.1"
msgid "Imepi kho, āvuso gotama, tapopakkamā etesaṃ samaṇabrāhmaṇānaṃ sāmaññasaṅkhātā ca brahmaññasaṅkhātā ca."
msgstr ""

#. VAR: ubbhaṭṭhakopi → ubbhaṭṭhikopi (mr)
msgctxt "dn8:22.2"
msgid "Sāṇānipi dhāreti, masāṇānipi dhāreti, chavadussānipi dhāreti, paṃsukūlānipi dhāreti, tirīṭānipi dhāreti, ajinampi dhāreti, ajinakkhipampi dhāreti, kusacīrampi dhāreti, vākacīrampi dhāreti, phalakacīrampi dhāreti, kesakambalampi dhāreti, vāḷakambalampi dhāreti, ulūkapakkhikampi dhāreti, kesamassulocakopi hoti kesamassulocanānuyogamanuyutto, ubbhaṭṭhakopi hoti āsanapaṭikkhitto, ukkuṭikopi hoti ukkuṭikappadhānamanuyutto, kaṇṭakāpassayikopi hoti kaṇṭakāpassaye seyyaṃ kappeti, phalakaseyyampi kappeti, thaṇḍilaseyyampi kappeti, ekapassayikopi hoti rajojalladharo, abbhokāsikopi hoti yathāsanthatiko, vekaṭikopi hoti vikaṭabhojanānuyogamanuyutto, apānakopi hoti apānakattamanuyutto, sāyatatiyakampi udakorohanānuyogamanuyutto viharatī”ti."
msgstr ""

#. </p><h2>
msgctxt "dn8:23.1"
msgid "4. Tapopakkamaniratthakathā"
msgstr ""

#. </h2><p><a class="sc" id="18"></a><a class="wp" id="wp15"></a>
msgctxt "dn8:24.1"
msgid "“Acelako cepi, kassapa, hoti, muttācāro, hatthāpalekhano …"
msgstr ""

msgctxt "dn8:24.2"
msgid "pe …"
